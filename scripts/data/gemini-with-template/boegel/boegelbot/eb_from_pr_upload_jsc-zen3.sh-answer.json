{
    "application": "easybuild",
    "software": [
        "easybuild-framework",
        "easybuild-easyblocks",
        "easybuild-easyconfigs",
        "archspec",
        "apptainer",
        "singularity"
    ],
    "modules": [
        "${EASYBUILD_PREFIX}/modules/all"
    ],
    "environment_variables": {
        "TOPDIR": "/project/def-maintainers",
        "CONTAINER_BIND_PATHS": "--bind ${TOPDIR}/$USER --bind ${TOPDIR}/maintainers",
        "EB_PREFIX": "${HOME}/easybuild/$EB_BRANCH",
        "PYTHONPATH": "${EB_PREFIX}/easybuild-framework:${EB_PREFIX}/easybuild-easyblocks:${EB_PREFIX}/easybuild-easyconfigs",
        "PATH": "${EB_PREFIX}/easybuild-framework:${HOME}/.local/bin:${PATH}",
        "CPU_ARCH": "$(archspec cpu)",
        "OS_DISTRO": "$(source /etc/os-release; echo $ID)",
        "OS_VERSION": "$(source /etc/os-release; echo $VERSION_ID | awk -F '.' '{print $1}')",
        "EASYBUILD_PREFIX": "${TOPDIR}/${USER}/container-$(basename ${EB_CONTAINER})/${CPU_ARCH}",
        "EASYBUILD_BUILDPATH": "/tmp/${USER}",
        "EASYBUILD_SOURCEPATH": "${TOPDIR}/${USER}/sources:${TOPDIR}/maintainers/sources",
        "EASYBUILD_GITHUB_USER": "boegelbot",
        "EB_PYTHON": "python3",
        "EASYBUILD_ACCEPT_EULA_FOR": ".*",
        "EASYBUILD_HOOKS": "${HOME}/boegelbot/eb_hooks.py",
        "EASYBUILD_OPTARCH": "'Intel:march=core-avx2'",
        "EASYBUILD_CUDA_COMPUTE_CAPABILITIES": "8.0",
        "EASYBUILD_SET_GID_BIT": "1",
        "EASYBUILD_UMASK": "'022'",
        "repo_pr_arg": "'--from-pr'",
        "EASYBUILD_FAIL_ON_MOD_FILES_GCCCORE": "1",
        "EB_CMD": "eb ${repo_pr_arg} ${EB_PR} --debug --rebuild --robot --upload-test-report --download-timeout=1000",
        "CONTAINER_EXEC_CMD": "apptainer exec"
    },
    "resources": {
        "gres": "",
        "cpus_per_task": "",
        "tasks": "4",
        "ntasks_per_code": "",
        "gpus": "",
        "gpus_per_node": "",
        "cores_per_socket": "",
        "gpus_per_task": "",
        "exclusive": "",
        "cpus_per_gpu": "",
        "gpu_type": "",
        "time": "100:0:0",
        "ntasks_per_node": "",
        "nodes": "1",
        "memory": "4000M",
        "sockets_per_node": "",
        "ntasks_per_socket": "",
        "mem_per_gpu": "",
        "mem_per_cpu": "4000M",
        "gres_flags": ""
    },
    "versions": {}
}