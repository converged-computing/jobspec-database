        "CORES": "32",
        "MPI": "1",
        "OMP_NUM_THREADS": "$((CORES/MPI))",
        "OMP_PROC_BIND": "true",
        "OMP_PLACES": "threads",
        "IFS": ""
    },
    "resources": {
        "gres": "",
        "cpus_per_task": "$((CORES/MPI))",
        "tasks": "1",
        "ntasks_per_code": "1",
        "gpus": "1",
        "gpus_per_node": "1",
        "cores_per_socket": "1",
        "gpus_per_task": "1",
        "exclusive": "true",
        "cpus_per_gpu": "32",
        "gpu_type": "",
        "time": "16:00:00",
        "ntasks_per_node": "1",
        "nodes": "1",
        "memory": "",
        "sockets_per_node": "1",
        "ntasks_per_socket": "1",
        "mem_per_gpu": "",
        "mem_per_cpu": "",
        "gres_flags": ""
    },
    "versions": {
        "cuda": "11"
    }
