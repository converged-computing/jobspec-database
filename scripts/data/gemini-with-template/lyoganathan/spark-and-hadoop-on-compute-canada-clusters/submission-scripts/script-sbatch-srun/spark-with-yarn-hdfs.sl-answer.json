        "SPARK_HOME": "${HOME}/hadoop/spark-${SPARK_VERSION}",
        "SPARK_LOCAL_DIR": "$SLURM_TMPDIR/spark",
        "SPARK_ENVIRONMENT_EXTRA_PATH": "${HOME}/hadoop/python_start",
        "SPARK_JOB": "sparkpi",
        "SPARK_LOCAL_SCRATCH_DIR": "/lustre/${USER}/sparkscratch/"
