{
    "application": "deeptools",
    "software": [
        "bamPEFragmentSize",
        "computeGCBias",
        "correctGCBias",
        "bamCoverage",
        "pigz"
    ],
    "modules": [
        "python/2.7.5"
    ],
    "environment_variables": {
        "CONFIG": "config.txt",
        "BAMLIST": "all.bams.list",
        "CPU": "$SLURM_CPUS_ON_NODE",
        "N": "$SLURM_ARRAY_TASK_ID",
        "MAX": "`wc -l $BAMLIST | awk '{print $1}'`",
        "BAM": "`sed -n ${N}p $BAMLIST`",
        "BAMDIR": "aln",
        "GCBIASCORBAMDIR": "$BAMDIR/GCbiascor",
        "OUTDIR": "reports",
        "COVERAGEDIR": "coverage",
        "SAMPLING_DISTANCE": "10000",
        "FRAGMENT_LENGTH": "200",
        "EFFECTIVE_GENOME_SIZE": null,
        "PREFIX": null,
        "COVERAGEBIASDIR": "$COVERAGEDIR/GCbiasCorrect",
        "GENOME2BIT": "$GENOMEDIR/$PREFIX.2bit",
        "BAMCOVDIR": "$COVERAGEDIR/bamCoverage",
        "base": "`basename $BAM .bam`",
        "CORRECTEDBAM": "$GCBIASCORBAMDIR/$base.bam"
    },
    "resources": {
        "gres": "",
        "cpus_per_task": null,
        "tasks": null,
        "ntasks_per_code": null,
        "gpus": null,
        "gpus_per_node": null,
        "cores_per_socket": null,
        "gpus_per_task": null,
        "exclusive": null,
        "cpus_per_gpu": null,
        "gpu_type": null,
        "time": "24:00:00",
        "ntasks_per_node": null,
        "nodes": "1",
        "memory": "24G",
        "sockets_per_node": null,
        "ntasks_per_socket": null,
        "mem_per_gpu": null,
        "mem_per_cpu": null,
        "gres_flags": ""
    },
    "versions": {}
}