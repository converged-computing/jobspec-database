{
    "application": "slurm",
    "software": [
        "plink-2",
        "qpdf",
        "pdfjam",
        "pdfseparate",
        "awk",
        "sed",
        "sort",
        "gunzip",
        "join",
        "grep",
        "head",
        "cut",
        "tr",
        "xargs",
        "parallel",
        "Rscript",
        "locuszoom",
        "module",
        "sbatch",
        "convert",
        "img2pdf"
    ],
    "modules": [
        "rhel8/default-icl",
        "ceuadmin/R/4.3.3-icelake",
        "samtools/1.13/gcc/zwxn7ug3",
        "perl/5.26.3_system/gcc-8.4.1-4cl2czq",
        "libiconv/1.16/intel/64iicvbf",
        "python/3.7",
        "python/2.7"
    ],
    "environment_variables": {
        "TMPDIR": "${HPC_WORK}/work",
        "protein": "${protein}",
        "isotope": "$(head -1 ${root}/${protein}.pheno | awk -v n=${SLURM_ARRAY_TASK_ID} '{print $(n+2)}')",
        "PERL5LIB": "",
        "root": "~/Caprion/analysis/peptide/${protein}",
        "pheno": "${analysis}/peptide/${protein}/${protein}.pheno",
        "N": "$(awk 'NR==1{print NF-2}' ${pheno})",
        "all_peptides": "$(head -1 ${pheno} | cut -d' ' -f1,2 --complement)",
        "dir": "${root}/qqmanhattanlz",
        "pqtl_peptides": "$(sed '1d' ${root}/${protein}.signals | cut -f1 | sort -k1,1n | uniq)",
        "array": "$(grep -n -f <(echo ${pqtl_peptides} | tr ' ' '\n') <(echo ${all_peptides} | tr ' ' '\n') | cut -d':' -f1 | tr '\n' ',' | sed 's/.$//')",
        "batch": "{1..3}",
        "chr": "{1}",
        "bp": "{2}",
        "pqtl": "{3}",
        "metal": "${root}/METAL",
        "protein_index": "${protein_index}"
    },
    "resources": {
        "gres": null,
        "cpus_per_task": null,
        "tasks": null,
        "ntasks_per_code": null,
        "gpus": null,
        "gpus_per_node": null,
        "cores_per_socket": null,
        "gpus_per_task": null,
        "exclusive": null,
        "cpus_per_gpu": null,
        "gpu_type": null,
        "time": "12:00:00",
        "ntasks_per_node": null,
        "nodes": null,
        "memory": "28800",
        "sockets_per_node": null,
        "ntasks_per_socket": null,
        "mem_per_gpu": null,
        "mem_per_cpu": null,
        "gres_flags": null
    },
    "versions": {}
}