{
    "application": "snakemake",
    "software": [
        "snakemake",
        "python",
        "jobby",
        "dot"
    ],
    "modules": [
        "python/$PYTHONVERSION",
        "snakemake/$SNAKEMAKEVERSION"
    ],
    "environment_variables": {
        "PIPELINE_HOME": "path/to/pipeline_home",
        "WORKDIR": "path/to/output/folder",
        "GENOME": "hg38",
        "SUPPORTED_GENOMES": "hg38 mm10",
        "ESSENTIAL_FOLDERS": "workflow/scripts",
        "SNAKEFILE": "path/to/pipeline_home/workflow/Snakefile",
        "GIT_COMMIT_TAG": "commit_id\ttag",
        "VERSIONFILE": "path/to/pipeline_home/VERSION",
        "VERSION": "pipeline_version",
        "SCRIPTNAME": "path/to/script",
        "SCRIPTDIRNAME": "path/to/script/directory",
        "SCRIPTBASENAME": "script_name",
        "MODULE_STR": "module purge && module load python/$PYTHONVERSION snakemake/$SNAKEMAKEVERSION",
        "MANIFEST": "path/to/samples.tsv",
        "CLUSTER_SBATCH_CMD": "sbatch --cpus-per-task {cluster.threads} -p {cluster.partition} -t {cluster.time} --mem {cluster.mem} --job-name {cluster.name} --output {cluster.output} --error {cluster.error} --gres {cluster.gres}",
        "RETRIES": "2",
        "RERUNTRIGGERS": "--rerun-triggers mtime",
        "CONFIGFILE": "path/to/output/folder/config.yaml",
        "CLUSTERFILE": "path/to/output/folder/cluster.yaml",
        "JOBBY": "path/to/output/folder/jobby",
        "JOBBY2": "path/to/output/folder/run_jobby_on_snakemake_log",
        "RAND_STR": "random_string"
    },
    "resources": {
        "gres": "lscratch:48",
        "cpus_per_task": "2",
        "tasks": "500",
        "ntasks_per_code": null,
        "gpus": null,
        "gpus_per_node": null,
        "cores_per_socket": null,
        "gpus_per_task": null,
        "exclusive": null,
        "cpus_per_gpu": null,
        "gpu_type": null,
        "time": "96:00:00",
        "ntasks_per_node": null,
        "nodes": null,
        "memory": "40g",
        "sockets_per_node": null,
        "ntasks_per_socket": null,
        "mem_per_gpu": null,
        "mem_per_cpu": null,
        "gres_flags": ""
    },
    "versions": {
        "python": "$PYTHONVERSION",
        "snakemake": "$SNAKEMAKEVERSION"
    }
}