{
    "application": "snakemake",
    "software": [
        "singularity",
        "python",
        "snakemake"
    ],
    "modules": [
        "python/3.7",
        "snakemake",
        "singularity"
    ],
    "environment_variables": {
        "PYTHON_VERSION": "python/3.7",
        "SNAKEMAKE_VERSION": "snakemake",
        "SINGULARITY_VERSION": "singularity/3.7.4",
        "EXTRA_SINGULARITY_BINDS": "/lscratch,/data/CCBR_Pipeliner",
        "PIPELINE_HOME": "path/to/pipeline",
        "SNAKEFILE": "path/to/pipeline/workflow/Snakefile",
        "GIT_COMMIT_TAG": "commitId\ttag",
        "SCRIPTBASENAME": "path/to/script",
        "SCRIPTNAME": "path/to/script",
        "SCRIPTSDIR": "workflow/scripts",
        "ESSENTIAL_FILES": "config/config.yaml config/samples.tsv config/contrasts.tsv resources/cluster.json resources/tools.yaml",
        "ESSENTIAL_FOLDERS": "workflow/scripts",
        "WORKDIR": "path/to/output/folder",
        "SINGULARITY_BINDS": "-B /lscratch,/data/CCBR_Pipeliner,path1,path2,..."
    },
    "resources": {
        "gres": "{cluster.gres}",
        "cpus_per_task": "{cluster.threads}",
        "tasks": "500",
        "ntasks_per_code": null,
        "gpus": null,
        "gpus_per_node": null,
        "cores_per_socket": null,
        "gpus_per_task": null,
        "exclusive": null,
        "cpus_per_gpu": null,
        "gpu_type": null,
        "time": "{cluster.time}",
        "ntasks_per_node": null,
        "nodes": null,
        "memory": "{cluster.mem}",
        "sockets_per_node": null,
        "ntasks_per_socket": null,
        "mem_per_gpu": null,
        "mem_per_cpu": null,
        "gres_flags": null
    },
    "versions": {
        "python": "3.7",
        "snakemake": null,
        "singularity": "3.7.4"
    }
}