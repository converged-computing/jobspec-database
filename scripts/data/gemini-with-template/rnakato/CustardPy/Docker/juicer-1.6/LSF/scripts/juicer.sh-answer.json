{
    "application": "juicer",
    "software": [
        "bwa",
        "awk",
        "sort",
        "java",
        "split",
        "LibraryComplexity",
        "fragment.pl",
        "chimeric_blacklist.awk",
        "statistics.pl",
        "juicer_tools",
        "juicer_postprocessing.sh"
    ],
    "modules": [
        "seq/bwa/0.7.8",
        "dev/java/jdk1.7",
        "dev/cuda/7.0.28"
    ],
    "environment_variables": {
        "juicer_version": "1.5",
        "juiceDir": "/opt/juicer",
        "queue": "short",
        "queue_time": "12:00",
        "long_queue": "long",
        "long_queue_time": "168:00",
        "splitsize": "90000000",
        "read1str": "_R1",
        "read2str": "_R2",
        "groupname": "/a$(date +%s)",
        "topDir": "$(pwd)",
        "site": "MboI",
        "genomeID": "hg19",
        "shortreadend": "0",
        "about": "",
        "nofrag": "0",
        "splitdir": "${topDir}/splits",
        "donesplitdir": "${topDir}/done_splits",
        "fastqdir": "${topDir}/fastq/*_R*.fastq*",
        "outputdir": "${topDir}/aligned",
        "tmpdir": "${topDir}/HIC_tmp",
        "threads": "-t 16",
        "testname": "$(ls -l ${fastqdir} | awk 'NR==1{print $9}')",
        "skipsplit": "1",
        "read1": "${splitdir}/*${read1str}*.fastq.gz",
        "usegzip": "0",
        "ligation": "GATCGATC",
        "site_file": "${juiceDir}/restriction_sites/${genomeID}_${site}.txt",
        "genomePath": "$genomeID",
        "alloc_mem": "12000",
        "waitstring": "#BSUB -w \" done(${groupname}_fragmerge*) \"",
        "waitstring2": "#BSUB -w \" done(${groupname}_osplit) \"",
        "execstring": "bkill -J ${groupname}_clean2 ",
        "waitstring22": "-w \"done(${groupname}_rmsplit) && done(${groupname}_osplit)\"",
        "waitstring3": "#BSUB -w \" done(${groupname}_launch) \"",
        "waitstring4": "-w \"done(${groupname}_hic30)\"",
        "waitstring5": "-w \"done(${groupname}_stats) && done(${groupname}_postproc) && done(${groupname}_hic30)  && done(${groupname}_hic)\"",
        "diefinal": " -w \"exit(${groupname}_postproc) || exit(${groupname}_stats) || exit(${groupname}_hic) || exit(${groupname}_hic30) || exit(${groupname}_launch)\""
    },
    "resources": {
        "gres": "",
        "cpus_per_task": "16",
        "tasks": "",
        "ntasks_per_code": "",
        "gpus": "",
        "gpus_per_node": "",
        "cores_per_socket": "",
        "gpus_per_task": "",
        "exclusive": "",
        "cpus_per_gpu": "",
        "gpu_type": "",
        "time": "12:00",
        "ntasks_per_node": "",
        "nodes": "",
        "memory": "16000",
        "sockets_per_node": "",
        "ntasks_per_socket": "",
        "mem_per_gpu": "",
        "mem_per_cpu": "",
        "gres_flags": ""
    },
    "versions": {}
}