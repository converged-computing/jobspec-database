{
    "application": "otbcli_Mosaic",
    "software": [
        "gdalbuildvrt",
        "gdal_translate",
        "otbcli_Mosaic"
    ],
    "modules": [
        "~/bin/gdal3",
        "~/bin/orfeotoolbox.sif"
    ],
    "environment_variables": {
        "GDAL_CACHEMAX": "99999",
        "OTB_MAX_RAM_HINT": "10000",
        "file": "$(ls $IN/??.vrt   | head -$SLURM_ARRAY_TASK_ID | tail -1 )",
        "filename": "$(basename $file .vrt  )"
    },
    "resources": {
        "gres": "",
        "cpus_per_task": "1",
        "tasks": "1",
        "ntasks_per_code": "1",
        "gpus": "",
        "gpus_per_node": "",
        "cores_per_socket": "",
        "gpus_per_task": "",
        "exclusive": "",
        "cpus_per_gpu": "",
        "gpu_type": "",
        "time": "24:00:00",
        "ntasks_per_node": "1",
        "nodes": "1",
        "memory": "120G",
        "sockets_per_node": "",
        "ntasks_per_socket": "",
        "mem_per_gpu": "",
        "mem_per_cpu": "",
        "gres_flags": ""
    },
    "versions": {}
}