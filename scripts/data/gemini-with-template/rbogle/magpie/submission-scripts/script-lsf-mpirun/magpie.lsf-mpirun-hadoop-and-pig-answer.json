        "exclusive": "",
        "cpus_per_gpu": "",
        "gpu_type": "",
        "time": "<my time in hours:minutes>",
        "ntasks_per_node": "<my node count>",
        "nodes": "",
        "memory": "",
        "sockets_per_node": "",
        "ntasks_per_socket": "",
        "mem_per_gpu": "",
        "mem_per_cpu": "",
        "gres_flags": ""
    },
    "versions": {
        "HADOOP_VERSION": "2.8.0",
        "PIG_VERSION": "0.16.0"
    }
}