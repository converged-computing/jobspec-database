{
    "application": "horovod",
    "software": [
        "python",
        "horovod",
        "tensorflow",
        "mpi",
        "cmake",
        "rdkit",
        "biopython",
        "scipy",
        "dask"
    ],
    "modules": [
        "PrgEnv-cray"
    ],
    "environment_variables": {
        "SCRATCH": "/lus/scratch/jbalma",
        "CRAY_CUDA_MPS": "1",
        "CUDA_VISIBLE_DEVICES": "0,1,2,3,4,5,6,7",
        "TF_ENABLE_AUTO_MIXED_PRECISION": "1",
        "TF_FP16_CONV_USE_FP32_COMPUTE": "0",
        "TF_FP16_MATMUL_USE_FP32_COMPUTE": "0",
        "HOROVOD_FUSION_THRESHOLD": "0",
        "OMP_NUM_THREADS": "9",
        "MPI_PATH": "/usr/lib64/openmpi",
        "HOROVOD_BUILD_ARCH_FLAGS": "-mavx256",
        "HOROVOD_WITH_TENSORFLOW": "1",
        "HOROVOD_WITHOUT_PYTORCH": "1",
        "HOROVOD_WITHOUT_MXNET": "1",
        "CMAKE_CXX_COMPILER": "$MPI_CXX",
        "CMAKE_CC_COMPILER": "$MPI_CC",
        "HOROVOD_ALLOW_MIXED_GPU_IMPL": "0",
        "INSTALL_DIR": "/lus/scratch/jbalma/condenv-cuda10-pharml",
        "CUDATOOLKIT_HOME": "/usr/local/cuda-10.0"
    },
    "resources": {
        "gres": "gpu",
        "cpus_per_task": "8",
        "tasks": "32",
        "ntasks_per_code": "32",
        "gpus": "8",
        "gpus_per_node": "8",
        "cores_per_socket": "4",
        "gpus_per_task": "1",
        "exclusive": "true",
        "cpus_per_gpu": "4",
        "gpu_type": "V100",
        "time": "24:00:00",
        "ntasks_per_node": "8",
        "nodes": "4",
        "memory": "0",
        "sockets_per_node": "2",
        "ntasks_per_socket": "4",
        "mem_per_gpu": "",
        "mem_per_cpu": "",
        "gres_flags": "-C V100"
    },
    "versions": {
        "python": "3.6",
        "cudatoolkit": "10.0",
        "cudnn": "7.6.5",
        "tensorflow_gpu": "1.15"
    }
}