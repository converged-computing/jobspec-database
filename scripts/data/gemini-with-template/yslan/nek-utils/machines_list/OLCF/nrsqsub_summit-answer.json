{
    "application": "nekrs",
    "software": [
        "jsrun",
        "sbatch",
        "bsub"
    ],
    "modules": [
        "DefApps-2023",
        "xl",
        "gcc/9.1.0",
        "cmake/3.23.1",
        "cuda/11.0.3",
        "darshan-runtime"
    ],
    "environment_variables": {
        "CPUONLY": 1,
        "NEKRS_HOME": "$HOME/.local/nekrs",
        "NEKRS_CACHE_BCAST": 1,
        "NEKRS_GPU_MPI": 1,
        "XL_HOME": "$OLCF_XLC_ROOT",
        "OCCA_CXX": "$XL_HOME/bin/xlc++",
        "OCCA_CXXFLAGS": "-O3 -qarch=pwr9 -qhot",
        "OCCA_LDFLAGS": "$XL_HOME/lib/libibmc++.a",
        "OMPI_MCA_coll_ibm_collselect_mode_barrier": "failsafe",
        "PAMI_ENABLE_STRIPING": 1,
        "PAMI_IBV_ADAPTER_AFFINITY": 1,
        "PAMI_IBV_DEVICE_NAME": "mlx5_0:1,mlx5_3:1",
        "PAMI_IBV_DEVICE_NAME_1": "mlx5_3:1,mlx5_0:1",
        "OMPI_MCA_io": "romio321",
        "ROMIO_HINTS": "$(pwd)/.romio_hint",
        "NVME_HOME": "/mnt/bb/$USER/",
        "NEKRS_LOCAL_TMP_DIR": "$NVME_HOME"
    },
    "resources": {
        "gres": "gpu",
        "cpus_per_task": 21,
        "tasks": 1,
        "ntasks_per_code": 1,
        "gpus": 1,
        "gpus_per_node": 6,
        "cores_per_socket": 21,
        "gpus_per_task": 1,
        "exclusive": "",
        "cpus_per_gpu": 2,
        "gpu_type": "",
        "time": "$time",
        "ntasks_per_node": "nn",
        "nodes": "$nodes",
        "memory": "",
        "sockets_per_node": 1,
        "ntasks_per_socket": 21,
        "mem_per_gpu": "",
        "mem_per_cpu": "",
        "gres_flags": ""
    },
    "versions": {}
}