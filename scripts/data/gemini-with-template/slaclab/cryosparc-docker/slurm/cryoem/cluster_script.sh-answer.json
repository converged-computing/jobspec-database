{
    "application": "cryosparc",
    "software": [
        "nvidia-smi",
        "singularity"
    ],
    "modules": [
        "cryosparc/${CRYOSPARC_VERSION}"
    ],
    "environment_variables": {
        "LD_PRELOAD": "",
        "CUDA_VISIBLE_DEVICES": "${CUDA_VISIBLE_DEVICES}",
        "CRYOSPARC_VERSION": "${CRYOSPARC_VERSION}",
        "TMPDIR": "/scratch/${USER}/cryosparc/",
        "RUN_ARGS": "${run_args}",
        "CRYOSPARC_MASTER_HOSTNAME": "${CRYOSPARC_API_HOSTNAME}"
    },
    "resources": {
        "gres": null,
        "cpus_per_task": "{{ num_cpu }}",
        "tasks": null,
        "ntasks_per_code": null,
        "gpus": "{{ num_gpu }}",
        "gpus_per_node": null,
        "cores_per_socket": null,
        "gpus_per_task": null,
        "exclusive": null,
        "cpus_per_gpu": null,
        "gpu_type": null,
        "time": null,
        "ntasks_per_node": null,
        "nodes": 1,
        "memory": "{{ (ram_gb*1000)|int }}MB",
        "sockets_per_node": null,
        "ntasks_per_socket": null,
        "mem_per_gpu": null,
        "mem_per_cpu": null,
        "gres_flags": null
    },
    "versions": {
        "cryosparc": "${CRYOSPARC_VERSION}"
    }
}