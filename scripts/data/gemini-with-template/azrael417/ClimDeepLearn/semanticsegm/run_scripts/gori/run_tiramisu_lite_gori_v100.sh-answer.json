{
    "application": "tensorflow",
    "software": [
        "python3",
        "anaconda",
        "horovod",
        "nccl",
        "cuda",
        "tiramisu-tf"
    ],
    "modules": [
        "cuda",
        "nccl",
        "python3/3.6-anaconda-4.4"
    ],
    "environment_variables": {
        "OMP_NUM_THREADS": "40 / rankspernode",
        "OMP_PLACES": "threads",
        "OMP_PROC_BIND": "spread",
        "sruncmd": "srun --mpi=pmi2 -N ${SLURM_NNODES} -n $(( ${SLURM_NNODES} * ${rankspernode} )) -c $(( 80 / ${rankspernode} )) --cpu_bind=cores"
    },
    "resources": {
        "gres": "gpu:8",
        "cpus_per_task": "80 / rankspernode",
        "tasks": "${SLURM_NNODES} * rankspernode",
        "ntasks_per_code": "${SLURM_NNODES}",
        "gpus": "8",
        "gpus_per_node": "8",
        "cores_per_socket": null,
        "gpus_per_task": null,
        "exclusive": true,
        "cpus_per_gpu": null,
        "gpu_type": null,
        "time": "02:00:00",
        "ntasks_per_node": "${rankspernode}",
        "nodes": "${SLURM_NNODES}",
        "memory": null,
        "sockets_per_node": null,
        "ntasks_per_socket": null,
        "mem_per_gpu": null,
        "mem_per_cpu": null,
        "gres_flags": "enforce-binding"
    },
    "versions": {
        "python": "3.6",
        "anaconda": "4.4"
    }
}