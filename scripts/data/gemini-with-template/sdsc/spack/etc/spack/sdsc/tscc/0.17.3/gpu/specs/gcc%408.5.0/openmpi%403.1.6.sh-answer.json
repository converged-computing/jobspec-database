        "cpus_per_gpu": null,
        "gpu_type": null,
        "time": "48:00:00",
        "ntasks_per_node": "1",
        "nodes": "1",
        "memory": null,
        "sockets_per_node": null,
        "ntasks_per_socket": null,
        "mem_per_gpu": null,
        "mem_per_cpu": null,
        "gres_flags": null
    },
    "versions": {
        "openmpi": "3.1.6",
        "gcc": "8.5.0",
        "lustre": "2.12.8",
        "slurm": "21.08.8",
        "rdma-core": "41.0",
        "cuda": "11.2.2",
        "libiconv": "1.16",
