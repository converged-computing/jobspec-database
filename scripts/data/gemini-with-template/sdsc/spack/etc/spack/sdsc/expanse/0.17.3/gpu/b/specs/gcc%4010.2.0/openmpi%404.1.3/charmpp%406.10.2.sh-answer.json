{
    "application": "spack",
    "software": [
        "charmpp@6.10.2",
        "gcc@10.2.0",
        "openmpi@4.1.3"
    ],
    "modules": [
        "slurm",
        "gcc/10.2.0",
        "cuda/11.2.2"
    ],
    "environment_variables": {
        "LOCAL_TIME": "$(date +'%Y%m%dT%H%M%S%z')",
        "UNIX_TIME": "$(date +'%s')",
        "LOCAL_SCRATCH_DIR": "/scratch/${USER}/job_${SLURM_JOB_ID}",
        "TMPDIR": "${LOCAL_SCRATCH_DIR}",
        "SYSTEM_NAME": "expanse",
        "SPACK_VERSION": "0.17.3",
        "SPACK_INSTANCE_NAME": "gpu",
        "SPACK_INSTANCE_VERSION": "b",
        "SPACK_INSTANCE_DIR": "/cm/shared/apps/spack/${SPACK_VERSION}/${SPACK_INSTANCE_NAME}/${SPACK_INSTANCE_VERSION}",
        "SLURM_JOB_SCRIPT": "$(scontrol show job ${SLURM_JOB_ID} | awk -F= '/Command=/{print $2}')",
        "SLURM_JOB_MD5SUM": "$(md5sum ${SLURM_JOB_SCRIPT})",
        "SCHEDULER_MODULE": "slurm",
        "COMPILER_MODULE": "gcc/10.2.0",
        "CUDA_MODULE": "cuda/11.2.2",
        "SPACK_PACKAGE": "charmpp@6.10.2",
        "SPACK_COMPILER": "gcc@10.2.0",
        "SPACK_VARIANTS": "backend=ucx build-target=charm++ +cuda ~omp ~papi pmi=pmix +production ~pthreads +shared +smp ~syncft ~tcp ~tracing",
        "SPACK_DEPENDENCIES": "^openmpi@4.1.3/$(spack find --format '{hash:7}' openmpi@4.1.3 % ${SPACK_COMPILER})",
        "SPACK_SPEC": "${SPACK_PACKAGE} % ${SPACK_COMPILER} ${SPACK_VARIANTS} ${SPACK_DEPENDENCIES}"
    },
    "resources": {
        "gres": "gpu:1",
        "cpus_per_task": "10",
        "tasks": "1",
        "ntasks_per_code": null,
        "gpus": "1",
        "gpus_per_node": "1",
        "cores_per_socket": null,
        "gpus_per_task": "1",
        "exclusive": null,
        "cpus_per_gpu": "10",
        "gpu_type": null,
        "time": "02:00:00",
        "ntasks_per_node": "1",
        "nodes": "1",
        "memory": "93G",
        "sockets_per_node": null,
        "ntasks_per_socket": null,
        "mem_per_gpu": null,
        "mem_per_cpu": null,
        "gres_flags": null
    },
    "versions": {
        "charmpp": "6.10.2",
        "gcc": "10.2.0",
        "openmpi": "4.1.3",
        "spack": "0.17.3",
        "cuda": "11.2.2"
    }
}