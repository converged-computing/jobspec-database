{
    "application": "quantum-espresso",
    "software": [
        "quantum-espresso@7.0",
        "aocc@3.2.0",
        "hdf5@1.10.7",
        "openmpi@4.1.3",
        "amdlibflame@3.1",
        "amdblis@3.1",
        "amdfftw@3.1",
        "amdscalapack@3.1"
    ],
    "modules": [
        "slurm"
    ],
    "environment_variables": {
        "LOCAL_TIME": "date +'%Y%m%dT%H%M%S%z'",
        "UNIX_TIME": "date +'%s'",
        "LOCAL_SCRATCH_DIR": "/scratch/${USER}/job_${SLURM_JOB_ID}",
        "TMPDIR": "${LOCAL_SCRATCH_DIR}",
        "SYSTEM_NAME": "expanse",
        "SPACK_VERSION": "0.17.3",
        "SPACK_INSTANCE_NAME": "cpu",
        "SPACK_INSTANCE_VERSION": "b",
        "SPACK_INSTANCE_DIR": "/cm/shared/apps/spack/${SPACK_VERSION}/${SPACK_INSTANCE_NAME}/${SPACK_INSTANCE_VERSION}",
        "SLURM_JOB_SCRIPT": "scontrol show job ${SLURM_JOB_ID} | awk -F= '/Command=/{print $2}'",
        "SLURM_JOB_MD5SUM": "md5sum ${SLURM_JOB_SCRIPT}",
        "SCHEDULER_MODULE": "slurm",
        "SPACK_PACKAGE": "quantum-espresso@7.0",
        "SPACK_COMPILER": "aocc@3.2.0",
        "SPACK_VARIANTS": "~cmake ~elpa ~environ hdf5=parallel +epw ~ipo ~libxc +mpi +openmp +patch ~qmcpack +scalapack",
        "SPACK_DEPENDENCIES": "^hdf5@1.10.7/$(spack find --format '{hash:7}' hdf5@1.10.7 % ${SPACK_COMPILER} +mpi ^openmpi@4.1.3) ^amdlibflame@3.1/$(spack find --format '{hash:7}' amdlibflame@3.1 % ${SPACK_COMPILER} ~ilp64 threads=none ^amdblis@3.1 ~ilp64 threads=openmp) ^amdfftw@3.1/$(spack find --format '{hash:7}' amdfftw@3.1 % ${SPACK_COMPILER} ~mpi +openmp) ^amdscalapack@3.1/$(spack find --format '{hash:7}' amdscalapack@3.1 % ${SPACK_COMPILER})",
        "SPACK_SPEC": "${SPACK_PACKAGE} % ${SPACK_COMPILER} ${SPACK_VARIANTS} ${SPACK_DEPENDENCIES}"
    },
    "resources": {
        "gres": "",
        "cpus_per_task": "16",
        "tasks": "",
        "ntasks_per_code": "",
        "gpus": "",
        "gpus_per_node": "",
        "cores_per_socket": "",
        "gpus_per_task": "",
        "exclusive": "",
        "cpus_per_gpu": "",
        "gpu_type": "",
        "time": "48:00:00",
        "ntasks_per_node": "1",
        "nodes": "1",
        "memory": "32G",
        "sockets_per_node": "",
        "ntasks_per_socket": "",
        "mem_per_gpu": "",
        "mem_per_cpu": "",
        "gres_flags": ""
    },
    "versions": {
        "quantum-espresso": "7.0",
        "aocc": "3.2.0",
        "hdf5": "1.10.7",
        "openmpi": "4.1.3",
        "amdlibflame": "3.1",
        "amdblis": "3.1",
        "amdfftw": "3.1",
        "amdscalapack": "3.1"
    }
}