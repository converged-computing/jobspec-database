{
    "application": "slurm",
    "software": [
        "fastqc",
        "cutadapt",
        "STAR",
        "samtools",
        "salmon",
        "bwa",
        "htseq"
    ],
    "modules": [
        "vital-it",
        "UHTS/Quality_control/fastqc/0.11.7",
        "UHTS/Quality_control/cutadapt/2.5",
        "UHTS/Aligner/STAR/2.7.3a",
        "UHTS/Analysis/samtools/1.10",
        "R/3.6.1",
        "UHTS/Aligner/bwa/0.7.17",
        "UHTS/Analysis/HTSeq/0.9.1"
    ],
    "environment_variables": {
        "SALMON_SING": "singularity exec /software/singularity/containers/salmon-1.2.1-1.ubuntu18.sif",
        "CONDA_ACTIVATE": "RNAseq",
        "GENOME_DIR": "${HOME}/genomeVer/${genomeVer}",
        "WORK_DIR": "$PWD",
        "QC_DIR": "${WORK_DIR}/qc",
        "WIGtoBW_DIR": "${HOME}/mySoftware",
        "genomeFile": "${GENOME_DIR}/sequence/c_elegans.PRJNA13758.${genomeVer}.genomic.fa",
        "chromSizesFile": "$GENOME_DIR/annotation/ws235.chrom.sizes",
        "mRNAindex": "${GENOME_DIR}/sequence/${genomeVer}_mRNA_index",
        "ncRNAindex": "${GENOME_DIR}/sequence/${genomeVer}_ncRNA_index",
        "pseudoIndex": "${GENOME_DIR}/sequence/${genomeVer}_pseudogenic_index",
        "tnIndex": "${GENOME_DIR}/sequence/${genomeVer}_transposon_index",
        "rptIndex": "${GENOME_DIR}/sequence/${genomeVer}_repeats_index_${kmerSize}",
        "nThreads": "${SLURM_CPUS_PER_TASK}",
        "genomeVer": "WS275",
        "kmerSize": 15,
        "baseName": "${sampleName}_${repeatNum}_${laneNum}"
    },
    "resources": {
        "gres": "",
        "cpus_per_task": 2,
        "tasks": "82",
        "ntasks_per_code": 12,
        "gpus": "",
        "gpus_per_node": "",
        "cores_per_socket": "",
        "gpus_per_task": "",
        "exclusive": "",
        "cpus_per_gpu": "",
        "gpu_type": "",
        "time": "0-12:00:00",
        "ntasks_per_node": "",
        "nodes": "",
        "memory": "8G",
        "sockets_per_node": "",
        "ntasks_per_socket": "",
        "mem_per_gpu": "",
        "mem_per_cpu": "8G",
        "gres_flags": ""
    },
    "versions": {}
}