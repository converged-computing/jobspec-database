{
    "application": "hpl",
    "software": [
        "hpl.sh",
        "max_gpu_app_clocks.sh",
        "srun",
        "lstopo-no-graphics"
    ],
    "modules": [],
    "environment_variables": {
        "BASE_DIR": "/workspace",
        "LD_LIBRARY_PATH": "/usr/local/cuda/lib64/:$LD_LIBRARY_PATH",
        "UCX_IB_PCI_RELAXED_ORDERING": "on",
        "CUDA_DEVICE_ORDER": "PCI_BUS_ID",
        "NCCL_DEBUG": "WARN",
        "NCCL_IB_PCI_RELAXED_ORDERING": "1",
        "NCCL_TOPO_FILE": "/opt/microsoft/ndv5-topo.xml",
        "NCCL_SOCKET_IFNAME": "eth0",
        "OMPI_MCA_coll_hcoll_enable": "0",
        "OMPI_MCA_pml": "ucx",
        "OMPI_MCA_btl": "^openib,smcuda",
        "UCX_NET_DEVICES": "mlx5_ib0:1,mlx5_ib1:1,mlx5_ib2:1,mlx5_ib3:1,mlx5_ib4:1,mlx5_ib5:1,mlx5_ib6:1,mlx5_ib7:1",
        "CPU_AFFINITY": "0-11:12-23:24-35:36-47:48-59:60-71:72-83:84-95",
        "GPU_AFFINITY": "0:1:2:3:4:5:6:7",
        "MEM_AFFINITY": "0:0:0:0:1:1:1:1",
        "UCX_AFFINITY": "mlx5_ib0:mlx5_ib1:mlx5_ib2:mlx5_ib3:mlx5_ib4:mlx5_ib5:mlx5_ib6:mlx5_ib7",
        "PIN_MASK": "0,12,24,36,48,60,72,84",
        "CONT": "nvcr.io/nvidia/hpc-benchmarks:23.5",
        "MOUNT": "/opt/microsoft:/opt/microsoft,/opt/nccl-tests:/opt/nccl-tests",
        "DAT": "${BASE_DIR}/hpl-linux-x86_64/sample-dat/HPL-dgx-${SLURM_JOB_NUM_NODES}N.dat",
        "CMD": "${BASE_DIR}/hpl.sh --cpu-affinity ${CPU_AFFINITY} --gpu-affinity ${GPU_AFFINITY} --mem-affinity ${MEM_AFFINITY} --ucx-affinity ${UCX_AFFINITY} --dat ${DAT}"
    },
    "resources": {
        "gres": "gpu:8",
        "cpus_per_task": "12",
        "tasks": "$SLURM_NTASKS",
        "ntasks_per_code": "1",
        "gpus": "8",
        "gpus_per_node": "8",
        "cores_per_socket": null,
        "gpus_per_task": null,
        "exclusive": "true",
        "cpus_per_gpu": null,
        "gpu_type": null,
        "time": "00:20:00",
        "ntasks_per_node": "8",
        "nodes": "16",
        "memory": "0",
        "sockets_per_node": null,
        "ntasks_per_socket": null,
        "mem_per_gpu": null,
        "mem_per_cpu": null,
        "gres_flags": null
    },
    "versions": {}
}