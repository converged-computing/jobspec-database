{
    "application": "mpirun",
    "software": [
        "singularity",
        "openmpi",
        "ucx",
        "nccl"
    ],
    "modules": [],
    "environment_variables": {
        "PATH": "/apps/mpi/gcc/RHEL8/ucx-1.11.0/bin:/apps/mpi/gcc/RHEL8/openmpi-4.1.0-cu111-ucx1110/bin:$PATH",
        "LD_LIBRARY_PATH": "/apps/mpi/gcc/RHEL8/ucx-1.11.0/lib:/apps/mpi/gcc/RHEL8/openmpi-4.1.0-cu111-ucx1110/lib:/usr/lib64/libibverbs:/usr/lib64:/usr/lib:/usr/local:$LD_LIBRARY_PATH",
        "DEBUG": "-report-bindings -mca pml_ucx_verbose 100",
        "MCA_ARG": "-mca pml ucx -x UCX_NET_DEVICES=mlx5_0:1",
        "UCX_OPT": "-x NCCL_IB_HCA=mlx5_0:1",
        "SINGULARITY_BINDPATH": "/etc/libibverbs.d,/usr/lib64/libibverbs,/usr/include/infiniband,/usr/include/rdma,/apps,/LSF,{checkpoint_and_dataset_base_path},/usr/bin/ib*_*",
        "SINGULARITY_CONTAINLIBS": "/usr/lib64/libmlx*.so* /usr/lib64/librdmacm* /lib64/libib*.so* /usr/lib64/libnl*so* /usr/lib64/libibverbs/libmlx5-rdmav34.so",
        "GPUS_PER_NODE": "8",
        "HOSTLIST": "`echo $LSB_MCPU_HOSTS | sed s/' 8'/' '/g`",
        "NNODES": "`echo $HOSTLIST | wc -w`",
        "WORLD_SIZE": "$(($GPUS_PER_NODE*$NNODES))",
        "SINGULARITY_HOST": "$HOST:1",
        "node_rankfile": "node_rankfile.${LSB_JOBID}",
        "MASTER_ADDR": "$HOST"
    },
    "resources": {
        "gres": "gpu:a100",
        "cpus_per_task": "1",
        "tasks": null,
        "ntasks_per_code": null,
        "gpus": "8",
        "gpus_per_node": "8",
        "cores_per_socket": null,
        "gpus_per_task": null,
        "exclusive": "yes",
        "cpus_per_gpu": null,
        "gpu_type": "a100",
        "time": null,
        "ntasks_per_node": null,
        "nodes": null,
        "memory": null,
        "sockets_per_node": null,
        "ntasks_per_socket": null,
        "mem_per_gpu": null,
        "mem_per_cpu": null,
        "gres_flags": "num=8:mode=exclusive_process"
    },
    "versions": {}
}