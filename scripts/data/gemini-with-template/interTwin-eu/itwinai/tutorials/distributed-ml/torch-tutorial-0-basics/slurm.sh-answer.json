{
    "application": "slurm",
    "software": [
        "torchrun",
        "deepspeed",
        "horovod",
        "nvidia-smi",
        "python",
        "bash"
    ],
    "modules": [
        "Stages/2024",
        "GCC",
        "OpenMPI",
        "CUDA/12",
        "MPI-settings/CUDA",
        "Python",
        "HDF5",
        "PnetCDF",
        "libaio",
        "mpi4py"
    ],
    "environment_variables": {
        "DIST_MODE": "horovod, ddp, deepspeed",
        "RUN_NAME": "optional",
        "TRAINING_CMD": "required",
        "PYTHON_VENV": "optional",
        "CUDA_VISIBLE_DEVICES": "0,1,2,3",
        "OMP_NUM_THREADS": "1 or SLURM_CPUS_PER_GPU",
        "NCCL_DEBUG": "INFO (optional)",
        "MASTER_ADDR": "scontrol show hostnames \"$SLURM_JOB_NODELIST\" | head -n 1i",
        "MASTER_PORT": "29500",
        "NCCL_IB_DISABLE": "1 (optional)",
        "NCCL_SOCKET_IFNAME": "eth0 (optional)"
    },
    "resources": {
        "gres": "gpu:4",
        "cpus_per_task": "$SLURM_CPUS_PER_GPU",
        "tasks": "$SLURM_NTASKS",
        "ntasks_per_code": "1",
        "gpus": "$SLURM_GPUS_PER_NODE",
        "gpus_per_node": "$SLURM_GPUS_PER_NODE",
        "cores_per_socket": "undefined",
        "gpus_per_task": "1",
        "exclusive": "true",
        "cpus_per_gpu": "$SLURM_CPUS_PER_GPU",
        "gpu_type": "undefined",
        "time": "00:30:00",
        "ntasks_per_node": "$SLURM_GPUS_PER_NODE",
        "nodes": "$SLURM_NNODES",
        "memory": "undefined",
        "sockets_per_node": "undefined",
        "ntasks_per_socket": "undefined",
        "mem_per_gpu": "undefined",
        "mem_per_cpu": "undefined",
        "gres_flags": "gpu:4"
    },
    "versions": {}
}