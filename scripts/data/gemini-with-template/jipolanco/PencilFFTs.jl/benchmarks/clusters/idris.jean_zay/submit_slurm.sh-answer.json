{
    "application": "julia",
    "software": [
        "cmake",
        "autoconf",
        "automake",
        "fftw",
        "intel-mpi",
        "intel-compilers",
        "openmpi",
        "julia",
        "p3dfft"
    ],
    "modules": [
        "fftw/3.3.8",
        "git",
        "cmake",
        "autoconf",
        "automake",
        "intel-mpi/$intelmpi_version",
        "intel-compilers/19.1.3",
        "openmpi/$openmpi_version",
        "intel-compilers/19.1.1",
        "julia/1.5.2"
    ],
    "environment_variables": {
        "JULIA_MPI_BINARY": "system",
        "CC": "icc",
        "CXX": "icpc",
        "FC": "ifort",
        "srcdir": "$(realpath -e ../../p3dfft)",
        "builddir": "build.p3dfft.$mpi_label",
        "outdir": "results/${mpi_label}/N${resolution}",
        "outfile_jl": "$outdir/PencilFFTs.dat",
        "outfile_p3d": "$outdir/P3DFFT2.dat",
        "PENCILFFTS_BENCH_REPETITIONS": "$repetitions",
        "PENCILFFTS_BENCH_DIMENSIONS": "$resolution",
        "PENCILFFTS_BENCH_OUTPUT": "$outfile_jl"
    },
    "resources": {
        "gres": "",
        "cpus_per_task": "",
        "tasks": "$n",
        "ntasks_per_code": "",
        "gpus": "",
        "gpus_per_node": "",
        "cores_per_socket": "",
        "gpus_per_task": "",
        "exclusive": "True",
        "cpus_per_gpu": "",
        "gpu_type": "",
        "time": "1:00:00",
        "ntasks_per_node": "40",
        "nodes": "",
        "memory": "",
        "sockets_per_node": "",
        "ntasks_per_socket": "",
        "mem_per_gpu": "",
        "mem_per_cpu": "",
        "gres_flags": ""
    },
    "versions": {
        "intelmpi_version": "2019.9",
        "openmpi_version": "4.0.5"
    }
}