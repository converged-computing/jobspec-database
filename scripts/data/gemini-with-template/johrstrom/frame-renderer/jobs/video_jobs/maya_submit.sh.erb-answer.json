{
    "application": "maya",
    "software": [
        "singularity",
        "ruby",
        "maya",
        "convert"
    ],
    "modules": [
        "singularity/current",
        "ruby",
        "project/kent",
        "maya/2020-kent",
        "project/accad",
        "maya/2020-accad"
    ],
    "environment_variables": {
        "JOB_TMPDIR": "TMPDIR",
        "BIND_DIRS": "JOB_TMPDIR:/tmp",
        "TMPDIR": "/tmp",
        "UTIL_FILE": "JOB_TMPDIR/utils.rb",
        "TASK_START_FRAME": "START_FRAMES[$PBS_ARRAYID]",
        "TASK_END_FRAME": "END_FRAMES[$PBS_ARRAYID]"
    },
    "resources": {
        "nodes": "1",
        "cpus_per_task": "<%= cores %>",
        "tasks": "PBS_ARRAYID",
        "time": ""
    },
    "versions": {
        "maya": "2020"
    }
}