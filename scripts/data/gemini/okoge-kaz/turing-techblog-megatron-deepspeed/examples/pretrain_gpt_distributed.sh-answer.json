{
    "application": "SLURM",
    "details": {
        "software": [
            "cuda/11.7",
            "cudnn/cuda-11.x/8.9.0",
            "nccl/cuda-11.7/2.14.3",
            "openmpi/4.0.5",
            "python",
            "torch",
            "torch.distributed",
            "pretrain_gpt.py"
        ],
        "resources": {
            "gpu": "DGX-A100",
            "gpu_count": 8,
            "memory": "unknown",
            "cpu": "unknown"
        },
        "environment": {
            "conda_env": ".env"
        },
        "parameters": {
            "job_name": "gpt",
            "time": "1-00:00:00",
            "output": "outputs/%j.out",
            "error": "errors/%j.err",
            "data_path": "dataset/BookCorpusDataset_text_document",
            "checkpoint_path": "checkpoints/gpt2_345m/8gpu",
            "distributed_args": {
                "nproc_per_node": 8,
                "nnodes": 1,
                "node_rank": 0,
                "master_addr": "localhost",
                "master_port": 6000
            },
            "model_parameters": {
                "num_layers": 24,
                "hidden_size": 1024,
                "num_attention_heads": 16,
                "micro_batch_size": 8,
                "global_batch_size": 64,
                "seq_length": 1024,
                "max_position_embeddings": 1024,
                "train_iters": 500000,
                "lr_decay_iters": 320000,
                "vocab_file": "dataset/gpt2-vocab.json",
                "merge_file": "dataset/gpt2-merges.txt",
                "data_impl": "mmap",
                "split": "949,50,1",
                "distributed_backend": "nccl",
                "lr": 0.00015,
                "lr_decay_style": "cosine",
                "min_lr": 1e-05,
                "weight_decay": 0.01,
                "clip_grad": 1.0,
                "lr_warmup_fraction": 0.01,
                "log_interval": 100,
                "save_interval": 10000,
                "eval_interval": 1000,
                "eval_iters": 10
            }
        }
    }
}