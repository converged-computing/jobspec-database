{
    "application": "CMake",
    "details": {
        "environment": {
            "modules": [
                "PrgEnv-intel",
                "daint-gpu",
                "cudatoolkit",
                "CMake/3.14.5",
                "gcc"
            ],
            "system": "CrayLinuxEnvironment",
            "build_tag": "${BUILD_TAG}",
            "scratch_dir": "${SCRATCH}",
            "workspace": "${WORKSPACE}",
            "stage_name": "${STAGE_NAME}"
        },
        "resources": {
            "nodes": 1,
            "tasks_per_node": 4,
            "cpus_per_task": 3,
            "tasks_per_core": 1
        },
        "libraries": {
            "blas": "-lsci_intel_mpi_mp",
            "lapack": "-lsci_intel_mpi_mp"
        },
        "build_options": {
            "cuda": true,
            "gpu": "P100",
            "mpi_ranks": "${SLURM_NTASKS}",
            "omp_threads": "${SLURM_CPUS_PER_TASK}",
            "verbose": true
        }
    }
}