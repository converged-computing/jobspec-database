{
    "application": "IOR",
    "details": {
        "software": [
            "gcc",
            "openmpi",
            "IOR"
        ],
        "resource_requirements": {
            "nodes": 1,
            "cores": 15,
            "queue": "medium",
            "exclusive": true,
            "output": "slurm/%j.out",
            "error": "slurm/%j.err",
            "transfer_size": "${tr_size}k",
            "block_size": "4g",
            "write_file": true,
            "reorder_tasks": true,
            "file_per_process": true,
            "test_file": "$working_directory/$outdir/log/$SLURM_NTASKS.bin"
        }
    }
}