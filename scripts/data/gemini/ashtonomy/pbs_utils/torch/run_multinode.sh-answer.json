            "nodes": 2,
            "cpus_per_node": 40,
            "gpus_per_node": 2,
            "gpu_model": "a100",
            "memory": "245gb",
            "walltime": "72:00:00"
        },
        "software_requirements": {
            "cuda": "11.6.2-gcc/9.5.0",
            "nccl": "2.11.4-1-gcc/9.5.0-cu11_6-nvP-nvV-nvA",
            "openmpi": "4.1.3-gcc/9.5.0-cu11_6-nvP-nvV-nvA-ucx",
            "anaconda3": "2022.05-gcc/9.5.0",
            "conda_environment": "<your_conda_env_name_here>"
        },
        "launch_script": "${PBS_O_WORKDIR}/run.sh",
        "command": "pbsdsh -- bash \"${PBS_O_WORKDIR}/run.sh\" $HOSTNAME $ENV_NAME $nnodes $ngpus \"./run_mlm.py --model_name $model_name --dataset_names bookcorpus --output_dir ${OUTPUT_DIR} --batch_size 4 --n_cpu $ncpus --do_train --do_eval --group_by_size --grad_accumulation_steps 16\""
    }
