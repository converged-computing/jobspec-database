{
    "application": "Slurm",
    "details": {
        "resource_allocation": {
            "memory": "{job.params.memory}",
            "walltime": "{job.params.walltime}",
            "nodes": "{job.params.nodes}",
            "cores": "{job.params.cores}",
            "gres": "{job.params.gres}"
        },
        "environment_variables": {
            "QT_QPA_PLATFORM": "offscreen",
            "DISPLAY": "0.0",
            "PYTHONUNBUFFERED": "1",
            "gpu": "$CUDA_VISIBLE_DEVICES"
        },
        "output_logging": "{job.params.logdir}/%j-%x.out",
        "job_name": "{job.rule}",
        "execution": "{exec_job}"
    }
}