{
    "application": "SLURM",
    "details": {
        "account": "slai",
        "nodes": 4,
        "tasks": 16,
        "tasks_per_node": 4,
        "cpus_per_task": 12,
        "output_file": "job.out",
        "error_file": "job.err",
        "time_limit": "1:30:00",
        "partition": "booster",
        "gres": "gpu:4",
        "modules": [
            "Stages/2023",
            "GCC",
            "OpenMPI",
            "CUDA",
            "imkl",
            "CMake",
            "Boost",
            "git"
        ],
        "environment_variables": [
            "SRUN_CPUS_PER_TASK",
            "OMP_NUM_THREADS"
        ],
        "executable": "../ChASE/build/examples/2_input_output/2_input_output_mgpu",
        "arguments": [
            "--n 115459",
            "--nev 1200",
            "--nex 400",
            "--path_in=${DATA_PATH}/In2O3-115k/mat.bin",
            "--complex 1",
            "--opt ${OPT}",
            "--mode R",
            "--deg 20",
            "--lanczosIter 40",
            "--numLanczos 10",
            "--tol 1e-10"
        ],
        "execution_options": [
            "--threads-per-core=1"
        ]
    }
}