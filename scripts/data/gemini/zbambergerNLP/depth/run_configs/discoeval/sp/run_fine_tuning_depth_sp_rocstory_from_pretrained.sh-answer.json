{
    "application": "SLURM",
    "details": {
        "scheduler": "SLURM",
        "resources": {
            "nodes": 1,
            "gpus": 2,
            "cpus_per_task": 32
        },
        "queue": "nlp",
        "partition": "nlp",
        "nodes_list": "nlp-ada-2,nlp-a40-1",
        "output_file": "fine_tuning_runs/slurm_%N_%j_out.txt",
        "error_file": "fine_tuning_runs/slurm_%N_%j_err.txt",
        "mail_type": "fail",
        "mail_user": "zachary@campus.technion.ac.il",
        "environment": {
            "virtual_environment": ".depth/bin/activate",
            "DS_SKIP_CUDA_CHECK": 1,
            "OMP_NUM_THREADS": "$SLURM_CPUS_PER_TASK"
        },
        "software": {
            "deepspeed": "Deepspeed",
            "nvidia-smi": "NVIDIA System Management Interface",
            "train_encoder_decoder.py": "Training Script"
        }
    }
}