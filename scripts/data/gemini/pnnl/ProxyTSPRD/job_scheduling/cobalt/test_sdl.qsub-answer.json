{
    "application": "pytorch_mnist",
    "details": {
        "framework": "PyTorch",
        "distribution": "Distributed Data Parallel (DDP)",
        "resource_requirements": {
            "nodes": 2,
            "time": "0:20:00",
            "queue": "full-node",
            "attributes": "pubnet",
            "gpu_per_node": 8,
            "conda_env": "pytorch"
        },
        "run_command": "mpirun -n $N_RANKS -hostfile ${COBALT_NODEFILE} -map-by node python pytorch_mnist.py --device gpu --epochs 32"
    }
}