{
    "application": "bwpy",
    "details": {
        "modules": [
            "bwpy/0.3.2",
            "bwpy-mpi"
        ],
        "libraries": [
            "python-mpi"
        ],
        "resources": {
            "nodes": "16",
            "cores_per_node": "16",
            "walltime": "04:00:00",
            "queue": "high",
            "flags": "commtransparent"
        },
        "environment_variables": {
            "CRAY_CUDA_MPS": "1",
            "CUDA_VISIBLE_DEVICES": "-1",
            "OMP_NUM_THREADS": "4"
        },
        "command": "bwpy-environ -- python-mpi ${PBS_O_WORKDIR}/../BWDistributedTrain/inception_imagenet_distributed_train.py --data_dir $DATA_DIR/train --num_steps $NUM_STEPS --num_train_examples 385455 --batch_size ${BATCH_SIZE} --initial_learning_rate 0.01 --checkpoint_dir checkpoint_dir${UNIQUE_CHECKPOINT_NAME}",
        "execution": "aprun -b -cc none -n ${NUM_NODES} -N 2 -- $RUN_CMD"
    }
}