{
    "application": "guppy",
    "details": {
        "slurm_gres": "gpu:tesla:1",
        "slurm_partition": "gpu",
        "slurm_nodes": 1,
        "slurm_tasks": 1,
        "slurm_cpus": 4,
        "slurm_memory": "4G",
        "guppy_options": {
            "qscore_filtering": true,
            "trim_strategy": "none",
            "verbose_logs": true,
            "compress_fastq": true,
            "fast5_out": true,
            "recursive": true,
            "num_callers": 4,
            "gpu_runners_per_device": 3,
            "cpu_threads_per_caller": 1,
            "device": "auto"
        },
        "resources": {
            "gpu": "Tesla",
            "modules": [
                "guppy"
            ]
        },
        "arguments": [
            "Input folder (recursive)",
            "Output folder",
            "Kit",
            "Flow cell type",
            "model"
        ]
    }
}