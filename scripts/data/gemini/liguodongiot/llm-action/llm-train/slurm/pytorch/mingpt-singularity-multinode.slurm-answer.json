{
    "application": "SLURM",
    "details": {
        "job_name": "multinode-example",
        "partition": "a800",
        "output_log": "log/%j.out",
        "error_log": "log/%j.err",
        "nodes": 2,
        "tasks": 2,
        "gpus_per_node": 4,
        "cpus_per_task": 4,
        "singularity_image": "pytorch-multinode.sif",
        "python_script": "main.py",
        "environment_variables": {
            "NCCL_IB_DISABLE": 1,
            "NCCL_SOCKET_IFNAME": "bond0"
        },
        "other_requirements": [
            "MPI (pmix_v3)",
            "NVIDIA GPUs"
        ]
    }
}