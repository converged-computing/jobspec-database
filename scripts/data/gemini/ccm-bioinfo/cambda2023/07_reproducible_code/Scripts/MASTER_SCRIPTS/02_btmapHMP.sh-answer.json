{
    "application": "SLURM",
    "details": {
        "software": [
            "bowtie2",
            "samtools",
            "xz"
        ],
        "resources": {
            "nodes": 1,
            "cores": 12,
            "memory": "18G",
            "time": "0-06:00:00",
            "partition": "shared",
            "array": "0-$hiBatch%$numBatches",
            "job_name": "bt-$site",
            "output": "odyssey_bt-$site-%a.out",
            "error": "odyssey_bt-$site-%a.err",
            "mail_type": "NONE"
        },
        "files": [
            "hmp_all_$site/*",
            "bt_mapped_${prefix}_$site/",
            "batches_$site/$site-*",
            "bt-$site-array.sh",
            "odyssey_bt-$site-%a.out",
            "odyssey_bt-$site-%a.err"
        ],
        "data_format": "fastq.gz",
        "output_format": "bam"
    }
}