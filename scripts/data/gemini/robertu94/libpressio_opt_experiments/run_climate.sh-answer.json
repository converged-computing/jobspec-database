{
    "application": "PBS",
    "details": {
        "resource_requirements": {
            "nodes": 4,
            "cores_per_node": 40,
            "memory": "372GB",
            "mpi_processes": 40,
            "walltime": "24 hours"
        },
        "email": "robertu@clemson.edu",
        "email_options": {
            "begin": true,
            "abort": true,
            "end": true
        },
        "job_name": "run_climate",
        "working_directory": "~/projects/libpressio_opt_experiments/",
        "environment_setup": {
            "spack_path": "~/git/spack",
            "activated_environment": "."
        },
        "script_execution": {
            "executable": "run_climate.py",
            "arguments": [
                "--search_progress",
                "--n_proc",
                "${procs}",
                "--target",
                "7.3"
            ],
            "loop_range": {
                "start": 2,
                "step": 10,
                "end": 150
            },
            "loop_variable": "procs"
        }
    }
}