{
    "application": "WARPX",
    "software": [
        "CrayPE",
        "PrgEnv-cray",
        "CCE-GPU",
        "amd-mixed",
        "MPICH",
        "Libfabric",
        "rocFFT"
    ],
    "resource_requirements": {
        "cluster": "SLURM",
        "account": "<account_to_charge>",
        "job_name": "warpx",
        "nodes": 2,
        "exclusive": true,
        "time": "00:10:00",
        "constraint": "MI250",
        "architecture": "craype-accel-amd-gfx90a craype-x86-trento",
        "compiler": "PrgEnv-cray",
        "mpi_processes_per_node": 8,
        "threads_per_core": 1,
        "gpu_binding": "closest",
        "environment_variables": [
            "MPICH_GPU_SUPPORT_ENABLED=1",
            "FI_MR_CACHE_MONITOR=memhooks",
            "ROCFFT_RTC_CACHE_PATH=/dev/null",
            "OMP_NUM_THREADS=1",
            "WARPX_NMPI_PER_NODE=8",
            "TOTAL_NMPI=$(( ${SLURM_JOB_NUM_NODES} * ${WARPX_NMPI_PER_NODE} ))"
        ]
    }
}