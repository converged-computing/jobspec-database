{
    "application": "SLURM",
    "details": {
        "software": [
            "Nextflow",
            "SLURM"
        ],
        "resource_requirements": {
            "nodes": 1,
            "tasks_per_node": 1,
            "cpus_per_task": 2,
            "memory": "4G",
            "time": "estimatedRuntime-00:00:00",
            "job_name": "slurmsub.${pipelineStep}.${runId}",
            "output_file": "slurmsub.${pipelineStep}.${runId}.txt",
            "error_file": "slurmsub.${pipelineStep}.${runId}.err"
        },
        "environment_variables": [
            "NXF_ANSI_LOG=false",
            "NXF_OPTS=\"-Xms500M -Xmx2G -Dleveldb.mmap=false\""
        ]
    }
}