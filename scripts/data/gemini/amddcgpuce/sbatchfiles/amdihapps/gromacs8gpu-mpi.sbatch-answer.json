{
    "application": "Slurm",
    "details": {
        "resource_requirements": {
            "nodes": 1,
            "tasks_per_node": 8,
            "cpus_per_task": 16,
            "memory": 0,
            "gpus": 8
        },
        "software": {
            "module_system": "Lmod",
            "modules": [
                "rocm-5.4.3",
                "gromacs_2022.3.amd1_174"
            ],
            "container": {
                "type": "Singularity",
                "image": "/shared/apps/bin/gromacs_2022.3.amd1_174.sif"
            },
            "mpi_library": "mpirun"
        },
        "benchmark": {
            "name": "STMV",
            "location": "/benchmarks/stmv/stmv.tar.gz",
            "parameters": {
                "steps": 100000,
                "reset_step": 90000,
                "omp_threads": 8,
                "nonbonded_method": "gpu",
                "bonded_method": "cpu",
                "pme_method": "gpu",
                "pme_ranks": 1,
                "gpu_ids": "01234567"
            }
        },
        "work_directory": "/tmp/$USER/gpu8-$$",
        "output_files": [
            "%x-%N-%j.err",
            "%x-%N-%j.out",
            "gpu8-$$-$SLURM_JOB_NODELIST-$SLURM_JOB_ID"
        ]
    }
}