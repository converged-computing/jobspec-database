{
    "application": "fastcpc",
    "details": {
        "software": [
            "micromamba",
            "accelerate",
            "python",
            "fastcpc",
            "triton"
        ],
        "resources": {
            "slurm": {
                "nodes": 1,
                "ntasks_per_node": 1,
                "cpus_per_task": 40,
                "gres": "gpu:4",
                "time": "20:00:00"
            },
            "environment_variables": [
                "TRITON_CACHE_DIR",
                "CUDA_LAUNCH_BLOCKING",
                "NCCL_DEBUG"
            ],
            "accelerate_config_file": "accelerate.yaml"
        }
    }
}