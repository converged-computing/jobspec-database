{
    "application": "hopper",
    "other_software": [
        "cctbx",
        "srun",
        "sbcast",
        "tar",
        "mkdir",
        "cd"
    ],
    "resource_requirements": {
        "nodes": 256,
        "cores": 4096,
        "threads": 128,
        "walltime": "02:00:00",
        "queue": "batch",
        "allocation": "CHM137",
        "scratch_folder": "$SCRATCH/cry11ba/$SLURM_JOB_ID",
        "modules": [
            "psii_spread/merging/application",
            "exafel_project/kpp-sim"
        ],
        "environment_variables": {
            "CCTBX_DEVICE_PER_NODE": "1",
            "N_START": "0",
            "LOG_BY_RANK": "1",
            "RANK_PROFILE": "0",
            "ADD_BACKGROUND_ALGORITHM": "cuda",
            "DEVICES_PER_NODE": "1",
            "MOS_DOM": "25",
            "CCTBX_NO_UUID": "1",
            "DIFFBRAGG_USE_KOKKOS": "1",
            "CUDA_LAUNCH_BLOCKING": "1",
            "NUMEXPR_MAX_THREADS": "128",
            "SLURM_CPU_BIND": "cores",
            "OMP_PROC_BIND": "spread",
            "OMP_PLACES": "threads",
            "SIT_PSDM_DATA": "/global/cfs/cdirs/lcls/psdm-sauter",
            "CCTBX_GPUS_PER_NODE": "1",
            "XFEL_CUSTOM_WORKER_PATH": "$MODULES/psii_spread/merging/application",
            "SCRATCH_FOLDER": "$SCRATCH/cry11ba/$SLURM_JOB_ID",
            "CCTBX_ZIP_FILE": "alcc-recipes2.tar.gz"
        }
    }
}