{
    "application": "hopper",
    "other_software": [
        "sbcast",
        "tar",
        "srun"
    ],
    "resource_requirements": {
        "nodes": 512,
        "cores_per_node": 3,
        "wall_time": "02:00:00",
        "queue": "batch",
        "allocation": "CHM137",
        "scratch_folder": "$SCRATCH/cytochrome/$SLURM_JOB_ID",
        "mtz_path": "$SCRATCH/cytochrome/${1}/out/ly99sim_all.mtz",
        "spec_path": "$SCRATCH/cytochrome/${2}_integ_exp_ref.txt",
        "cctbx_zip_file": "alcc-recipes2.tar.gz",
        "modules": [
            "psii_spread",
            "exafel_project"
        ],
        "environment_variables": [
            "CCTBX_DEVICE_PER_NODE",
            "N_START",
            "LOG_BY_RANK",
            "RANK_PROFILE",
            "ADD_BACKGROUND_ALGORITHM",
            "DEVICES_PER_NODE",
            "MOS_DOM",
            "CCTBX_NO_UUID",
            "DIFFBRAGG_USE_KOKKOS",
            "CUDA_LAUNCH_BLOCKING",
            "NUMEXPR_MAX_THREADS",
            "SLURM_CPU_BIND",
            "OMP_PROC_BIND",
            "OMP_PLACES",
            "SIT_PSDM_DATA",
            "CCTBX_GPUS_PER_NODE",
            "XFEL_CUSTOM_WORKER_PATH",
            "SCRATCH_FOLDER",
            "MTZ_PATH",
            "SPEC_PATH"
        ]
    }
}