{
    "application": "hopper",
    "details": {
        "resources": {
            "nodes": 4,
            "tasks_per_node": 16,
            "gpus_per_node": 4,
            "cpus_per_gpu": 4,
            "scratch_folder": "/scratch/yb_lyso/$SLURM_JOB_ID",
            "mtz_path": "/scratch/yb_lyso/${1}/ground_truth.mtz",
            "spec_path": "/scratch/yb_lyso/${2}_integ_exp_ref.txt"
        },
        "environment_variables": {
            "CCTBX_DEVICE_PER_NODE": "1",
            "N_START": "0",
            "LOG_BY_RANK": "1",
            "RANK_PROFILE": "0",
            "ADD_BACKGROUND_ALGORITHM": "cuda",
            "DEVICES_PER_NODE": "1",
            "MOS_DOM": "25",
            "CCTBX_NO_UUID": "1",
            "DIFFBRAGG_USE_KOKKOS": "1",
            "CUDA_LAUNCH_BLOCKING": "1",
            "NUMEXPR_MAX_THREADS": "128",
            "SLURM_CPU_BIND": "cores",
            "OMP_PROC_BIND": "spread",
            "OMP_PLACES": "threads",
            "SIT_PSDM_DATA": "/global/cfs/cdirs/lcls/psdm-sauter",
            "CCTBX_GPUS_PER_NODE": "1",
            "XFEL_CUSTOM_WORKER_PATH": "$MODULES/psii_spread/merging/application"
        },
        "configuration_file": "stage1.phil",
        "command": "hopper stage1.phil structure_factors.mtz_name=\"$MTZ_PATH\" exp_ref_spec_file=\"$SPEC_PATH\"",
        "time_limit": "00:20:00"
    }
}