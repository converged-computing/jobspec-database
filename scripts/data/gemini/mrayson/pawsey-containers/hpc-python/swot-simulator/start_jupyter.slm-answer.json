{
    "application": "Jupyter Notebook",
    "software": [
        "Singularity",
        "Docker",
        "Jupyter Notebook",
        "SLURM",
        "OpenMP"
    ],
    "resources": [
        "CPU",
        "Memory",
        "Storage",
        "Network",
        "Singularity Container Image"
    ],
    "details": {
        "slurm": {
            "account": "pawsey0106",
            "partition": "work",
            "tasks": 1,
            "cpus_per_task": 8,
            "time": "08:00:00",
            "job_name": "swotsim_notebook"
        },
        "singularity": {
            "image": "docker://mrayson/swot_simulator:latest",
            "bind_paths": [
                "$MYSOFTWARE:$MYSOFTWARE",
                "$MYSCRATCH:$MYSCRATCH",
                "/run:/run",
                "$HOME:$HOME"
            ],
            "environment_variables": [
                "SINGULARITYENV_PREPEND_PATH=/srv/conda/envs/notebook/bin:/srv/conda/condabin:/srv/conda/bin",
                "SINGULARITYENV_XDG_DATA_HOME=$MYSCRATCH/.local",
                "SINGULARITYENV_OMP_NUM_THREADS=8",
                "SINGULARITYENV_OMP_PROC_BIND=close",
                "SINGULARITYENV_OMP_PLACES=cores"
            ]
        },
        "jupyter": {
            "port": 8888,
            "notebook_dir": "$1"
        },
        "dask": {
            "port": 8787
        }
    }
}