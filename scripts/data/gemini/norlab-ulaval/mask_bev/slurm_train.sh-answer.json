{
    "application": "SLURM",
    "details": {
        "resource_requirements": {
            "gpu": 1,
            "cpus_per_task": 16,
            "ntasks": 4,
            "time": "4-00:00"
        },
        "software": {
            "docker": {
                "image": "mask_bev",
                "volumes": [
                    {
                        "source": "$(pwd)",
                        "target": "/app/"
                    },
                    {
                        "source": "$(pwd)/data/SemanticKITTI",
                        "target": "/app/data/SemanticKITTI"
                    },
                    {
                        "source": "$(pwd)/data/KITTI",
                        "target": "/app/data/KITTI"
                    },
                    {
                        "source": "$(pwd)/data/Waymo",
                        "target": "/app/data/Waymo"
                    },
                    {
                        "source": "/dev/shm",
                        "target": "/dev/shm"
                    }
                ],
                "environment_variables": {
                    "CUDA_VISIBLE_DEVICES": "$CUDA_VISIBLE_DEVICES"
                },
                "command": "python3.10 train_mask_bev.py --config $CONFIG"
            }
        }
    }
}