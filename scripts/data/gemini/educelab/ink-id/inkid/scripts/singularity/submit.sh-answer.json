{
    "application": "SLURM",
    "details": {
        "resource_manager": "SLURM",
        "container_runtime": "Singularity",
        "container_image": "inkid.sif",
        "overlay": "inkid.overlay",
        "gpu_requirement": "1 GPU",
        "application_command": "inkid-train-and-predict",
        "additional_arguments": [
            "@*",
            "--cross-validate-on $SLURM_ARRAY_TASK_ID"
        ],
        "module_requirement": "ccs/singularity",
        "environment_variables": [
            "SINGULARITY_BIND='/share/singularity/bin'",
            "SINGULARITYENV_PREPEND_PATH='/share/singularity/bin'"
        ]
    }
}