{
    "application": "MarianMT",
    "details": {
        "software": [
            "SLURM",
            "Python 3.7",
            "CUDA 10.1",
            "MarianMT"
        ],
        "resources": {
            "nodes": 1,
            "gpus": 4,
            "partition": "pascal",
            "time": "24:00:00",
            "output": "logs/slurm-%x_%j.out"
        },
        "environment": {
            "modules": [
                "rhel7/default-peta4",
                "python/3.7",
                "cuda/10.1"
            ],
            "virtual_environment": "./venv"
        },
        "dependencies": {
            "data": [
                "data/$L1-$L2",
                "data/$L2-$L1"
            ],
            "configuration": "config/base.yml"
        }
    }
}