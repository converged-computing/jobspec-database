{
    "application": "mpi_bitweights",
    "details": {
        "environment": "desi_environment.sh",
        "python_path": "$HOME/LSS/py",
        "mpi_nodes": 32,
        "mpi_cores_per_node": 8,
        "cpu_binding": "cores",
        "input_files": [
            "inputfolder/targ.fits",
            "inputfolder/tiles.fits"
        ],
        "output_format": "fits",
        "output_directory": "outputfolder",
        "realizations": 128,
        "openmp_settings": {
            "num_threads": 1,
            "places": "threads",
            "proc_bind": "spread"
        },
        "slurm_settings": {
            "nodes": 1,
            "partition": "regular",
            "job_name": "bitweights",
            "mail_user": "your@email.com",
            "mail_type": "ALL",
            "time_limit": "1:00:00"
        }
    }
}