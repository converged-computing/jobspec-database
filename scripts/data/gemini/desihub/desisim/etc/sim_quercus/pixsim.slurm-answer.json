{
    "application": "pixsim",
    "software": [
        "pixsim",
        "srun",
        "slurm"
    ],
    "resources": [
        "nodes: 150",
        "time: 00:30:00",
        "cpu_per_core: 2",
        "node_cores: 24",
        "node_thread: 12",
        "node_depth: 24",
        "procs: 900",
        "OMP_NUM_THREADS: 12",
        "OMP_PLACES: threads",
        "OMP_PROC_BIND: spread",
        "TMPDIR: /dev/shm",
        "DESI_SPECTRO_SIM: ${SCRATCH}/desi/sim",
        "PIXPROD: quercus",
        "DESI_SPECTRO_DATA: ${SCRATCH}/desi/sim/quercus"
    ]
}