{
    "application": "LSF",
    "details": {
        "software": [
            "ustacks",
            "bsub",
            "bmonitor"
        ],
        "resource_requirements": {
            "memory": "2000000",
            "cores": 3,
            "queue": "priority",
            "output_log": "$logs/ustacks/UST_COV${M}MM${MM}_${j}_STDOUT.log",
            "error_log": "$logs/ustacks/UST_COV${M}MM${MM}_${j}_STDERR.log"
        },
        "dependencies": "src/misc/dependencies.sh",
        "other": {
            "job_manager": "src/misc/jobs_manager.sh",
            "parallel_jobs": 100,
            "input_reads": "$reads/*.fq*",
            "output_dir": "$out_dir",
            "logs_dir": "$logs/ustacks"
        }
    }
}