{
    "application": "BWA",
    "details": {
        "software": [
            "BWA",
            "samtools",
            "perl",
            "jobs_manager.sh"
        ],
        "resources": {
            "memory": "64GB",
            "threads": 4,
            "disk": "not specified",
            "queue": "normal",
            "modules": [
                "UHTS/Aligner/bwa/0.7.13",
                "UHTS/Analysis/samtools/1.3"
            ]
        },
        "input": {
            "reads": "raw/HYI-[0-9]*_R[12]*.fastq.gz",
            "reference_genome": "IDX"
        },
        "output": {
            "mapped_reads": "mapped/bam/[sample]-uniq.sorted.bam",
            "mapping_statistics": "mapped/split_summary.log"
        }
    }
}