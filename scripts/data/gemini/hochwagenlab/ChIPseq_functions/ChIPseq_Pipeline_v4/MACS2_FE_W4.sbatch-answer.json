            "macs2/intel/2.1.1",
            "samtools/intel/1.3.1",
            "python3/intel/3.5.3"
        ],
        "resource_requirements": {
            "nodes": 1,
            "memory": "20GB",
            "time": "1:00:00",
            "output_file": "/scratch/%u/%x_%j.out"
        },
        "dependencies": [
            "Bedgraph2VariableStepWiggle.py"
