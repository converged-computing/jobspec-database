{
    "application": "WIEN2k",
    "software": [
        "WIEN2k",
        "tcsh",
        "qsub",
        "lapw0",
        "lapw1",
        "lapw2",
        "x_lapw"
    ],
    "resource_requirements": {
        "queue": {
            "default": "high",
            "options": [
                "low",
                "high",
                "local"
            ]
        },
        "walltime": {
            "default": "960:00:00",
            "unit": "hours"
        },
        "nodes": {
            "default": 1
        },
        "processes_per_node": {
            "default": 1
        },
        "mpi": {
            "default": 1,
            "negative_value_meaning": "disable lapw0mpi"
        },
        "threads": {
            "default": 1
        },
        "scratch_space": {
            "default": "$SCRATCH",
            "environment_variable": "SCRATCH"
        },
        "additional_resources": {
            "environment_variable": "resources",
            "description": "c.f. qsub"
        }
    }
}