{
    "application": "Castro2d",
    "details": {
        "software": [
            "PrgEnv-gnu",
            "craype-accel-amd-gfx90a",
            "cray-mpich",
            "rocm",
            "amd-mixed"
        ],
        "resources": {
            "compute_nodes": 4,
            "tasks_per_node": 8,
            "cpus_per_task": 7,
            "gpus_per_task": 1,
            "gpu_bind": "closest",
            "walltime": "02:00:00",
            "partition": "batch",
            "environment_variables": [
                "OMP_NUM_THREADS=1",
                "NMPI_PER_NODE=8",
                "TOTAL_NMPI=$(( ${SLURM_JOB_NUM_NODES} * ${NMPI_PER_NODE} ))"
            ]
        }
    }
}