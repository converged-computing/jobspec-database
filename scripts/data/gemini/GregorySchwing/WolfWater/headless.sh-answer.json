{
    "application": "Nextflow",
    "details": {
        "software": [
            "Nextflow",
            "Singularity (optional)",
            "Mambaforge"
        ],
        "resources": {
            "computing": {
                "nodes": 1,
                "cores": 1,
                "qos": "secondary"
            },
            "memory": "8G",
            "time": "14 hours",
            "storage": {
                "output": "output_<jobid>.out",
                "error": "errors_<jobid>.err",
                "singularity_cache": "${HOME}/singularity_cache",
                "runtime_dir": "${HOME}/xdr"
            }
        },
        "environment": {
            "NXF_EXECUTOR": "slurm",
            "NXF_OPTS": "-Xms2G -Xmx8G",
            "XDG_RUNTIME_DIR": "${HOME}/xdr"
        }
    }
}