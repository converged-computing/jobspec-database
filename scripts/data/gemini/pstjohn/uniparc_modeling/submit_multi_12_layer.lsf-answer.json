{
    "application": "LSF",
    "details": {
        "job_scheduler": "LSF",
        "resource_requirements": {
            "wall_time": "24:00",
            "nodes": 28,
            "queue": "killable"
        },
        "software_dependencies": {
            "modules": [
                "ibm-wml-ce/1.7.0-3"
            ],
            "conda_environment": "tf21-ibm",
            "python_library": "run_model_multi_worker.py"
        },
        "environment_variables": {
            "PYTHONPATH": "$HOME/uniparc_modeling:$PYTHONPATH",
            "NCCL_DEBUG": "INFO",
            "TF_ENABLE_AUTO_MIXED_PRECISION": "1",
            "OMP_NUM_THREADS": "4"
        },
        "execution_command": "jsrun -n ${NODES} -g 6 -c 42 -r1 -a1 -b none python3 run_model_multi_worker.py --modelName=$LSB_JOBNAME --scratchDir=\"$MEMBERWORK/bie108/uniparc_checkpoints\" --dataDir=\"$PROJWORK/bie108/split_uniref100\" --checkpoint=\"$MEMBERWORK/bie108/uniparc_checkpoints/$LSB_JOBNAME\" --batchSize=$BATCH_SIZE --warmup=3125 --totalSteps=125000 --stepsPerEpoch=250 --validationSteps=5 --lr=0.00176 --maskingFreq=0.15 --sequenceLength=512 --modelDimension=768 --numberXformerLayers=12 --initialEpoch=0"
    }
}