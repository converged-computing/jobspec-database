{
    "application": "CHARMM",
    "details": {
        "software": [
            "CHARMM",
            "cuda/toolkit/7.5.18",
            "nvidia-smi",
            "get_X_GPUs.sh"
        ],
        "resources": {
            "nodes": 1,
            "ppn": 1,
            "gpus": 2,
            "exclusive_process": true,
            "walltime": "20:00:00",
            "queue": "gpu"
        },
        "input_files": [
            "$chmfile.inp",
            "$INPUT"
        ],
        "output_files": [
            "$chmfile.out",
            "$input.out"
        ],
        "environment_variables": [
            "PBS_O_WORKDIR",
            "INPUT",
            "OUTPUT",
            "PBS_GPUFILE",
            "PBS_JOBID"
        ]
    }
}