{
    "application": "CHARMM",
    "details": {
        "software": [
            "CHARMM",
            "nvidia-smi",
            "get_X_GPUs.sh"
        ],
        "resources": {
            "queue": "gpu",
            "nodes": 1,
            "ppn": 1,
            "gpus": 1,
            "exclusive_process": true,
            "walltime": "25:00:00"
        },
        "environment_variables": [
            "PBS_O_WORKDIR",
            "PBS_JOBID",
            "PBS_GPUFILE",
            "CUDA_VISIBLE_DEVICES"
        ],
        "input_files": [
            "$input.inp"
        ],
        "output_files": [
            "$input.out"
        ]
    }
}