{
    "application": "IPython",
    "software": [
        "IPython",
        "mpi4py",
        "valgrind (optional)"
    ],
    "resource_requirements": {
        "partition": "main",
        "nodes": 1,
        "cores": 128,
        "cpus_per_task": 2,
        "memory_per_cpu": "930M",
        "time": "0:59:00",
        "mail_type": "ALL",
        "modules": [
            "snic-env"
        ],
        "environment_variables": [
            "OMP_STACKSIZE=128G",
            "IPNWORKERS=50",
            "IPYTHONDIR=/cfs/klemming/scratch/${USER:0:1}/$USER/.ipython",
            "IPYTHON_PROFILE=default",
            "FI_CXI_DEFAULT_VNI"
        ]
    }
}