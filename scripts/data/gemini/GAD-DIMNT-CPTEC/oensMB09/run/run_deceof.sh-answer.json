{
    "application": "DECEOF",
    "software": "DECEOF (Decomposicao em coeficientes espectrais das analises perturbadas por EOF)",
    "resources": [
        "SLURM or PBS scheduler",
        "mpirun",
        "singularity (optional)",
        "FORTRAN compiler",
        "Bash shell"
    ],
    "input": [
        "Resolution (e.g., TQ0126L028)",
        "Prefix (e.g., EOF)",
        "Moisture perturbation option (YES/NO)",
        "Analysis date (YYYYMMDDHH)",
        "Ensemble size",
        "File name prefix"
    ],
    "output": [
        "Spectral files with perturbed analysis data (GANL<NUM>P/N)",
        "Log files (deceof.<NUM>.<LABELI>.<HOUR>.<TRUNC><LEV>)",
        "Monitor file (monitor.t)"
    ]
}