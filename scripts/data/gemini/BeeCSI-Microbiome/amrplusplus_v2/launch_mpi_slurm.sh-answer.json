{
    "application": "Nextflow",
    "details": {
        "software": [
            "Java JDK 1.8.0",
            "Singularity 2.5.2",
            "OpenMPI 4.0.0"
        ],
        "resources": {
            "scheduler": "SLURM",
            "partition": "shas",
            "tasks": 1,
            "cpus_per_task": 1,
            "walltime": "100:00:00",
            "queue": "long",
            "working_directory": "/work_dir",
            "threads": 15
        },
        "input": {
            "genome": "/PATH/TO/HOST/GENOME",
            "reads": "RAWREADS/*_R{1,2}.fastq.gz"
        },
        "output": {
            "results": "output_results"
        }
    }
}