{
    "application": "Slurm",
    "details": {
        "job_name": "merge_fixrg",
        "output_file": "merge_fixrg-%j.out",
        "partition": "main",
        "nodes": 1,
        "tasks": 1,
        "cpus_per_task": 40,
        "modules": [
            "container_env",
            "samtools",
            "container_env/0.1",
            "container_env java"
        ],
        "environment_variables": {
            "SINGULARITY_BIND": "/home/e1garcia",
            "BAMDIR": "input directory containing bam files",
            "BAMPATTERN": "*-merged.rad.RAW-2-2-RG.bam",
            "sample_name": "extracted from BAMDIR using slurm array task ID"
        },
        "tools": [
            "sed",
            "java",
            "picard.jar",
            "samtools"
        ]
    }
}