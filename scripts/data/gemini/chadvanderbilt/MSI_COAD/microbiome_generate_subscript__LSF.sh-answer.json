{
    "application": "NGS",
    "details": {
        "software": [
            "KronaTools",
            "bwa",
            "samtools",
            "blastn",
            "ClassifyBLAST.pl"
        ],
        "resources": {
            "reference_genome": "/path/to/human/reference/genome.fasta",
            "nt_database": "/path/to/nt/folder/",
            "memory": "16GB",
            "cores": 8,
            "queue": "cpuqueue",
            "walltime": "165:00"
        },
        "input": {
            "fastq_files": "Project_*/*/*/*_R1_001.fastq.gz"
        },
        "output": {
            "bam_files": "$BASE_PATH/BAM/*.unmapped.bam",
            "fasta_files": "$BASE_PATH/fasta/*.fasta",
            "blast_output": "$BASE_PATH/blast/*.fasta.bl",
            "taxonomic_output": "$BASE_PATH/tax_out/*.fasta.bl.tax"
        }
    }
}