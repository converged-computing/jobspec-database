{
    "application": "SLURM",
    "details": {
        "resource_requirements": {
            "partition": "gaia",
            "nodes": 4,
            "tasks_per_node": 2,
            "gpus": "volta:2",
            "distribution": "nopack",
            "exclusive": true
        },
        "software_requirements": {
            "python": true,
            "nccl": true
        },
        "environment_variables": {
            "NCCL_DEBUG": "WARN",
            "PYTHONFAULTHANDLER": "1",
            "NCCL_SOCKET_IFNAME": "^docker0,lo",
            "MASTER_ADDR": "determined by script",
            "MASTER_PORT": "determined by script"
        },
        "script_details": {
            "functionality": "Launches a Python script named 'train.py' on a SLURM cluster, setting up necessary environment variables and resource allocations."
        }
    }
}