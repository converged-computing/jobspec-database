{
    "application": "Slurm",
    "details": {
        "job_name": "wf_datamagassim",
        "output": "wf_%J.out",
        "nodes": 1,
        "tasks_per_node": 32,
        "tasks": 32,
        "exclusive": true,
        "partition": "ncpum",
        "modules": [
            "aocc",
            "aocl/3.0-6/fftw",
            "python",
            "openmpi/intel-19U5/4.1.1-ucx-1.10.1"
        ],
        "environment_variables": {
            "OMP_NUM_THREADS": 1
        },
        "command": "mpiexec -n $SLURM_NTASKS python3 ./workflow.py"
    }
}