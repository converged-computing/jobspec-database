{
    "application": "Ray",
    "details": {
        "resource_requirements": {
            "nodes": "${NUM_NODES}",
            "cpus_per_task": 80,
            "gpus_per_task": "${NUM_GPUS_PER_NODE}",
            "mem_per_cpu": "4GB",
            "time": "${TIME}"
        },
        "software_requirements": {
            "modules": [
                "cuda/10.2",
                "gcc/7.3.0"
            ],
            "environment": {
                "load": "${LOAD_ENV}",
                "conda": "${CONDA_ENV}"
            },
            "environment_variables": {
                "RAY_OBJECT_STORE_ALLOW_SLOW_STORAGE": "1",
                "RAY_worker_register_timeout_seconds": 120
            }
        }
    }
}