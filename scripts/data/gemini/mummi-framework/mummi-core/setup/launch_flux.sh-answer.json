{
    "application": "Flux",
    "details": {
        "dependencies": [
            "jsrun",
            "flux",
            "flux_bootstrap.sh",
            "flux_env.sh",
            "create_backup_of_directory.sh",
            "wait_for_file.sh"
        ],
        "environment_variables": [
            "MUMMI_ROOT",
            "MUMMI_CORE",
            "MUMMI_APP",
            "FLUXION_QMANAGER_OPTIONS",
            "FLUXION_RESOURCE_OPTIONS",
            "PMI_LIBRARY",
            "FLUX_SSH",
            "FLUX_URI"
        ],
        "resource_requirements": {
            "nodes": "flux_nnodes (specified as an argument to the script)",
            "cores": "ALL_CPUS",
            "gpus": "ALL_GPUS",
            "bind": "none"
        },
        "other_requirements": [
            "OpenMPI",
            "flux_server.info file",
            "flux_client.env file",
            "flux.log file"
        ]
    }
}