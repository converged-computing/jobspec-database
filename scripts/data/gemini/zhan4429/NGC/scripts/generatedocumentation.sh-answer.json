{
    "application": "Documentation Generator",
    "details": {
        "script_language": "Bash",
        "dependencies": [
            "spack",
            "sed",
            "awk",
            "grep",
            "cut"
        ],
        "file_requirements": [
            "listofmissingfiles.txt",
            "index.rst",
            "*.lua"
        ],
        "folders": [
            "/opt/spack/modulefiles/ngc/",
            "/home/$USER/NGC/source/"
        ],
        "purpose": "Generates documentation files based on the names of missing ngc containers listed in listofmissingfiles.txt and updates index.rst based on files in the 'source' folder."
    }
}