{
    "application": "Singularity",
    "details": {
        "environment": {
            "gcc": "5.4.0",
            "openmpi": "3.0.0"
        },
        "resource_requirements": {
            "nodes": 1,
            "gpus": 1,
            "walltime": "00:10:00",
            "qos": "flux",
            "queue": "fluxoe"
        },
        "script_actions": {
            "change_directory": "cd ${PBS_O_WORKDIR}",
            "remove_file": "rm -f test-results-gpu.out",
            "execute_command": "singularity exec --nv software.simg python3 serial-gpu.py"
        }
    }
}