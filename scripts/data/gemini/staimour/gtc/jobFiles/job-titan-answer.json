{
    "application": "gtc",
    "details": {
        "software": [
            "aprun",
            "sed"
        ],
        "resources": {
            "nodes": 128,
            "walltime": "1:00:00",
            "queue": "batch",
            "openmp_threads": 2,
            "mpi_tasks": 1024,
            "mpi_tasks_per_node": 8,
            "openmp_threads_per_mpi_task": 2
        },
        "dependencies": {
            "hypre": "for preconditioning",
            "boomeramg": "for the hypre preconditioner"
        },
        "input_files": [
            "gtc.in"
        ],
        "output_files": [
            "gtc.out"
        ],
        "directories": [
            "restart_dir1",
            "restart_dir2",
            "restart_dir",
            "phi_dir",
            "trackp_dir"
        ]
    }
}