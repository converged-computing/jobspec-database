{
    "application": "DeepFilterNet",
    "software": [
        "Python",
        "PyTorch",
        "CUDA",
        "conda",
        "git",
        "rsync",
        "nvidia-smi",
        "HDF5"
    ],
    "resource_requirements": {
        "compute": {
            "cores": 1,
            "memory": "8 GB",
            "gpu": 1
        },
        "storage": {
            "scratch": {
                "max_gb": 150
            },
            "cache": {
                "max_gb": 100
            },
            "data": {
                "path": "$DATA_DIR"
            }
        },
        "time": {
            "limit": "24 hours",
            "signal_time": "7 hours before limit"
        },
        "environment": {
            "conda_environment": "setup_env.sh",
            "project_branch": "$PROJECT_BRANCH",
            "cluster_directory": "$CLUSTER"
        }
    }
}