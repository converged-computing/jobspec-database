{
    "application": "samtools",
    "details": {
        "version": "1.13",
        "resource_requirements": {
            "nodes": 1,
            "tasks_per_node": 1,
            "cpus_per_task": 1,
            "memory": "500M",
            "time": "00:30:00",
            "output_file": "bam_index.out",
            "error_file": "bam_index.err"
        },
        "dependencies": [
            "spack"
        ],
        "input": {
            "lookup_file": "lookup",
            "bam_file": "extracted from lookup file based on SLURM_ARRAY_TASK_ID"
        },
        "output": {
            "indexed_bam_file": "BAM_FILE.bai"
        }
    }
}