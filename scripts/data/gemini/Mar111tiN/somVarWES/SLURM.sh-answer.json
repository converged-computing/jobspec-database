{
    "application": "Snakemake",
    "details": {
        "software": [
            "conda",
            "snakemake",
            "dot"
        ],
        "resources": {
            "cluster": {
                "partition": "long",
                "time": "20:10:00",
                "mem": "2500M",
                "name": "somVars",
                "nodes": 1,
                "threads": 2
            },
            "storage": {
                "output": "${HOME}/scratch/slogs/${SLURM_JOB_NAME}-${SLURM_JOB_ID}",
                "tmp": "/fast/users/${USER}/scratch/tmp"
            },
            "environment": {
                "conda_env": "snake-env"
            }
        }
    }
}