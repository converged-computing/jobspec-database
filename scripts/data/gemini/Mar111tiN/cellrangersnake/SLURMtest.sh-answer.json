{
    "application": "Snakemake",
    "details": {
        "software": [
            "Snakemake",
            "Conda",
            "cellranger-env"
        ],
        "resources": {
            "slurm": {
                "partition": "long",
                "time": "1:00:00",
                "nodes": 1,
                "threads": 2,
                "memory_per_cpu": "500M",
                "job_name": "somVars",
                "output_directory": "slogs"
            },
            "filesystem": {
                "scratch_directory": "/fast/users/${USER}/scratch",
                "log_directory": "${HOME}/scratch/slogs/${SLURM_JOB_NAME}-${SLURM_JOB_ID}"
            }
        },
        "workflow": {
            "snakefile": "Snaketest",
            "cluster_config": "test/test-cluster.json",
            "jobs": 62
        }
    }
}