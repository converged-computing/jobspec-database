{
    "application": "Fungiflow",
    "software_requirements": [
        "Miniconda3",
        "Singularity",
        "fungiflow conda environment",
        "fungiflow.py"
    ],
    "resource_requirements": {
        "cpus": 16,
        "memory": "120G",
        "partition": "parallel",
        "time": "8:00:00",
        "job_name": "fungiflow",
        "output_path": "/output/path/fungiflow_%A_%a.log"
    },
    "input_files": [
        "${SLURM_ARRAY_TASK_ID}_1.fq.gz",
        "${SLURM_ARRAY_TASK_ID}_2.fq.gz",
        "${SLURM_ARRAY_TASK_ID}_ONT_reads.fastq"
    ],
    "singularity_image": "/path/to/fungiflow_v3.sif"
}