{
    "application": "SLURM",
    "details": {
        "job_scheduler": "SLURM",
        "programming_language": "R",
        "libraries": [
            "gcc/11.2.0",
            "R/4.3.1",
            "batchtools"
        ],
        "environment_variables": [
            "DEBUGME",
            "OMP_NUM_THREADS",
            "OPENBLAS_NUM_THREADS",
            "MKL_NUM_THREADS"
        ],
        "resource_requirements": {
            "ntasks": "number of required tasks",
            "ncpus": "number of required cpus per task",
            "walltime": "walltime for the job in minutes",
            "memory": "memory in megabytes for each cpu",
            "partition": "optional partition for the job",
            "array": "optional array of jobs"
        }
    }
}