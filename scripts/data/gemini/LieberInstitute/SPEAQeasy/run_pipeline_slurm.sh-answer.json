{
    "application": "Nextflow",
    "details": {
        "software": [
            "SPEAQeasy",
            "Java",
            "Bash",
            "SLURM"
        ],
        "resources": {
            "memory": "40 GB",
            "java_options": "-Xms8g -Xmx10g",
            "output_file": "SPEAQeasy_output.log",
            "report_file": "execution_reports/pipeline_report.html",
            "annotation_directory": "$ORIG_DIR/Annotation",
