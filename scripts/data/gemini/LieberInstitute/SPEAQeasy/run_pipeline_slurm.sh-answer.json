        },
        "dependencies": {
            "installation_script": "install_software.sh",
            "pipeline_definition": "$ORIG_DIR/main.nf",
            "sample_type": "single",
            "reference_genome": "hg19",
            "library_type": "unstranded",
            "test_mode": "small_test"
        }
    }
}