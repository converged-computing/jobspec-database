{
    "application": "SLURM",
    "details": {
        "scheduler": "SLURM",
        "job_name": "reg_offsets",
        "output_file": "reg_offsets.out",
        "error_file": "reg_offsets.err",
        "time_limit": "1:00:00",
        "partition": "biochem,normal",
        "qos": "normal",
        "memory": "32G",
        "nodes": 1,
        "tasks_per_node": 1,
        "software": {
            "python": "3.6.1",
            "matlab": "R2017b"
        },
        "script": {
            "language": "bash",
            "python_script": "getRegistrationOffsets.py",
            "script_directory": "$SCRIPT_DIR"
        },
        "environment_variables": {
            "MATLABPATH": "$IMAGING_DIR/CPlibs:/$IMAGING_DIR/CPscripts",
            "FID_image_dir": "<path to images>/09_imageTilesBothColors_green",
            "FID_tile_dir": "<path to split_tile fid>/FID",
            "out_dir": "<output path where log files and registration offsets will go>",
            "IMAGING_DIR": "<path to imaging directory>",
            "py3env": "<path to python virtual environment>"
        }
    }
}