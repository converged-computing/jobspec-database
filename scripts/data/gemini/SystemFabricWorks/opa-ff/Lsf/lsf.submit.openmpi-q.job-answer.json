{
    "application": "LSF",
    "details": {
        "script_purpose": "Submit an OpenMPI job to the LSF (Load Sharing Facility) cluster",
        "libraries": [
            "mpirun",
            "opagetvf_env",
            "iba_select_mpi",
            "iba_getpsm_func"
        ],
        "environment_variables": [
            "MPICH_PREFIX",
            "mpirunfile",
            "vfselectmethod",
            "vfname",
            "vfsid",
            "dsprtg",
            "qname",
            "mrailmap",
            "MPI_CMD_ARGS",
            "LD_LIBRARY_PATH",
            "LSB_DJOB_NUMPROC",
            "OMPI_MCA_btl_openib_pkey",
            "OMPI_MCA_btl_openib_ib_service_level",
            "OMPI_MCA_btl_openib_mtu",
            "OMPI_MCA_mtl_psm_ib_pkey",
            "OMPI_MCA_mtl_psm_ib_service_level",
            "PSM_MTU",
            "OMPI_MCA_mtl_psm_path_query",
            "OMPI_MCA_mtl_psm_ib_service_id",
            "routing",
            "PSM_PATH_SELECTION",
            "PSM_MULTIRAIL",
            "PSM_MULTIRAIL_MAP"
        ],
        "input_arguments": [
            "-p num_processes",
            "-V vf_select_method",
            "-s vf_sid",
            "-n vf_name",
            "-d dsp_rtg",
            "-q queue_name",
            "-m <unit:port>[,<unit:port>]",
            "mpi_run_file"
        ],
        "job_submission": "bsub"
    }
}