{
    "application": "Singularity",
    "details": {
        "container": "/data/containers/msoe-tensorflow.sif",
        "script": "${SCRIPT_PATH}",
        "arguments": "${SCRIPT_ARGS}",
        "environment": {
            "python": "3"
        },
        "hardware": {
            "nodes": 1,
            "gpus": 8,
            "gpu_type": "v100",
            "cpus_per_gpu": 8
        },
        "slurm": {
            "job_name": "DGX 8 GPU",
            "output": "train_%N_%j.out",
            "mail_type": "ALL",
            "mail_user": "researcher@msoe.edu",
            "partition": "dgx"
        }
    }
}