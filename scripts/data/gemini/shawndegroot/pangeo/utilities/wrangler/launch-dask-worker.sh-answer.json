{
    "application": "Dask",
    "details": {
        "environment": {
            "module": "pangeo",
            "LDIR": "/gpfs/flash/users/$USER"
        },
        "scheduler": {
            "file": "$HOME/scheduler.json"
        },
        "resources": {
            "memory_limit": "0.15",
            "nthreads": 4,
            "nprocs": 6,
            "local_directory": "$LDIR",
            "interface": "ib0"
        },
        "slurm": {
            "job_name": "dask-worker",
            "output": "worker.%j.out",
            "partition": "normal",
            "nodes": 1,
            "tasks_per_node": 6,
            "time": "02:00:00"
        }
    }
}