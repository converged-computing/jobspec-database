{
    "application": "pmem2bench",
    "software": [
        "spack",
        "pegasus"
    ],
    "resources": [
        "gpu",
        "pmem"
    ],
    "requirements": {
        "runtime": "1 hour",
        "environment": "spack/envs/pegasus"
    },
    "arguments": [
        "--source",
        "--path",
        "--nthreads",
        "--stripe",
        "--block",
        "--non-temporal",
        "--random",
        "--write",
        "--prettify",
        "--read",
        "--noflush"
    ],
    "output": {
        "format": "json",
        "files": [
            "w_*.json",
            "r_*.json"
        ]
    },
    "other": [
        "PBS",
        "bash",
        "date",
        "mkdir",
        "cd",
        "rm"
    ]
}