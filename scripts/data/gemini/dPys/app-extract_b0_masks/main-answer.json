{
    "application": "Singularity",
    "details": {
        "image": "docker://dpys/extract_b0_mask:latest",
        "command": "extract_b0_masks.py",
        "arguments": [
            "abspath(\"$dwi\")",
            "abspath(\"$bvals\")",
            "\"$num_processes\"",
            "\"$backend\""
        ],
        "resource_requirements": {
            "nodes": 1,
            "cpus_per_task": 4,
            "ntasks_per_node": 1,
            "memory": "4G",
            "time": "00:30:00"
        },
        "environment": {
            "dwi": "value from config.json",
            "bvals": "value from config.json",
            "num_processes": 4,
            "backend": "loky"
        }
    }
}