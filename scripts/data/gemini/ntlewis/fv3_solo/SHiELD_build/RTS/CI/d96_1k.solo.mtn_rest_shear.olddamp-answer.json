        "SHiELD Build System",
        "MPI",
        "OpenMP",
        "Singularity (optional)",
        "fms_yaml_tools (optional)"
    ],
    "resource_requirements": {
        "cores": 24,
        "memory": "256m per core",
        "launcher": "srun (or other)",
        "environment_variables": [
