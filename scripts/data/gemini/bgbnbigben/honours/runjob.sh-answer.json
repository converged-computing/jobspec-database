{
    "application": "PBS",
    "details": {
        "resource_requirements": {
            "nodes": "12",
            "walltime": "00:05:00",
            "modules": [
                "valgrind/3.8.1-openmpi-gcc",
                "gcc/4.8.1",
                "openmpi/1.7.3-gcc"
            ],
            "libraries": {
                "LD_LIBRARY_PATH": "$PBS_O_WORKDIR/spatialindex/lib"
            }
        },
        "executable": "./particle",
        "arguments": [
            "-n",
            "10",
            "-s",
            "ROSENBR"
        ],
        "environment_variables": {
            "PBS_O_WORKDIR": "working directory of the job"
        }
    }
}