{
    "application": "Magpie",
    "software": [
        {
            "name": "Hadoop",
            "version": "3.3.6",
            "setupType": "MR",
            "setup": "yes",
            "daemonHeapMax": "1000",
            "namenodeHeapMax": "2000",
            "environmentExtraPath": "${HOME}/hadoop-my-environment",
            "job": "terasort",
            "terasortSize": "50000000",
            "terasortMapCount": "4",
            "terasortReducerCount": "4",
            "terasortClearCache": "yes",
            "terasortOutputReplication": "1",
            "terasortRunTerachecksum": "no",
            "terasortRunTeravalidate": "no",
            "decommissionHdfsNodeSize": "8",
            "filesystemMode": "hdfsoverlustre",
            "localFilesystemBlockSize": "33554432",
            "hdfsReplication": "3",
            "hdfsBlockSize": "134217728",
            "hdfsPath": "/ssd/${USER}/hdfs",
            "hdfsPathClear": "yes",
            "hdfsOverLustrePath": "/lustre/${USER}/hdfsoverlustre/",
            "hdfsOverLustreRemoveLocks": "yes",
            "hdfsOverNetworkfsPath": "/networkfs/${USER}/hdfsovernetworkfs/",
            "hdfsOverNetworkfsRemoveLocks": "yes",
            "rawNetworkfsPath": "/lustre/${USER}/rawnetworkfs/",
            "localStore": "/ssd/${USER}/localstore/",
            "localStoreClear": "yes"
        },
        {
            "name": "Spark",
            "version": "3.5.0-bin-hadoop3",
            "setupType": "YARN",
            "setup": "yes",
            "workerCoresPerNode": "8",
            "workerMemoryPerNode": "16000",
            "workerDirectory": "/tmp/${USER}/spark/work",
            "jobMemory": "2048",
            "driverMemory": "2048",
            "daemonHeapMax": "1000",
            "environmentExtraPath": "${HOME}/spark-my-environment",
            "job": "sparkpi",
            "sparkPiSlices": "4",
            "defaultParallelism": "8",
            "memoryFraction": "0.6",
            "memoryStorageFraction": "0.5",
            "storageMemoryFraction": "0.6",
            "shuffleMemoryFraction": "0.2",
            "rddCompress": "true",
            "ioCompressionCodec": "lz4",
            "deploySpreadout": "true",
            "localScratchDir": "/lustre/${USER}/sparkscratch/",
            "localScratchDirClear": "yes",
            "networkTimeout": "120",
            "yarnStagingDir": "file:///lustre/${USER}/sparkStaging/"
        }
    ],
    "resources": [
        {
            "name": "Java Home",
            "path": "/usr/lib/jvm/jre-1.8.0/"
        },
        {
            "name": "Python",
            "path": "/usr/bin/python3"
        }
    ],
    "scriptHome": "${HOME}/magpie",
    "localDir": "/tmp/${USER}/magpie",
    "submissionType": "lsfmpirun",
    "startupTime": "30",
    "shutdownTime": "30",
    "oneTimeRun": "yes",
    "preJobRun": "${MAGPIE_SCRIPTS_HOME}/scripts/pre-job-run-scripts/my-pre-job-script",
    "postJobRun": "${MAGPIE_SCRIPTS_HOME}/scripts/post-job-run-scripts/my-post-job-script",
    "preExecuteRun": "${MAGPIE_SCRIPTS_HOME}/scripts/pre-job-run-scripts/my-pre-job-script",
    "postExecuteRun": "${MAGPIE_SCRIPTS_HOME}/scripts/post-job-run-scripts/my-post-job-script",
    "environmentVariableScript": "${HOME}/my-job-env",
    "environmentVariableScriptShell": "/bin/bash",
    "hostnameCmd": "hostname",
    "remoteCmd": "ssh",
    "remoteCmdOpts": ""
}