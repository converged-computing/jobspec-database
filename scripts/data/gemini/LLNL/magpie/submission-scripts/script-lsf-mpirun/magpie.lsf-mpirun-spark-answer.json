{
    "application": "Magpie",
    "details": {
        "purpose": "Scripts for running Hadoop on traditional HPC systems.",
        "project_url": "https://github.com/llnl/magpie",
        "license": "GNU General Public License",
        "resource_requirements": {
            "node_count": "<my_node_count>",
            "timelimit": "<my_time_in_hours:minutes>",
            "queue": "<my_queue>"
        },
        "software_requirements": {
            "java": "/usr/lib/jvm/jre-1.8.0/",
            "python": "/usr/bin/python3",
            "spark": {
                "version": "3.5.0-bin-hadoop3",
                "home": "${HOME}/spark-${SPARK_VERSION}",
                "setup_type": "STANDALONE",
                "worker_cores_per_node": "<optional>",
                "worker_memory_per_node": "<optional>",
                "job_memory": "<optional>",
                "driver_memory": "<optional>",
                "daemon_heap_max": "<optional>",
                "local_scratch_dir": "/lustre/${USER}/sparkscratch/",
                "local_scratch_dir_clear": "<optional>",
                "network_timeout": "<optional>"
            },
            "hadoop": "<optional>",
            "hbase": "<optional>",
            "alluxio": "<optional>",
            "tensorflow": "<optional>",
            "other": "<optional>"
        },
        "configuration_options": {
            "scripts_home": "${HOME}/magpie",
            "local_dir": "/tmp/${USER}/magpie",
            "job_type": "spark",
            "startup_time": "<optional>",
            "shutdown_time": "<optional>",
            "one_time_run": "<optional>",
            "pre_job_run": "<optional>",
            "post_job_run": "<optional>",
            "environment_variable_script": "<optional>",
            "hostname_cmd": "<optional>",
            "remote_cmd": "<optional>",
            "mpirun_options": "<optional>"
        }
    }
}