{
    "application": "Magpie",
    "software_details": {
        "hadoop": {
            "version": "3.3.6",
            "setup_type": "MR",
            "home": "${HOME}/hadoop-${HADOOP_VERSION}",
            "local_dir": "/tmp/${USER}/hadoop",
            "daemon_heap_max": "1000M",
            "namenode_daemon_heap_max": "2000M",
            "environment_extra": "${HOME}/hadoop-my-environment",
            "job": "terasort",
            "max_tasks_per_node": "8",
            "default_map_tasks": "8",
            "default_reduce_tasks": "8",
            "child_heap_size": "2048M",
            "child_map_heap_size": "2048M",
            "child_reduce_heap_size": "4096M",
            "child_map_container_buffer": "256M",
            "child_reduce_container_buffer": "512M",
            "mapreduce_slowstart": "0.05",
            "yarn_resource_memory": "32768M",
            "vmem_check": "false",
            "pmem_check": "false",
            "compression": "no",
            "io_sort_factor": "10",
            "io_sort_mb": "100",
            "parallel_copies": "10",
            "terasort_size": "50000000",
            "teragen_map_count": "4",
            "terasort_reducer_count": "4",
            "terasort_clear_cache": "no",
            "terasort_output_replication": "1",
            "terasort_run_terachecksum": "no",
            "terasort_run_teravalidate": "no",
            "decommission_hdfs_node_size": "8",
            "filesystem_mode": "hdfsoverlustre",
            "local_filesystem_blocksize": "33554432",
            "hdfs_replication": "3",
            "hdfs_blocksize": "134217728",
            "hdfs_path": "/ssd/${USER}/hdfs",
            "hdfs_path_clear": "yes",
            "hdfsoverlustre_path": "/lustre/${USER}/hdfsoverlustre/",
            "hdfsoverlustre_remove_locks": "yes",
            "hdfsovernetworkfs_path": "/networkfs/${USER}/hdfsovernetworkfs/",
            "hdfsovernetworkfs_remove_locks": "yes",
            "rawnetworkfs_path": "/lustre/${USER}/rawnetworkfs/",
            "localstore": "/ssd/${USER}/localstore/",
            "localstore_clear": "yes"
        },
        "pig": {
            "version": "0.17.0",
            "home": "${HOME}/pig-${PIG_VERSION}",
            "local_dir": "/tmp/${USER}/pig",
            "job": "testpig",
            "script_path": "${HOME}/my-pig-script",
            "script_opts": "-l ${HOME}/mypig.log",
            "classpath": "${HOME}/myjarfiles.jar",
            "opts": "-Djava.io.tmpdir=${PIG_LOCAL_JOB_DIR}/tmp"
        },
        "hbase": {
            "version": "1.6.0",
            "home": "${HOME}/hbase-${HBASE_VERSION}",
            "local_dir": "/tmp/${USER}/hbase",
            "master_daemon_heap_max": "1000M",
            "regionserver_daemon_heap_max": "16000M",
            "environment_extra": "${HOME}/hbase-my-environment",
            "job": "performanceeval",
            "start_thrift_server": "no",
            "major_compaction_on_shutdown": "yes",
            "performanceeval_mode": "sequential-thread",
            "performanceeval_row_count": "1048576",
            "performanceeval_client_count": "1"
        },
        "hive": {
            "version": "2.3.0",
            "home": "${HOME}/apache-hive-${HIVE_VERSION}-bin",
            "local_dir": "/tmp/${USER}/hive",
            "metastore_dir": "/lustre/${USER}/hive/database/postgres/data",
            "port": "10000",
            "use_tez": "no",
            "job": "testbench",
            "testbench_dir": "${HOME}/hive-testbench",
            "testbench_type": "tpch",
            "testbench_data_size": "2GB",
            "testbench_query_count": "4",
            "cli_version": "beeline"
        },
        "phoenix": {
            "version": "4.14.0-HBase-1.4",
            "home": "${HOME}/apache-phoenix-${PHOENIX_VERSION}-bin",
            "local_dir": "/tmp/${USER}/phoenix",
            "job": "performanceeval",
            "start_queryserver": "no",
            "script_path": "${HOME}/my-phoenix-script",
            "script_opts": "",
            "queryserver_extra_opts": "-Djava.io.tmpdir=${PHOENIX_LOCAL_JOB_DIR}/tmp",
            "performanceeval_row_count": "100000"
        },
        "spark": {
            "version": "3.5.0-bin-hadoop3",
            "home": "${HOME}/spark-${SPARK_VERSION}",
            "local_dir": "/tmp/${USER}/spark",
            "setup_type": "STANDALONE",
            "worker_cores_per_node": "8",
            "worker_memory_per_node": "16000M",
            "worker_directory": "/tmp/${USER}/spark/work",
            "job_memory": "2048M",
            "driver_memory": "2048M",
            "daemon_heap_max": "1000M",
            "environment_extra": "${HOME}/spark-my-environment",
            "job": "sparkpi",
            "default_parallelism": "8",
            "memory_fraction": "0.6",
            "memory_storage_fraction": "0.5",
            "storage_memory_fraction": "0.6",
            "shuffle_memory_fraction": "0.2",
            "rdd_compress": "true",
            "io_compression_codec": "lz4",
            "deploy_spreadout": "true",
            "local_scratch_dir": "/lustre/${USER}/sparkscratch/",
            "local_scratch_dir_clear": "yes",
            "network_timeout": "120",
            "yarn_staging_dir": "file:///lustre/${USER}/sparkStaging/",
            "sparkpi_slices": "4",
            "sparkwordcount_file": "file:///path/mywordcountfile",
            "sparkwordcount_copy_in_file": "file:///mywordcountinfile"
        },
        "kafka": {
            "version": "2.11-0.9.0.0",
            "home": "${HOME}/kafka_${KAFKA_VERSION}",
            "local_dir": "/tmp/${USER}/kafka",
            "job": "performance",
            "zookeeper_connection_timeout": "30000",
            "performance_record_count": "50000000",
            "performance_record_size": "100",
            "performance_throughput": "-1"
        },
        "zeppelin": {
            "version": "0.8.2",
            "home": "${HOME}/zeppelin-${ZEPPELIN_VERSION}-bin-all",
            "local_dir": "/tmp/${USER}/zeppelin",
            "job": "checkzeppelinup",
            "scala_path": "${HOME}/scala-2.10.4",
            "spark_submit_options": "",
            "notebook_dir": "/lustre/${USER}/zeppelin/notebook",
            "notebook_users": "user1,password1,admin;user2,password2,role2"
        },
        "storm": {
            "version": "1.2.3",
            "home": "${HOME}/apache-storm-${STORM_VERSION}",
            "local_dir": "/tmp/${USER}/storm",
            "supervisor_slots": "16",
            "daemon_heap_max": "1024M",
            "worker_heap_max": "1024M",
            "job": "stormwordcount"
        },
        "zookeeper": {
            "version": "3.4.14",
            "home": "${HOME}/zookeeper-${ZOOKEEPER_VERSION}",
            "data_dir": "/lustre/${USER}/zookeeper",
            "data_dir_clear": "yes",
            "data_dir_type": "networkfs",
            "local_dir": "/tmp/${USER}/zookeeper",
            "replication_count": "3",
            "share_nodes": "yes",
            "job": "zookeeperruok",
            "ticktime": "2000",
            "initlimit": "10",
            "synclimit": "5"
        },
        "alluxio": {
            "version": "2.3.0",
            "home": "${HOME}/alluxio-${ALLUXIO_VERSION}",
            "local_dir": "/tmp/${USER}/alluxio",
            "worker_on_master": "yes",
            "under_fs_dir": "/lustre/${USER}/alluxio",
            "data_clear": "yes",
            "worker_memory_size": "16GB",
            "worker_tier0_path": "/mnt/ramdisk",
            "ramfs_mount_option": "SudoMount",
            "read_type": "CACHE",
            "write_type": "CACHE_THROUGH",
            "job": "testalluxio"
        }
    },
    "resource_requirements": {
        "node_count": "<my_node_count>",
        "time_in_hours_minutes": "<my_time_in_hours:minutes>",
        "job_name": "<my_job_name>",
        "queue": "<my_queue>",
        "java_home": "/usr/lib/jvm/jre-1.8.0/",
        "python": "/usr/bin/python3"
    }
}