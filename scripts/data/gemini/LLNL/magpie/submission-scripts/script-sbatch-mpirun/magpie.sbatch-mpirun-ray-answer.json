{
    "application": "Magpie",
    "details": {
        "purpose": "Running Hadoop on traditional HPC systems",
        "software": {
            "Magpie": "Scripts for running Hadoop on traditional HPC systems",
            "Ray": "A distributed execution framework for Python",
            "SLURM": "A workload manager for Linux clusters",
            "MPIRUN": "A parallel job launcher",
            "Python": "A general-purpose programming language"
        },
        "resource_requirements": {
            "SLURM": {
                "nodes": "<my_node_count>",
                "time": "<my_time_in_minutes>",
                "job_name": "<my_job_name>",
                "partition": "<my_partition>",
                "ntasks_per_node": 1,
                "exclusive": true,
                "no_kill": true
            },
            "Magpie": {
                "scripts_home": "${HOME}/magpie",
                "local_dir": "/tmp/${USER}/magpie",
                "job_type": "ray"
            },
            "Ray": {
                "setup": "yes",
                "path": "${HOME}/bin/ray",
                "local_dir": "/tmp/${USER}/ray",
                "job": "rayips"
            },
            "Python": {
                "path": "/usr/bin/python3"
            }
        }
    }
}