{
    "application": "flux",
    "details": {
        "resource_requirements": {
            "nodes": 20,
            "walltime": "15 minutes",
            "account": "MAT190",
            "queue": "pbatch",
            "core_isolation": 2
        },
        "software_requirements": {
            "modules": [
                "pmi-shim",
                "flux"
            ]
        },
        "other_requirements": {
            "environment_variables": {
                "PMIX_MCA_gds": "^ds12,ds21"
            },
            "jsrun_arguments": {
                "a": 1,
                "c": "ALL_CPUS",
                "g": "ALL_GPUS",
                "n": "${NUM_NODES}",
                "bind": "none",
                "smpiargs": "-disable_gpu_hooks"
            }
        }
    }
}