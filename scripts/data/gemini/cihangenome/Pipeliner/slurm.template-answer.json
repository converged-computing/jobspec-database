{
    "application": "Snakemake",
    "details": {
        "modules": [
            "python/3.5",
            "snakemake/5.1.3",
            "git/2.15.1"
        ],
        "dependencies": [
            "perl",
            "python"
        ],
        "cluster_config": "cluster.json",
        "cluster_system": "SLURM",
        "cluster_options": [
            "--gres {cluster.gres}",
            "--cpus-per-task {cluster.threads}",
            "-p {cluster.partition}",
            "-t {cluster.time}",
            "--mem {cluster.mem}",
            "--job-name={params.rname}"
        ],
        "scripts": [
            "Scripts/summarize_usage.pl",
            "Scripts/filter_usage_summary.py",
            "Reports/ngser.pl",
            "Reports/stats2html.py"
        ],
        "files": [
            "Snakefile",
            "Reports/ccbr_pipeliner_git_commit_version.txt",
            "Reports/initialqc.stats",
            "Reports/snakemake.log",
            "slurm-*.out",
            "HPC_usage_table.txt",
            "HPCusagetable.txt.tmp",
            "QC",
            "Reports/fastqc.zip",
            "Reports/bamstats",
            "*.bam.cnt"
        ]
    }
}