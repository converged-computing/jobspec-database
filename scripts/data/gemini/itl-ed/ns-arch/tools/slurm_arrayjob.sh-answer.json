{
    "application": "Slurm",
    "details": {
        "software": [
            "bash",
            "rsync",
            "conda",
            "sed",
            "date",
            "mkdir"
        ],
        "resources": {
            "nodes": 1,
            "gpus": 1,
            "memory": "4000MB",
            "cpus": 1,
            "time": "06:00:00",
            "scratch_disk": "/disk/scratch or /disk/scratch1"
        },
        "environment": {
            "conda_environment": "xt",
            "source": "~/.bashrc",
            "scratch_home": "${SCRATCH_DISK}/${USER}"
        }
    }
}