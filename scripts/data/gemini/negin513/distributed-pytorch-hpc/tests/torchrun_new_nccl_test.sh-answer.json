{
    "application": "torchrun",
    "details": {
        "environment": {
            "modules": [
                "nvhpc",
                "cray-mpich",
                "conda",
                "cuda/11.7.0"
            ],
            "conda_env": "/glade/work/schreck/conda-envs/holodec",
            "variables": {
                "LSCRATCH": "/glade/derecho/scratch/$USER/",
                "LOGLEVEL": "INFO",
                "NCCL_DEBUG": "TRACE",
                "MPICH_GPU_MANAGED_MEMORY_SUPPORT_ENABLED": "1",
                "MPICH_OFI_NIC_POLICY": "GPU",
                "MPICH_GPU_SUPPORT_ENABLED": "1",
                "NCCL_SOCKET_IFNAME": "hsn",
                "NCCL_SHM_DISABLE": "1",
                "CUDA_VISIBLE_DEVICES": "0,1,2,3,4,5,6,7"
            }
        },
        "resources": {
            "pbs": {
                "account": "SCSG0001",
                "job_name": "new",
                "walltime": "01:00:00",
                "nodes": "2",
                "mpiprocs": "1",
                "ncpus": "64",
                "ngpus": "4",
                "mem": "480GB",
                "queue": "main",
                "output": "oe",
                "error": "oe",
                "keep_output": "eod"
            },
            "mpi": {
                "command": "mpiexec",
                "processes": "2",
                "ppn": "1",
                "cpu_bind": "none",
                "nnodes": "2",
                "nproc_per_node": "4",
                "rdzv_backend": "c10d",
                "rdzv_endpoint": "$head_node_ip"
            }
        }
    }
}