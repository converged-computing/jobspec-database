{
    "application": "Cylon",
    "software": [
        "gcc-11.2.0",
        "openmpi-4.1.4",
        "conda",
        "python",
        "mpirun"
    ],
    "resources": [
        "nodes: 4",
        "tasks per node: 20",
        "time: 1 hour",
        "partition: main"
    ],
    "environment": {
        "DIR": "$HOME/anaconda3/envs/cylon_dev",
        "PATH": "$DIR/bin:$PATH",
        "LD_LIBRARY_PATH": "$DIR/lib:$LD_LIBRARY_PATH",
        "PYTHONPATH": "$DIR/lib/python3.9/site-packages"
    }
}