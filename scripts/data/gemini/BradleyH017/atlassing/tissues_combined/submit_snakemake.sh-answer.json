{
    "application": "Snakemake",
    "details": {
        "software": [
            "conda",
            "cookiecutter",
            "snakemake",
            "singularity",
            "bsub"
        ],
        "resources": {
            "memory": "10GB",
            "cpu": "1",
            "queue": "oversubscribed",
            "group": "team152",
            "software_packages": [
                "HGI/common/conda",
                "ISG/singularity/3.11.4",
                "HGI/softpack/groups/hgi/snakemake/7.32.4",
                "scvi-env"
            ],
            "files": [
                "Snakefile",
                "config.yaml"
            ]
        },
        "configuration": {
            "profile_name": "sanger-brad2",
            "jobs": "500",
            "default_mem": "1024MB",
            "default_cluster_logdir": "./ (tissues_combined/sm_logs)",
            "default_queue": "normal",
            "default_project": "",
            "max_status_checks_per_second": "10",
            "max_jobs_per_second": "10",
            "max_status_checks": "1",
            "wait_between_tries": "1",
            "jobscript_timeout": "10"
        },
        "workflow_parameters": {
            "latency_wait": "90",
            "rerun_incomplete": "True",
            "keep_incomplete": "True",
            "keep_going": "True",
            "default_resources": {
                "threads": "1",
                "mem_mb": "2000"
            },
            "use_conda": "True",
            "conda_frontend": "conda",
            "use_singularity": "True",
            "singularity_args": "-B /lustre -B /software"
        }
    }
}