{
    "application": "Dask",
    "details": {
        "scheduler": {
            "port": "dynamically assigned",
            "bokeh_port": "dynamically assigned",
            "host": "SLURMD_NODENAME",
            "pid_file": "dask-scheduler.pid"
        },
        "worker": {
            "cores": "SLURM_CPUS_PER_TASK",
            "memory_limit": "memlimit (defaults to 16G, or 33000 for largenode)",
            "local_directory": "${SCRATCH}",
            "number": "SLURM_NTASKS",
            "foreground/background": "depending on whether a script is passed as argument"
        },
        "software_requirements": {
            "dask": "installed in the environment",
            "python": "Python/3.6.4-foss-2016b-fh1",
            "slurm": "for job management"
        },
        "resource_requirements": {
            "memory": "memlimit (defaults to 16G, or 33000 for largenode)",
            "cpus": "SLURM_CPUS_PER_TASK * SLURM_NTASKS",
            "nodes": "SLURM_NNODES"
        }
    }
}