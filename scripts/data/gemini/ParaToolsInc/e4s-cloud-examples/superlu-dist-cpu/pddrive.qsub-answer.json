{
    "application": "pddrive",
    "software": [
        "superlu-dist@8: ~cuda",
        "mpirun"
    ],
    "resources": {
        "nodes": 2,
        "processors_per_node": 2,
        "walltime": "2:00",
        "access_policy": "singlejob"
    },
    "environment_variables": [
        "MV2_HOMOGENEOUS_CLUSTER=1",
        "MV2_SUPPRESS_JOB_STARTUP_PERFORMANCE_WARNING=1",
        "MV2_ENABLE_AFFINITY=0"
    ]
}