{
    "application": "laghos",
    "software_requirements": [
        "laghos (loaded via spack)"
    ],
    "resource_requirements": {
        "nodes": 2,
        "tasks": 8,
        "tasks_per_node": 4,
        "walltime": "0-0:05",
        "exclusive": true
    },
    "environment_variables": [
        "MV2_HOMOGENEOUS_CLUSTER=1",
        "MV2_SUPPRESS_JOB_STARTUP_PERFORMANCE_WARNING=1"
    ],
    "command_line_arguments": {
        "laghos": [
            "-p 1",
            "-dim 2",
            "-rs 3",
            "-tf 0.8",
            "-pa"
        ]
    }
}