{
    "application": "hpgmg",
    "details": {
        "software": [
            "CUDA",
            "nvidia-uvm",
            "OpenMP",
            "nvprof",
            "syslogger",
            "sys2csv"
        ],
        "resource": [
            "SLURM",
            "voltron",
            "scratch1",
            "cpu",
            "gpu"
        ],
        "requirements": {
            "slurm": {
                "nodes": 1,
                "partition": "voltron",
                "job_name": "hpgmg-faults-quant",
                "exclusive": true,
                "time": "48:00:00"
            },
            "cuda": {
                "modules": "cuda"
            },
            "nvidia-uvm": {
                "parameters": [
                    "uvm_perf_prefetch_enable",
                    "uvm_perf_fault_coalesce",
                    "uvm_perf_fault_batch_count"
                ]
            },
            "openmp": {
                "threads": 1
            },
            "nvprof": {
                "mode": "sampling",
                "units": "seconds"
            },
            "syslogger": {
                "location": "../../tools/syslogger/"
            },
            "sys2csv": {
                "location": "../../tools/sys2csv/"
            }
        }
    }
}