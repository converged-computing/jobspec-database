{
    "application": "CUDA Stream",
    "details": {
        "software": [
            "CUDA Toolkit",
            "NVIDIA Linux Driver",
            "uvm-learn (data/scripts/log)",
            "sys2csv (tools/sys2csv/log2csv.sh)"
        ],
        "resources": {
            "compute": "GPU (NVIDIA)",
            "memory": "GPU memory (large amounts)",
            "storage": "/scratch1 (for log files)",
            "system": "SLURM (for resource allocation)"
        },
        "script_details": {
            "SBATCH": {
                "nodes": 1,
                "partition": "voltron",
                "job_name": "stream-faults",
                "exclusive": true,
                "time": "48 hours"
            },
            "modules": "cuda",
            "make": true,
            "sudo": true,
            "iterations": 5,
            "problem_sizes": [
                250001408,
                500002816
            ],
            "log_directory": "log_[problem_size]",
            "log_file": "stream_[iteration]",
            "log_format": "CSV (generated by log2csv.sh)",
            "performance_metric": "triad (latency)"
        }
    }
}