{
    "application": "pytorch-lightning",
    "details": {
        "scheduler": {
            "name": "LSF",
            "options": {
                "job_name": "heat_low",
                "output_file": "heat.%J.stdout",
                "error_file": "heat.%J.stderr",
                "queue": "batch_a100",
                "walltime": "1:30",
                "cores": "2",
                "memory": "92000",
                "gpu": "2:mode=exclusive_process:mps=no"
            }
        },
        "environment": {
            "name": "conda",
            "modules": [
                "conda",
                "cuda/11.5.1",
                "cudnn/11.5_v8.3"
            ]
        },
        "virtual_environment": "TorchPhysics",
        "script": "heat_equation.py"
    }
}