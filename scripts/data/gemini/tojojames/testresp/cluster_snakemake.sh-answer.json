{
    "application": "Snakemake",
    "software": [
        "Snakemake",
        "Slurm",
        "Conda (optional)",
        "Singularity (optional)",
        "Bash"
    ],
    "resources": {
        "cluster": "Slurm",
        "cluster_config": "cluster.yaml",
        "jobscript": "cluster_jobscript.sh",
        "conda_environment": "envs/task.yaml",
        "docker_image": "your-docker-image:latest",
        "cpu_cores_per_task": 4,
        "memory_per_job": "8G",
        "runtime_per_job": "24:00:00",
        "array_range": "1-10",
        "output_logs": "task_completion.log"
    }
}