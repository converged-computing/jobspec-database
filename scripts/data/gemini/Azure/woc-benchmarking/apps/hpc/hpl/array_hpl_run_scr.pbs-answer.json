{
    "application": "HPL",
    "details": {
        "software": [
            "MPI (hpcx)",
            "HPL (xhpl)"
        ],
        "resources": {
            "nodes": 1,
            "cores": 120,
            "mpi_processes": 16,
            "walltime": "06:00:00",
            "queue": "test",
            "placement": "scatter:exclhost",
            "environment_variables": {
                "OMP_NUM_THREADS": "6",
                "OMP_PROC_BIND": "TRUE",
                "OMP_PLACES": "cores",
                "LD_LIBRARY_PATH": ""
            },
            "mpi_options": [
                "--mca mpi_leave_pinned 1",
                "--bind-to none",
                "--report-bindings",
                "--mca btl self,vader",
                "--map-by ppr:1:l3cache"
            ],
            "file_system": {
                "working_directory": "$PBS_O_WORKDIR"
            }
        }
    }
}