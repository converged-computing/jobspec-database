{
    "application": "Docker",
    "details": {
        "software": [
            "Docker",
            "srun"
        ],
        "resources": {
            "nodes": 1,
            "gpus": 8,
            "cpus": 96,
            "memory": "0",
            "shared_memory": "256m"
        },
        "environment_variables": [
            "SLURM_NODEID",
            "SLURM_NNODES",
            "SLURM_SUBMIT_HOST"
        ],
        "mount_points": [
            "$HOME:$HOME",
            "/opt:/workspace/opt:ro",
            "/mnt:/workspace/mnt"
        ],
        "container_image": "${DOCKER_USERNAME}.azurecr.io/docker/$CONTAINER_NAME",
        "script_to_execute": "<PATH_TO>/launch.sh",
        "docker_login_details": {
            "username": "<DOCKER_USERNAME>",
            "password": "<DOCKER_PASSWORD>"
        }
    }
}