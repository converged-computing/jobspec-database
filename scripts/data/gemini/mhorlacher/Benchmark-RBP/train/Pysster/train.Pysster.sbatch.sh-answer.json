{
    "application": "Snakemake",
    "details": {
        "environment": "conda environment 'pysster-same-padding'",
        "script": "scripts/train_Pysster.py",
        "arguments": [
            "--params $1",
            "--save-model-only",
            "-o $2",
            "--in-fasta $3",
            "$4"
        ],
        "resources": {
            "queue": "gpu_p",
            "gpu": "1",
            "qos": "gpu",
            "cores": "4",
            "memory": "15G",
            "time": "06:00:00",
            "nice": "10000"
        },
        "logging": {
            "stdout": "logs/%j.job",
            "stderr": "logs/%j.job"
        },
        "job_name": "Pysster-snakemake"
    }
}