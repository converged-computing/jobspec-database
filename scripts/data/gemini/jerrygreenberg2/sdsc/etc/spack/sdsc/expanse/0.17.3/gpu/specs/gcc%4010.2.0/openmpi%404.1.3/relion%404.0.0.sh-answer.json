{
    "application": "relion",
    "details": {
        "scheduler": "slurm",
        "spack": {
            "version": "0.17.3",
            "instance_name": "gpu",
            "instance_dir": "${HOME}/cm/shared/apps/spack/0.17.3/gpu",
            "package": "relion@4.0.0",
            "compiler": "gcc@10.2.0",
            "variants": "+allow_ctf_in_sagd +cuda cuda_arch=70,80 +double ~double-gpu ~gui ~ipo ~mklfft",
            "dependencies": "^fftw@3.3.10/$(spack find --format '{hash:7}' fftw@3.3.10 % ${SPACK_COMPILER} +mpi ~openmp ^openmpi@4.1.3)",
            "spec": "${SPACK_PACKAGE} % ${SPACK_COMPILER} ${SPACK_VARIANTS} ${SPACK_DEPENDENCIES}"
        },
        "resources": {
            "nodes": 1,
            "tasks_per_node": 1,
            "cpus_per_task": 10,
            "memory": "93G",
            "gpus": 1,
            "time": "01:00:00"
        },
        "environment": {
            "system_name": "expanse",
            "local_time": "$(date +'%Y%m%dT%H%M%S%z')",
            "unix_time": "$(date +'%s')",
            "slurm_job_script": "$(scontrol show job ${SLURM_JOB_ID} | awk -F= '/Command=/{print $2}')",
            "slurm_job_md5sum": "$(md5sum ${SLURM_JOB_SCRIPT})"
        },
        "additional_script": "plumed@2.6.3.sh"
    }
}