{
    "application": "nextflow",
    "details": {
        "software": [
            "squashfs-tools",
            "gcc",
            "nextflow",
            "singularity"
        ],
        "resource_requirements": {
            "slurm": {
                "job_name": "bcr-nextflow",
                "nodes": 1,
                "time": "3-00:00",
                "cpus_per_task": 4,
                "memory": "16G",
                "output_file": "./slurm_log/bcr-nf_%A.out",
                "error_file": "./slurm_log/bcr-nf_%A.err",
                "mail_type": "ALL",
                "mail_user": "your_email@sample.com"
            },
            "environment": {
                "TMPDIR": "unset",
                "NXF_SINGULARITY_CACHEDIR": "/path/to/bcRflow/singularity-images",
                "SINGULARITY_CACHEDIR": "/path/to/bcRflow/singularity-images"
            }
        },
        "workflow_file": "./main.nf"
    }
}