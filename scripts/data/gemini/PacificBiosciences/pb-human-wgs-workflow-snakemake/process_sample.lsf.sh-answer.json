{
    "application": "Snakemake",
    "details": {
        "resource_manager": "LSF (Load Sharing Facility)",
        "cores": 4,
        "environment_variables": "workflow/variables.env",
        "workflow_definition": "workflow/process_sample.smk",
        "profile": "workflow/profiles/lsf",
        "logging": {
            "stdout": "./cluster_logs/lsf-$LSB_JOBNAME-$LSB_JOBID-$HOSTNAME.out",
            "stderr": "./cluster_logs/lsf-$LSB_JOBNAME-$LSB_JOBID-$HOSTNAME.err"
        },
        "locking": {
            "mechanism": "lockfile",
            "file_path": "cohorts/${SAMPLE}/process_cohort.lock"
        }
    }
}