{
    "application": "Optitype",
    "software": [
        "samtools",
        "picard",
        "bwa",
        "Optitype"
    ],
    "resource_requirements": {
        "memory": {
            "default": "8G",
            "min": "1G",
            "usage": "80%"
        },
        "cores": {
            "default": 4
        }
    },
    "dependencies": [
        "docker",
        "java",
        "python"
    ],
    "files": [
        "optitype_script.sh",
        "hla_reference_dna.fasta",
        "reads.sam",
        "reads.bam",
        "unpaired.fastq.gz",
        "name.q.fwd.fastq.gz",
        "name.q.rev.fastq.gz",
        "name.aln.fwd.sam",
        "name.aln.rev.sam",
        "name.aln.map.fwd.sam",
        "name.aln.map.rev.sam",
        "name.hla.fwd.fastq",
        "name.hla.rev.fastq"
    ],
    "directories": [
        "intermediate files directory",
        "final results directory"
    ],
    "environment_variables": [
        "TEMPDIR",
        "outdir",
        "name",
        "cram",
        "reference",
        "THREADS",
        "MEM",
        "DEFAULT_THREADS",
        "DEFAULT_MEM",
        "MEM_UTIL",
        "dnaref"
    ]
}