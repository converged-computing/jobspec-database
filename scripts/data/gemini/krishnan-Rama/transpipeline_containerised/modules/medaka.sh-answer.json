{
    "application": "Medaka",
    "details": {
        "software": [
            "Singularity",
            "Medaka"
        ],
        "resource_requirements": {
            "partition": "<HPC_partition>",
            "nodes": 1,
            "tasks_per_node": 1,
            "cpus_per_task": 64,
            "memory": "200GB",
            "output_file": "medaka_%J.out",
            "error_file": "medaka.err"
        },
        "dependencies": [
            "wget",
            "bash"
        ],
        "environment_variables": [
            "hostname",
            "SLURM_JOB_ID",
            "SLURM_NTASKS",
            "SLURM_NTASKS_PER_NODE",
            "SLURM_CPUS_PER_TASK",
            "SLURM_JOB_CPUS_PER_NODE",
            "SLURM_MEM_PER_CPU",
            "BINDS",
            "WORKINGDIR",
            "ILLUMINA_BASECALL",
            "NANOPORE_DRAFT_ASSEMBLY",
            "OUTPUT_DIR",
            "pipedir",
            "singularities",
            "SINGIMAGEDIR",
            "SINGIMAGENAME",
            "log",
            "moduledir"
        ],
        "input_data": [
            "ILLUMINA_BASECALL",
            "NANOPORE_DRAFT_ASSEMBLY"
        ],
        "output_data": [
            "OUTPUT_DIR"
        ]
    }
}