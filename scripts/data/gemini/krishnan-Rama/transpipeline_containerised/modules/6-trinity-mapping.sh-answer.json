{
    "application": "Slurm",
    "details": {
        "job_name": "pipeline",
        "partition": "<HPC_partition>",
        "nodes": 1,
        "tasks_per_node": 1,
        "cpus_per_task": 8,
        "memory": "150000 MB",
        "singularity_image": "trinityrnaseq/trinityrnaseq:2.15.1",
        "singularity_image_name": "trinityrnaseq_2.15.1.sif",
        "trinity_home": "$TRINITY_HOME",
        "assembly_directory": "${assemblydir}",
        "trim_directory": "${trimdir}",
        "rsem_directory": "${rsemdir}",
        "log_directory": "${log}",
        "working_directory": "${WORKINGDIR}",
        "binds": "${BINDS}"
    },
    "resource_requirements": {
        "software": [
            "singularity",
            "trinityrnaseq",
            "bowtie2",
            "RSEM"
        ],
        "hardware": {
            "memory": "150000 MB",
            "cpus": 8
        }
    }
}