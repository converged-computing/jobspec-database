        "modules": [
            "SAMtools/1.10-GCC-8.3.0",
            "Anaconda3",
            "popscle"
        ],
        "software": [
            "SAMtools",
            "Anaconda3",
            "popscle",
            "awk",
            "cut",
            "uniq",
            "sed",
            "mkdir"
        ],
        "input_files": [
            "Zm_Mo17B73_P2_G031_10x.rep1.mq10.BC.rmdup.mm.renamed_BC_CB.bam",
            "B73.Mo17.maize.biallelic.maf05.dp_filt.PHASED.vcf",
            "genotypes.txt",
            "Zm_Mo17B73_P2_G031_10x.rep1_bc_counts.txt"
