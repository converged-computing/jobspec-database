{
    "application": "DeepVariant",
    "software": [
        "Singularity",
        "DeepVariant"
    ],
    "resources": {
        "compute": {
            "cores": 2,
            "memory": "16gb"
        },
        "storage": {
            "scratch": "/scratch/Public/TRAINING/GenomeAnalysisModule/StudentSpaces/Sherlock/",
            "reference_genome": "/mnt/common/DATABASES/REFERENCES/GRCh38/GENOME/",
            "output": "/scratch/Public/TRAINING/GenomeAnalysisModule/StudentSpaces/Sherlock/${SAMPLE_ID}_DeepVariant"
        },
        "dependencies": {
            "modules": "singularity"
        }
    },
    "input": {
        "alignment_file": "${SAMPLE_ID}.sorted.bam",
        "reference_genome": "GRCh38-lite.fa"
    },
    "output": {
        "vcf_file": "${SAMPLE_ID}_DeepVariant.vcf.gz"
    }
}