{
    "application": "Balsam",
    "details": {
        "scheduler": "Cobalt",
        "resource_requirements": {
            "nodes": "{{ nodes }}",
            "queue": "{{ queue }}",
            "time": "{{ time_minutes }} minutes",
            "storage": "SSDs required, minimum size 128GB",
            "software": [
                "Balsam",
                "PostgreSQL",
                "MPI"
            ]
        },
        "environment_variables": {
            "PATH": "{{ balsam_bin }}:{{ pg_bin }}:PATH",
            "MPICH_GNI_FORK_MODE": "FULLCOPY",
            "PMI_NO_FORK": 1,
            "KMP_AFFINITY": "disabled"
        }
    }
}