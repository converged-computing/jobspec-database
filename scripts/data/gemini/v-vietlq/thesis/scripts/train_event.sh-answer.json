{
    "application": "PyTorch",
    "details": {
        "framework": "PyTorch",
        "library": "PyTorch Lightning",
        "container_image": "harbor.vinai-systems.com#research/lane_pytorch:1.8-cuda11-pytorch-lightning",
        "mount_points": [
            "/lustre/scratch/client/lane_detection/:/workspace/lane_detection",
            "/lustre/scratch/client/vinai/users/vietlq4/Event/:/workspace/Event"
        ],
        "workdir": "/workspace/Event",
        "script": "train.py",
        "arguments": [
            "--name",
            "event_cnnlstm",
            "--num_classes",
            "23",
            "--backbone",
            "resnet101",
            "--num_threads",
            "16",
            "--seed",
            "2021",
            "--train_root",
            "~/datasets/CUFED/images",
            "--train_list",
            "filenames/train_single.txt",
            "--val_list",
            "filenames/val.txt",
            "--batch_size",
            "4",
            "--save_dir",
            "checkpoints",
            "--max_epoch",
            "80",
            "--optimizer",
            "adam",
            "--lr",
            "1e-4",
            "--weight_decay",
            "1e-4",
            "--lr_policy",
            "cosine",
            "--lr_milestones",
            "30 50 70 90 100 110",
            "--lr_gamma",
            "0.5",
            "--patience",
            "20",
            "--loss",
            "ce",
            "--gpus",
            "0,1",
            "--accelerator",
            "ddp"
        ],
        "slurm_parameters": {
            "job_name": "segmentation",
            "output": "/lustre/scratch/client/vinai/users/vietlq4/out/slurm_%A.out",
            "error": "/lustre/scratch/client/vinai/users/vietlq4/out/slurm_%A.err",
            "partition": "applied",
            "nodes": "1",
            "ntasks": "8",
            "gpus_per_node": "8",
            "mem_per_gpu": "64G",
            "cpus_per_gpu": "32"
        },
        "environment_variables": {
            "NCCL_DEBUG": "INFO",
            "PYTHONFAULTHANDLER": "1",
            "NCCL_SOCKET_IFNAME": "^docker0,lo"
        }
    }
}