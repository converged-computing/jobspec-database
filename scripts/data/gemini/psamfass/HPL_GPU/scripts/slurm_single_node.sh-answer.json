{
    "application": "HPL",
    "software": [
        "OpenBLAS",
        "MPI/OpenMPI-4.1.x",
        "HPL_1GPU.dat",
        "run_xhplhip.sh"
    ],
    "resource_requirements": {
        "partition": "MI250",
        "nodes": 1,
        "tasks_per_node": 8,
        "wall_time": "00:10:00",
        "exclusive_access": true,
        "environment": "user environment",
        "mpi_args": "--map-by slot:PE=${total_cpu_cores} --bind-to core:overload-allowed --mca btl ^openib --mca pml ucx --report-bindings -x LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/opt/rocm/lib ${mpi_args}",
        "amd_log_level": 1,
        "thread_affinity": "configure via OMP_PLACES, OMP_PROC_BIND"
    }
}