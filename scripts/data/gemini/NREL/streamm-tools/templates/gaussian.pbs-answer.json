{
    "application": "Gaussian",
    "software": [
        "OpenMPI",
        "Python",
        "Gaussian"
    ],
    "resource_requirements": {
        "allocation": "<allocation>",
        "walltime": "<walltime>",
        "nodes": "<nodes>",
        "ppn": "<ppn>",
        "pmem": "1500",
        "queue": "<queue>",
        "feature": "<feature>"
    },
    "modules": [
        "openmpi-gcc/1.7.3-4.8.2",
        "python/2.7.8",
        "gaussian/g09_D.01"
    ],
    "environment_variables": {
        "NPROC": "<nproc>",
        "scratch_dir": "<scratch>",
        "GAUSS_SCRDIR": "/dev/shm"
    },
    "input_files": [
        "<input_com>"
    ],
    "output_files": [
        "<tag>.log",
        "<tag>.chk"
    ],
    "scratch_directory": "<scratch>/GAUSSIAN-<tag>.$PBS_JOBID.src"
}