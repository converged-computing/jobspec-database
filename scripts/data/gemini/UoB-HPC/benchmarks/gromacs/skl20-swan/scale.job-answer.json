{
    "application": "GROMACS",
    "details": {
        "software": [
            "aprun",
            "gmx_mpi",
            "Intel OpenMP runtime"
        ],
        "resource_requirements": {
            "queue": "sk40-lg",
            "walltime": "01:00:00",
            "nodes": "$NODES",
            "threads_per_node": 40,
            "omp_threads": 2
        },
        "environment_variables": {
            "KMP_AFFINITY": "disabled",
            "OMP_NUM_THREADS": 2,
            "GMX_MAXBACKUP": "-1"
        },
        "input_files": [
            "$BENCHMARK_SCALE"
        ],
        "output_files": [
            "noconfout"
        ]
    }
}