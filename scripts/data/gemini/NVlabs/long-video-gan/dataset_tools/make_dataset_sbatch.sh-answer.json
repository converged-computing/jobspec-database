{
    "application": "dataset_creation",
    "details": {
        "environment": {
            "conda": {
                "environment": "dataset_tools"
            }
        },
        "resources": {
            "slurm": {
                "nodes": 1,
                "tasks_per_node": 10,
                "cpus_per_task": 20,
                "exclusive": true
            }
        },
        "script_details": {
            "python_script": "dataset_tools/make_dataset_from_videos.py",
            "arguments": {
                "source_directory": "SRC_DIR",
                "destination_directory": "DST_DIR",
                "num_partitions": 10,
                "partition_index": "0-10",
                "height": 144,
                "width": 256,
                "wait_for_list_file": "optional"
            }
        }
    }
}