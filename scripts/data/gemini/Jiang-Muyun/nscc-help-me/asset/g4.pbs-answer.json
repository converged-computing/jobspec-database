{
    "application": "Singularity",
    "details": {
        "resource_requirements": {
            "walltime": "24:00:00",
            "queue": "normal",
            "nodes": 1,
            "cpus": 32,
            "gpus": 2,
            "project_code": "PROJECT_CODE",
            "job_name": "SAMPLE_TASK"
        },
        "software": {
            "singularity_image": "~/scratch/2020-05-19.sif",
            "python_package": "mne pandas seaborn",
            "python_script": "main.py"
        },
        "environment_variables": {
            "SINGULARITY_BIND": "/scratch:/scratch,/home/project:/data/project",
            "CUDA_VISIBLE_DEVICES": "0,1",
            "dataset": "dataset",
            "model": "model",
            "arg": "arg",
            "v1": "v1",
            "v2": "v2"
        },
        "commands": [
            "printenv",
            "pwd",
            "module load singularity",
            "singularity run --nv ~/scratch/2020-05-19.sif python main.py --dataset $dataset --model $model --arg $arg"
        ]
    }
}