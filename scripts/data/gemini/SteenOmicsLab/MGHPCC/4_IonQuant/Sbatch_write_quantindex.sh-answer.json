{
    "application": "Singularity",
    "details": {
        "resource_requirements": {
            "partition": "mghpcc-short",
            "account": "bch-mghpcc",
            "time": "6:00:00",
            "job_name": "quantWrite",
            "nodes": 1,
            "cpus_per_task": 2,
            "mem": "89GB"
        },
        "software_dependencies": {
            "singularity": "module load singularity",
            "container": "$container",
            "scripts": {
                "settings.sh": "$1/settings/settings.sh",
                "Write_quantindex.sh": "$1/settings/IonQuant/Write_quantindex.sh"
            },
            "environment_variables": {
                "LC_ALL": "C",
                "inputdirectory": "$inputdirectory",
                "outputdirectory": "$outputdirectory",
                "fragpipeDirectory": "$fragpipeDirectory",
                "SLURM_JOBID": "$SLURM_JOBID",
                "SLURM_ARRAY_TASK_ID": "$SLURM_ARRAY_TASK_ID"
            }
        }
    }
}