    "output_files": [
        "*.bam",
        "*.sorted.bam",
        "*.deduplicated.bam",
        "*.deduplicated.sorted.bam",
        "*.bedGraph",
        "*.cytosine_report",
        "*.counts",
        "bismark_summary.txt",
        "Bismark report HTML",
        "Bismark summary HTML"
    ]
}