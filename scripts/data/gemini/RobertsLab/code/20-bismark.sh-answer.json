{
    "application": "Bismark",
    "software": [
        "Bismark",
        "Bowtie2",
        "Samtools"
    ],
    "resources": {
        "nodes": 1,
        "walltime": "30-00:00:00",
        "memory": "120G",
        "threads": 28,
        "account": "coenv",
        "partition": "coenv"
    },
    "input_files": [
        "*.fq.gz",
        "bisulfite-converted genome"
