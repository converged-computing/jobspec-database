{
    "application": "Snakemake",
    "details": {
        "slurm": {
            "partition": "medium",
            "time": "3-00",
            "memory": "6G",
            "mail_type": "BEGIN,END,FAIL",
            "output_directory": "slurm_log"
        },
        "conda": {
            "environment": "%(conda)s"
        },
        "snappy-snake": {
            "max_jobs": "500",
            "max_jobs_per_second": "10",
            "restart_times": "0",
            "default_partition": "medium"
        },
        "runtime_dependencies": [
            "bash",
            "date",
            "hostname",
            "stat",
            "mkdir",
            "test",
            "conda",
            "snappy-snake"
        ],
        "other_requirements": {
            "scratch_space": "${HOME}/scratch/tmp"
        }
    }
}