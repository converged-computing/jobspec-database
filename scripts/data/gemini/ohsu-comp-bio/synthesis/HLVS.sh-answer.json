{
    "application": "SLURM",
    "details": {
        "resource_requirements": {
            "partition": "gpu",
            "gres": "gpu:1",
            "time": "0-2:00:00",
            "output": "./output_reports/slurm.%N.%j.out",
            "error": "./error_reports/slurm.%N.%j.err",
            "mail_type": "END,FAIL,START",
            "mail_user": "<user>@<org>.edu"
        },
        "software": {
            "python_environment": "project_root/bin/activate",
            "python_script": "HLVS.py",
            "script_arguments": [
                "output_dir_name/",
                "/train_file_path/*.tsv",
                "$1",
                "40",
                "10",
                "150"
            ]
        }
    }
}