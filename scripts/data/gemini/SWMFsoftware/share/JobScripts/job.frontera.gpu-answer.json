            "compiler": "nvhpc 20.7",
            "mpi": "nvhpc's built-in mpi",
            "post-processing": "PostProc.pl"
        },
        "environment variables": [
            "I_MPI_ADJUST_REDUCE=1",
            "UCX_LOG_LEVEL=ERROR",
            "OPAL_PREFIX=/scratch1/projects/compilers/nvhpc20v7/Linux_x86_64/20.7/comm_libs/mpi"
        ],
        "commands": [
            "mpirun -n 1 ./SWMF.exe  > runlog_`date +%y%m%d%H%M`",
            "ibrun -n 1 ./PostProc.pl -r=300 -n=10 >& PostProc.log &",
            "mpirun -n 3528 -o 56 ./SWMF.exe > runlog_`date +%y%m%d%H%M`"
        ]
    }
}