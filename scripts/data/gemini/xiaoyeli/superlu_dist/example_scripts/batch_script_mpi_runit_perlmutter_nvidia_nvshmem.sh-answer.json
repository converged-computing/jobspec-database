{
    "application": "pddrive",
    "software": [
        "PrgEnv-nvidia",
        "cudatoolkit",
        "cray-libsci",
        "cmake",
        "nvshmem/2.11.0",
        "SUPERLU",
        "MPI",
        "NVSHMEM",
        "LIBFABRIC"
    ],
    "resource_requirements": {
        "compute_nodes": 1,
        "cores_per_node": 128,
        "gpus_per_node": 1,
        "walltime": "02:00:00",
        "queue": "regular",
        "openmp_threads": 1,
        "mpi_processes": [
            1,
            2,
            3,
            4
        ],
        "superlu_settings": {
            "MAX_BUFFER_SIZE": 50000000,
            "SUPERLU_BIND_MPI_GPU": 1,
            "SUPERLU_ACC_OFFLOAD": 0,
            "SUPERLU_ACC_SOLVE": 1
        },
        "nvshmem_settings": {
            "NVSHMEM_USE_GDRCOPY": 1,
            "NVSHMEM_MPI_SUPPORT": 1,
            "NVSHMEM_LIBFABRIC_SUPPORT": 1,
            "NVSHMEM_DISABLE_CUDA_VMM": 1,
            "FI_CXI_OPTIMIZED_MRS": false,
            "NVSHMEM_BOOTSTRAP_TWO_STAGE": 1,
            "NVSHMEM_BOOTSTRAP": "MPI"
        }
    }
}