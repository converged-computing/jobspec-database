{
    "application": "SLURM",
    "details": {
        "scheduler": "SLURM",
        "partition": "bhuwan",
        "gpu_resources": "1 GPU",
        "job_name": "chunk",
        "output_file": "./slurm_logs/%j.out",
        "conda_environment": "base",
        "python_version": "3",
        "script": "run_chunk.py",
        "libraries": [
            "wandb"
        ],
        "data_files": [
            "./processed_data/train_${context_length}_chunk.pkl",
            "./processed_data/dev_${context_length}_chunk.pkl",
            "./processed_data/dev-task-flc-tc.labels.txt",
            "./processed_data/test_${context_length}_chunk.pkl"
        ],
        "model_types": [
            "hier",
            "longformer"
        ],
        "hyperparameters": {
            "learning_rate": "1e-5",
            "random_seed": 75,
            "dropout": 0.1,
            "max_len": 256,
            "num_epochs": 20,
            "weight_decay": 0.1,
            "batch_size": 8,
            "num_labels": 14,
            "context_length": 512,
            "aux_weight_train": 0.5,
            "aux_weight_eval": 0.5
        }
    }
}