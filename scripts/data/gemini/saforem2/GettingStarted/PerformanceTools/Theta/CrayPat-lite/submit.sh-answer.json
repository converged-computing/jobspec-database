{
    "application": "COBALT",
    "details": {
        "resource_requirements": {
            "nodes": 1,
            "time": 30,
            "account": "SDL_Workshop",
            "queue": "training",
            "attributes": "mcdram=cache:numa=quad"
        },
        "software_requirements": {
            "darshan": "unloaded",
            "perftools-lite": "loaded at compile time"
        },
        "runtime_environment": {
            "n_nodes": "$COBALT_JOBSIZE",
            "n_mpi_ranks_per_node": 64,
            "n_mpi_ranks": "$n_nodes * $n_mpi_ranks_per_node",
            "OMP_NUM_THREADS": 1
        },
        "execution_command": "aprun -n $n_mpi_ranks -N $n_mpi_ranks_per_node -cc depth -d $OMP_NUM_THREADS -j 1 ./main"
    }
}