{
    "application": "HybPhyloMaker",
    "details": {
        "description": "Pipeline for Hyb-Seq data processing and tree building",
        "version": "1.8.0",
        "script_purpose": "Read mapping in parallel",
        "platform_support": "MetaCentrum, Hydra",
        "resource_requirements": {
            "walltime": "1:0:0",
            "cpus": "1",
            "memory": "1GB",
            "scratch_local": "1GB",
            "queue": "sThC.q",
            "mres": "1G"
        },
        "dependencies": {
            "modules": [
                "perl-5.10.1",
                "gcc-4.8.4",
                "bowtie2",
                "bwa",
                "samtools",
                "python34-modules-gcc",
                "ococo",
                "jdk-8",
                "bioinformatics/bowtie2/2.2.9",
                "bioinformatics/bwa/0.7.12",
                "bioinformatics/samtools/1.3",
                "bioinformatics/anaconda3/5.1",
                "bioinformatics/fastuniq/1.1",
                "java/1.8"
            ],
            "programs": [
                "bowtie2",
                "bwa",
                "samtools",
                "kindel",
                "ococo",
                "ConsensusFixer"
            ]
        },
        "input_data": [
            "SamplesFileNames.txt",
            "filtered FASTQ files (paired and unpaired)",
            "reference sequence (cpDNA or exons)"
        ],
        "output_data": [
            "BAM files (sorted and indexed)",
            "mapping summary table",
            "per exon coverage data",
            "log files"
        ]
    }
}