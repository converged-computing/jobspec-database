{
    "application": "nextflow",
    "details": {
        "software": [
            "nf-core/scflow",
            "conda",
            "gcc 8.2.0",
            "awk"
        ],
        "resources": {
            "cpu": "1",
            "memory": "20gb",
            "walltime": "48 hours",
            "java_heap": "4gb"
        },
        "environment": {
            "conda_environment": "nfcore",
            "bashrc": "~/.bashrc"
        },
        "input": {
            "manifest": "data/scflow/manifest.tsv"
        },
        "output": {
            "directory": "output/scflow/by_patient/{patient}/"
        },
        "parameters": {
            "configuration_file": "config/scflow/oesophageal_10X.config",
            "profile": "imperial",
            "resume": true,
            "nextflow_runtime": "dev"
        }
    }
}