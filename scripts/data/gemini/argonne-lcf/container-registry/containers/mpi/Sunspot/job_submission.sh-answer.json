{
    "application": "PBS",
    "details": {
        "resource_requirements": {
            "nodes": "2",
            "system": "sunspot",
            "queue": "workq",
            "placement": "scatter",
            "walltime": "0:30:00",
            "account": "Aurora_deployment"
        },
        "software_requirements": {
            "modules": [
                "spack",
                "apptainer",
                "squashfuse"
            ],
            "proxy": "http://proxy.alcf.anl.gov:3128",
            "mpi_implementation": "mpich"
        },
        "container": {
            "environment_variable": "CONTAINER",
            "mount_points": [
                "/opt",
                "/soft",
                "$PWD"
            ],
            "executable": "/usr/source/mpi_hello_world"
        },
        "script_language": "bash"
    }
}