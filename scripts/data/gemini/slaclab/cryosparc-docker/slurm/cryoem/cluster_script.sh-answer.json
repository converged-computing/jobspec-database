{
    "application": "CryoSPARC",
    "details": {
        "software": [
            "CryoSPARC",
            "Singularity"
        ],
        "resources": {
            "compute": {
                "cores": "{{ num_cpu }}",
                "nodes": 1,
                "gpus": "{{ num_gpu }}"
            },
            "memory": "{{ (ram_gb*1000)|int }}MB",
            "storage": {
                "tmpfs": "/scratch/${USER}/cryosparc/"
            }
        },
        "environment_variables": [
            "LD_PRELOAD",
            "CUDA_VISIBLE_DEVICES",
            "CRYOSPARC_VERSION",
            "TMPDIR",
            "MODULEPATH",
            "RUN_ARGS"
        ]
    }
}