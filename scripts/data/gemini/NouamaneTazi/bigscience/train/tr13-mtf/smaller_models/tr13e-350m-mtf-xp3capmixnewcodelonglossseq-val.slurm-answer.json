{
    "application": "DeepSpeed",
    "details": {
        "framework": "PyTorch",
        "model": "T0",
        "training_data": "xp3capmixnewcodelong_train.txt",
        "validation_data": "xp3capmixnewcodelong_validation_pretr.txt",
        "tokenizer": "bigscience/tokenizer",
        "optimizer": "Adam",
        "learning_rate": "5e-4",
        "batch_size": 1024,
        "sequence_length": 2048,
        "layers": 24,
        "hidden_size": 1024,
        "heads": 16,
        "gpu_type": "v100-32g",
        "gpus_per_node": 4,
        "nodes": 8,
        "cores_per_task": 40,
        "memory": "32GB",
        "runtime": "20:00:00",
        "deepspeed_config": "ds_config.$SLURM_JOBID.json",
        "deepspeed_stage": 1,
        "deepspeed_activation_checkpointing": true,
        "distributed_backend": "nccl",
        "data_implementation": "mmap",
        "tensorboard_directory": "$TENSORBOARD_PATH"
