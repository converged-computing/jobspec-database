{
    "application": "GEOS-Chem",
    "details": {
        "resource_requirements": {
            "queue": "{queue_name}",
            "job_name": "{job_name}",
            "walltime": "{wall_time}",
            "memory": "{memory_need}",
            "cpus": "{cpus_need}",
            "priority": "{queue_priority}"
        },
        "environment_variables": {
            "OMP_WAIT_POLICY": "active",
            "OMP_DYNAMIC": "false",
            "OMP_PROC_BIND": "true",
            "OMP_NUM_THREADS": "16",
            "F_UFMTENDIAN": "big",
            "MPSTZ": "1024M",
            "KMP_STACKSIZE": "100000000",
            "KMP_LIBRARY": "turnaround",
            "FORT_BUFFERED": "true"
        },
        "software": {
            "omplace": "/opt/hpe/hpc/mpt/mpt-2.16/bin/omplace"
        },
        "output": {
            "log_file": "logs/log.log",
            "geos_log_file": "logs/{start_time}.geos.log",
            "hemco_log_file": "logs/{start_time}.HEMCO.log",
            "output_file": "queue_output/{start_time}.output",
            "error_file": "queue_output/{start_time}.error"
        },
        "input": {
            "input_file": "input_files/{start_time}.input.geos"
        }
    }
}