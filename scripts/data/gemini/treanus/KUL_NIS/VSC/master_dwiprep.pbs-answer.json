{
    "application": "FreeSurfer",
    "details": {
        "software": [
            "FreeSurfer 6.0.0",
            "FSL 6.0.1",
            "MRtrix 3.0.2",
            "Python 3.6.4",
            "CUDA 9.1.85",
            "ANTs 2.3.1"
        ],
        "resources": {
            "nodes": 1,
            "cpus": "##CPU##",
            "gpus": "##GPU##",
            "walltime": "##WALLTIME##",
            "partition": "##PARTITION##",
            "scratch": "$VSC_SCRATCH",
            "data": "$VSC_DATA"
        },
        "environment_variables": {
            "SINGULARITY_CACHEDIR": "$VSC_SCRATCH/singularity_cache",
            "TMPDIR": "$VSC_SCRATCH/tmp",
            "FREESURFER_HOME": "$FREESURFER_HOME",
            "FS_LICENSE": "${FREESURFER_HOME}/license.txt",
            "FSLDIR": "${FSLDIR}",
            "OMP_NUM_THREADS": "##CPU##"
        }
    }
}