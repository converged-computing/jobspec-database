{
    "application": "Nextflow",
    "details": {
        "software": [
            "Nextflow",
            "Singularity"
        ],
        "resources": {
            "cpu": 10,
            "memory": "8G",
            "queue": "haswell"
        },
        "parameters": [
            "ct_tool=discovery",
            "traitfile",
            "outdir",
            "maxbgmiss=2",
            "maxfgmiss=2",
            "maxmiss=2",
            "patterns=1,2,3,4"
        ],
        "other": {
            "tower_token": "mytowertoken",
            "trait_dir": "/my/trait/dir",
            "results_dir": "/my/result/dir/${DATE_WITH_TIME}"
        }
    }
}