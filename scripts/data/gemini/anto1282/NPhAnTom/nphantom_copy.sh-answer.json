{
    "application": "Nextflow",
    "software": [
        "Singularity",
        "miniconda",
        "openjdk",
        "nextflow",
        "NPhAnToM.nf"
    ],
    "resources": {
        "cpu": 2,
        "memory": "4G",
        "time": "10:00:00",
        "storage": [
            "/projects/mjolnir1/people/%u/BachAssemblies_%j_%a",
            "/projects/mjolnir1/people/%u/errors_%j_%a",
            "/maps/projects/mjolnir1/people/${USER}/SingularityTMP",
            "/maps/projects/mjolnir1/people/${USER}/SingulquarityTMP"
        ]
    },
    "arguments": [
        "--IDS",
        "--profile",
        "--resume",
        "--minLength",
        "--contigs",
        "-with-mpi",
        "-with-tower",
        "--accessToken"
    ],
    "environment": {
        "NXF_CLUSTER_SEED": "random integer between 0 and 16777216",
        "NXF_CONDA_ENABLED": "true"
    }
}