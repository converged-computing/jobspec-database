{
    "application": "Nextflow",
    "details": {
        "software": [
            "Nextflow",
            "module load nextflow"
        ],
        "resources": {
            "queue": "batch",
            "partition": "compute",
            "time": "72:00:00",
            "memory": "1G",
            "tasks": 1
        },
        "workflow": "rrbs",
        "profile": "sumner",
        "sample_folder": "<PATH_TO_YOUR_SEQUENCES>",
        "gen_org": "mouse",
        "pubdir": "/fastscratch/outputDir",
        "workdir": "/fastscratch/outputDir/work",
        "comment": "This script will run the reduced-representation bisulfite sequencing analysis pipeline on mouse samples using default mm10"
    }
}