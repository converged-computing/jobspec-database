{
    "application": "Snakemake",
    "details": {
        "resource_requirements": {
            "partition": "short",
            "time": "12:00:00",
            "memory_per_cpu": "400M",
            "cores": 8,
            "error_file": "snakemake.err",
            "output_file": "snakemake.log",
            "job_name": "TSS-seq-snakemake"
        },
        "workflow_configuration": {
            "cluster_config": "config.yaml",
            "conda_prefix": "../conda",
            "jobs": 9999,
            "restart_times": 1
        },
        "cluster_management": {
            "submission_command": "sbatch -p {cluster.queue} -c {cluster.n} -t {cluster.time} --mem-per-cpu={cluster.mem} -J {cluster.name} -e {cluster.err} -o {cluster.log} --parsable",
            "status_script": "slurm_status.sh"
        }
    }
}