{
    "application": "Snakemake",
    "other_software": [
        "singularity",
        "sbatch"
    ],
    "resource_requirements": {
        "cluster": {
            "gres": "lscratch:500",
            "threads": "24",
            "time": "5-00:00:00",
            "mem": "96g"
        },
        "local": {
            "cores": "24"
        },
        "temporary_directory": {
            "path": "/lscratch/$SLURM_JOBID/",
            "purpose": "intermediate output files"
        },
        "singularity": {
            "bind_paths": "/data/$USER/,/lscratch",
            "cache_directory": ".singularity"
        },
        "output_directory": {
            "path": "/scratch/hg38",
            "purpose": "pipeline working directory"
        }
    }
}