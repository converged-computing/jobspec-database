{
    "application": "SLURM",
    "details": {
        "software": [
            "intel",
            "impi",
            "cuda",
            "gromacs"
        ],
        "resource_requirements": {
            "queue": {
                "gpu": "gpu",
                "express": "express",
                "short": "short",
                "general": "general"
            },
            "nodes": "{{ n_nodes }}",
            "tasks_per_node": "{{ number_of_ranks }}",
            "threads_per_rank": "{{ number_of_threads }}",
            "hyperthreading": "enabled",
            "wall_clock_limit": "{{ formatted_time }}"
        },
        "environment_variables": {
            "OMP_NUM_THREADS": "$SLURM_CPUS_PER_TASK",
            "OMP_PLACES": "threads"
        }
    }
}