            "time": "00:10:00",
            "output": "%x-%j.out",
            "error": "%x-%j.out",
            "account": "six@gpu"
        },
        "environment_variables": {
            "six_ALL_CCFRWORK": "/path/to/six_ALL_CCFRWORK",
            "six_ALL_CCFRSCRATCH": "/path/to/six_ALL_CCFRSCRATCH",
