            "SLURM_PROCID": "/path/to/SLURM_PROCID"
        },
        "hardware": {
            "gpu_type": "v100",
            "gpu_memory": "32g",
            "gpus_per_node": 4,
            "nodes": 64
        },
        "other": {
            "data_path": "/path/to/six_ALL_CCFRWORK/datasets-custom/openwebtext-10k/meg-gpt2_text_document",
            "checkpoint_path": "/path/to/six_ALL_CCFRWORK/models-custom/megatron-gpt2/megatron_lm_345m_v0.0/release",
