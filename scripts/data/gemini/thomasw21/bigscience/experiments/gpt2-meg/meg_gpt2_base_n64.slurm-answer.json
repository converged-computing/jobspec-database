{
    "application": "megatron-lm",
    "software": [
        "python",
        "torch.distributed.launch",
        "nvidia-smi",
        "perl",
        "srun",
        "bash"
    ],
    "resource_requirements": {
        "slurm_parameters": {
            "job_name": "meg_gpt2_base_n64_dp1_tp4_pp64",
            "constraint": "v100-32g",
            "nodes": 64,
            "ntasks_per_node": 1,
            "cpus_per_task": 40,
