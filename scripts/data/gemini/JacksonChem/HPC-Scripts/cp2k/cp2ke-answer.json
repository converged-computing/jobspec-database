{
    "application": "CP2K",
    "other_software": [
        "SLURM",
        "awk",
        "sed",
        "mpirun",
        "cp2k.popt",
        "module",
        "nova",
        "intel",
        "readlink"
    ],
    "resource_requirements": {
        "nodes": {
            "default": 1,
            "max": 128
        },
        "memory": {
            "default": 192,
            "max": 768,
            "units": "GB"
        },
        "time": {
            "default": "8-00:00:00",
            "units": "days-hours:minutes:seconds"
        },
        "partitions": {
            "bigmem2": {
                "nodes": 48,
                "memory": 384,
                "type": "bigmem"
            },
            "ezm0048_bg2": {
                "nodes": 48,
                "memory": 384,
                "type": "bigmem"
            },
            "bigmem4": {
                "nodes": 48,
                "memory": 768,
                "type": "bigmem"
            },
            "amd": {
                "nodes": 128,
                "memory": 256,
                "type": "amd"
            },
            "gpu2": {
                "nodes": 48,
                "memory": 384,
                "type": "gpu"
            },
            "gpu4": {
                "nodes": 48,
                "memory": 768,
                "type": "gpu"
            },
            "ezm0048_std": {
                "nodes": 48,
                "memory": 192,
                "type": "general"
            },
            "nova": {
                "nodes": 28,
                "memory": 125,
                "type": "nova"
            },
            "general": {
                "nodes": 48,
                "memory": 192,
                "type": "general"
            }
        }
    },
    "input_file": "FNAME.inp",
    "output_file": "FNAME.out",
    "error_file": "FNAME.err",
    "scratch_directory": "/scratch/$(whoami)/${FNAME}",
    "work_directory": "$(pwd)",
    "environment_variables": [
        "OMP_NUM_THREADS",
        "OMP_PROC_BIND",
        "OMP_PLACES"
    ]
}