{
    "application": "JupyterLab",
    "software": [
        "PBS",
        "Singularity",
        "netstat",
        "mail"
    ],
    "resource_requirements": {
        "cpu": "8 cores",
        "gpu": "1",
        "memory": "64GB",
        "scratch_ssd": "200GB",
        "gpu_capability": "cuda70",
        "walltime": "8 hours"
    },
    "environment_variables": [
        "PBS_O_LOGNAME",
        "PBS_O_WORKDIR",
        "PBS_O_HOME",
        "SCRATCHDIR",
        "SINGULARITY_IMAGE",
        "SINGULARITY_CACHEDIR",
        "SINGULARITY_LOCALCACHEDIR",
        "SINGULARITY_TMPDIR"
    ],
    "singularity_options": [
        "--nv",
        "--home",
        "--bind"
    ],
    "jupyter_options": [
        "--port",
        "--NotebookApp.token",
        "--notebook-dir"
    ]
}