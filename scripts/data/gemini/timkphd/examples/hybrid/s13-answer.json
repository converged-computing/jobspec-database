{
    "application": "Slurm",
    "details": {
        "resource_requirements": {
            "nodes": 2,
            "partition": "short",
            "time": "00:10:00",
            "account": "hpcapps"
        },
        "software_requirements": {
            "mpt": "mpt/2.23 gcc/10.1.0",
            "intel-mpi": "intel-mpi/2020.1.217 gcc/10.1.0",
            "openmpi": "openmpi/4.1.0/gcc-8.4.0  comp-intel/2020.1.217"
        },
        "environment_variables": {
            "VER": [
                "gcc",
                "mpt",
                "icc"
            ],
            "JOB_ID": "$SLURM_ARRAY_JOB_ID or $SLURM_JOB_ID",
            "cpt": "$SLURM_CPUS_PER_TASK",
            "OMP_PLACES": "cores",
            "OMP_PROC_BIND": "spread",
            "OMP_NUM_THREADS": "1 to $SLURM_CPUS_PER_TASK"
        },
        "executable": "phostone.$VER"
    }
}