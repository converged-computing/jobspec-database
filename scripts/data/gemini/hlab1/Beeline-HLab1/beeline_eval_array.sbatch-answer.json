{
    "application": "Slurm",
    "details": {
        "resource_requirements": {
            "nodes": 1,
            "cpus_per_task": 4,
            "memory": "16GB",
            "time": "0:01:00"
        },
        "environment": {
            "modules": "purge",
            "conda_environment": "BEELINE"
        },
        "script": {
            "name": "BLEvaluator.py",
            "arguments": [
                "--config",
                "${field_1}",
                "--dataset_names",
                "${field_2}",
                "--algorithm_names",
                "${field_3}",
                "--${METRIC}"
            ]
        },
        "singularity": {
            "image": "conda_greene/centos-8.2.2004.sif",
            "overlay": "conda_greene/overlay-5GB-200K-beeline20211104.ext3:ro"
        },
        "output": {
            "stdout": "${CONFIG_SPLIT_SLURM_DIR}/${SLURM_ARRAY_JOB_ID}/slurm-${SLURM_ARRAY_JOB_ID}_${SLURM_ARRAY_TASK_ID}.out",
            "stderr": "${CONFIG_SPLIT_SLURM_DIR}/${SLURM_ARRAY_JOB_ID}/slurm-${SLURM_ARRAY_JOB_ID}_${SLURM_ARRAY_TASK_ID}.err"
        }
    }
}