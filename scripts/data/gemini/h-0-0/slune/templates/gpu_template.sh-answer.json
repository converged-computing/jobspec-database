{
    "application": "SLURM",
    "details": {
        "job_name": "my_job_name",
        "output_file": "my_job_output.log",
        "error_file": "my_job_error.log",
        "partition": "gpu",
        "nodes": 1,
        "tasks": 1,
        "cpus_per_task": 1,
        "gpus_per_node": 1,
        "gpu_type": "any",
        "memory_per_gpu": "1G",
        "wall_time": "01:00:00",
        "email": "your@email.com",
        "email_type": "ALL",
        "executable": "/bin/hostname",
        "virtual_environment": "pyvenv",
        "python_script": "$1",
        "python_script_arguments": "${@:2}"
    }
}