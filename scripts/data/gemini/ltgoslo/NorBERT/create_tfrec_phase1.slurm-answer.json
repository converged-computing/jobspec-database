{
    "application": "BERT",
    "software": [
        "NLPL-nvidia_BERT/20.06.8-gomkl-2019b-TensorFlow-1.15.2-Python-3.7.4",
        "python3"
    ],
    "resources": {
        "compute": {
            "nodes": 1,
            "tasks": 8,
            "memory_per_cpu": "8G"
        },
        "time": "15:00:00",
        "storage": {
            "output_directory": "$LOCAL_ROOT/data/norbert${MAX_SEQ_LEN}/"
        }
    },
    "parameters": {
        "max_predictions_per_sequence": 20,
        "max_sequence_length": 128,
        "dupe_factor": 10,
        "input_file": "${1}",
        "vocab_file": "${2}",
        "output_file": "${OUTPUT_DIR}${3}"
    }
}