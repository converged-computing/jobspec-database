{
    "application": "SLURM",
    "details": {
        "runtime": "4 hours",
        "job name": "train-gpu-cosmoflow",
        "output file": "%u-%j.out",
        "error file": "%u-%j.err",
        "nodes": 4,
        "cores per node": 12,
        "partition": "bii-gpu",
        "account": "bii_dsc_community",
        "memory": "32GB",
        "GPUs": 4,
        "software": [
            "Singularity",
            "Python",
            "nvidia-smi"
        ],
        "resource requirements": {
            "scratch directory": "/scratch/$USER",
            "Singularity image": "/$RUN_DIR/cosmoflow/mlcommons-cosmoflow/work/cosmoflow.sif",
            "script directory": "$RUN_DIR/cosmoflow/hpc",
            "project directory": "$RUN_DIR/cosmoflow"
        }
    }
}