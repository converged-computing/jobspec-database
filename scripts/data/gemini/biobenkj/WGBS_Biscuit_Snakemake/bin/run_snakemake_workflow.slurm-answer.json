{
    "application": "snakemake",
    "details": {
        "scheduler": "slurm",
        "resources": {
            "time": "4 hours",
            "memory": "8GB",
            "job_name": "SNAKEMASTER",
            "output_logs": "logs/workflows/workflow_output-%j.log",
            "slurm_account": "[ENTER YOUR SLURM ACCOUNT]",
            "slurm_partition": "[ENTER SLURM PARTITION TO USE]"
        },
        "dependencies": {
            "conda": "required for default execution",
            "mamba": "optional for faster execution, requires installation via 'conda install -n base -c conda-forge mamba'",
            "dot": "required for generating workflow DAG graph"
        },
        "configuration": {
            "config_file": "config/config.yaml",
            "profile": "profile/"
        },
        "output": {
            "workflow_log": "logs/workflows/workflow_${TIME}.txt",
            "workflow_dag": "logs/workflows/workflow_${TIME}.png"
        }
    }
}