{
    "application": "pystripe",
    "details": {
        "environment": {
            "module": "anacondapy/2020.11",
            "conda_environment": "lightsheet"
        },
        "resources": {
            "cpu_cores": 12,
            "runtime": "200 minutes",
            "memory": "25 GB",
            "cpu_affinity": "contiguous"
        },
        "input_arguments": {
            "-i": "input directory (path to stitched images)",
            "-f": "path to flat.tiff file generated using 'Generate Flat' software",
            "-o": "output directory"
        }
    }
}