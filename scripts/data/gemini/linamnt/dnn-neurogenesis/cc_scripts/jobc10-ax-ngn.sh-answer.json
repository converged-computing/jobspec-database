{
    "application": "SLURM",
    "details": {
        "job_name": "c10ngn",
        "time_limit": "2 days",
        "cores_per_task": 16,
        "gpu_type": "t4",
        "gpu_count": 1,
        "memory": "128 GB",
        "output_file_pattern": "./output/%x-%j-%a.out",
        "environment": {
            "source_directory": "~/ndl/cc_scripts",
            "virtual_environment": "~/pytorch_gpu",
            "python_version": "3.6",
            "data_directory": "~/data/cifar10.tar",
            "script_name": "c10-neurogenesis-hpt.py"
        },
        "script_arguments": {
            "data_path": "$SLURM_TMPDIR",
            "source_directory": "$SOURCEDIR",
            "number_of_epochs": 250,
            "training_steps": 5
        }
    }
}