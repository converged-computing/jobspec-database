{
    "application": "clinica",
    "software_requirements": [
        "anaconda3",
        "matlab",
        "freesurfer",
        "SPM"
    ],
    "resource_requirements": {
        "cpu_cores": 24,
        "memory_per_core": "16G",
        "runtime": "12-24:00:00"
    },
    "environment_variables": {
        "LC_ALL": "en_US.UTF-8",
        "LANG": "en_US.UTF-8",
        "MATLAB_HOME": "HOME/TO/MATLAB",
        "PATH": "${MATLAB_HOME}:${PATH}",
        "MATLABCMD": "${MATLAB_HOME}/matlab",
        "FREESURFER_HOME": "/gpfs/share/apps/freesurfer/6.0.0/freesurfer",
        "SPM_HOME": "HOME/TO/SPM"
    },
    "command": "clinica run t1-volume './ADNI_converted' './ADNI_processed' 'TRAIN' -tsv './Train_ADNI.tsv' -wd './WD_train' -np 24"
}