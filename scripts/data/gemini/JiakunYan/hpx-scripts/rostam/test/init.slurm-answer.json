{
    "application": "Slurm",
    "details": {
        "partition": "jenkins-compute",
        "time": "2:00:00",
        "nodes": 1,
        "tasks_per_node": 16,
        "job_name": "hpx-init",
        "output": "init/slurm_output.%x-o%j",
        "error": "init/slurm_error.%x-o%j",
        "modules": [
            "gcc",
            "cmake",
            "boost/1.80.0-debug",
            "hwloc",
            "openmpi",
            "papi"
        ],
        "environment_variables": {
            "HPX_SOURCE_PATH": "${HPX_SOURCE_PATH:-../../../hpx-lci-pool}",
            "LCI_SOURCE_PATH": "${LCI_SOURCE_PATH:-../../../LC-tag}",
            "CC": "gcc",
            "CXX": "g++"
        },
        "build_system": "CMake",
        "build_type": "Debug",
        "compiler_flags": [
            "-DHPX_WITH_PARALLEL_TESTS_BIND_NONE=ON",
            "-DCMAKE_BUILD_TYPE=Debug",
            "-DHPX_WITH_CHECK_MODULE_DEPENDENCIES=ON",
            "-DHPX_WITH_CXX_STANDARD=20",
            "-DHPX_WITH_DATAPAR_BACKEND=STD_EXPERIMENTAL_SIMD",
            "-DHPX_WITH_MALLOC=system",
            "-DHPX_WITH_FETCH_ASIO=ON",
            "-DHPX_WITH_COMPILER_WARNINGS=ON",
            "-DHPX_WITH_COMPILER_WARNINGS_AS_ERRORS=ON",
            "-DHPX_WITH_PARCELPORT_MPI=ON",
            "-DHPX_WITH_PARCELPORT_LCI=ON",
            "-DHPX_WITH_FETCH_LCI=ON",
            "-DFETCHCONTENT_SOURCE_DIR_LCI=${LCI_SOURCE_PATH}",
            "-DLCI_DEBUG=ON",
            "-DHPX_WITH_PARCELPORT_LCI_BACKEND=ibv",
            "-DHPX_WITH_PARCELPORT_COUNTERS=ON"
        ],
        "build_target": "hello_world_distributed"
    }
}