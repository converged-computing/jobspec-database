{
    "application": "SLURM",
    "details": {
        "resource_requirements": {
            "nodes": 1,
            "gpu_bind": "closest",
            "time": "0-06:00:00",
            "memory": "80G",
            "partition": "gpu",
            "ntasks": 16,
            "gres": "gpu:h100:2",
            "cpus_per_gpu": 8,
            "nodelist": "ac055"
        },
        "software_requirements": {
            "query_gpu.sh": "/sw/local/bin/query_gpu.sh",
            "nvidia-smi": "nvidia-smi",
            "clinfo": "clinfo",
            "CUDA": "$BUILD_EASY_CUDA_VER",
            "gcc": "$BUILD_GCC_VER",
            "ucx": "${BUILD_UCX_VER}",
            "openmpi": "${BUILD_OPENMPI_VER}",
            "build_scripts": "${BUILD_PATH}/build_scripts/build_mpi.script",
            "mpich": "${BUILD_MPICH_VER}"
        }
    }
}