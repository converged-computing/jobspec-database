{
    "application": "jsrun",
    "details": {
        "requirements": {
            "software": [
                "python",
                "jsrun",
                "ssh"
            ],
            "resources": {
                "nodes": 1,
                "cpus": "{{ bsub_num_cpus }}",
                "gpus": 0
            },
            "queue": "{{ qos }}",
            "walltime": "{{ walltime }}"
        },
        "script_arguments": {
            "exp": "{{ exp }}",
            "num_runs": "{{ num_runs }}",
            "num_cpus": "{{ num_cpus }}",
            "detector_name": "{{ detector_name }}"
        },
        "environment_variables": {
            "LOGLEVEL": "INFO"
        }
    }
}