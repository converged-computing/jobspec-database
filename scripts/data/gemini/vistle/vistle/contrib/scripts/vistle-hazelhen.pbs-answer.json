{
    "application": "vistle",
    "details": {
        "resource_requirements": {
            "walltime": "20 minutes",
            "nodes": 4,
            "cores_per_node": 2,
            "threads_per_core": 12
        },
        "software_requirements": {
            "modules": [
                "PrgEnv-gnu",
                "tools/vtk/8.1.0",
                "tools/boost/1.66.0"
            ],
            "libraries": [
                "MPI",
                "boost",
                "vtk"
            ],
            "environment_variables": {
                "OMP_NUM_THREADS": "12",
                "ATP_ENABLED": "1",
                "VISTLE_LAUNCH": "aprun",
                "MPICH_MAX_THREAD_SAFETY": "multiple",
                "MPICH_VERSION_DISPLAY": "1",
                "PATH": "$VDIR/bin:$PATH",
                "LD_LIBRARY_PATH": "$VDIR/lib:$HOME/hazelhen/lib:$LD_LIBRARY_PATH:$PYTHON_DIR/lib"
            }
        }
    }
}