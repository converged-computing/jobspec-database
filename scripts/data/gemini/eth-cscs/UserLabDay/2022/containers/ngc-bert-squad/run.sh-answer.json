{
    "application": "SLURM",
    "details": {
        "job name": "bert-squad-finetune",
        "time limit": "30 minutes",
        "nodes": 8,
        "tasks per core": 1,
        "tasks per node": 1,
        "CPUs per task": 12,
        "constraints": "GPU",
        "account": "<account>",
        "modules": [
            "daint-gpu",
            "sarus",
            "OpenMPI/4.1.2"
        ],
        "environment variable": "OMP_NUM_THREADS",
        "environment variable value": "$SLURM_CPUS_PER_TASK",
        "container": "nvcr.io/nvidia/pytorch:22.08-py3",
        "python script": "bert_squad_deepspeed_train.py",
        "deepspeed configuration": "ds_config.json"
    }
}