{
    "application": "Singularity",
    "details": {
        "resources": {
            "cpus": 64,
            "memory": "3380 MiB per CPU",
            "nodes": 1
        },
        "software": {
            "modules": [
                "rhel8/default-icl",
                "R/4.1.0-icelake"
            ],
            "singularity_image": "~/dandelion_jan23/sc-dandelion.sif",
            "mpi": "Intel MPI",
            "language": "R"
        },
        "environment_variables": [
            "OMP_NUM_THREADS=1",
            "I_MPI_PIN_DOMAIN=omp:compact",
            "I_MPI_PIN_ORDER=scatter",
            "R_LIBS_USER=~/dummy/:$R_LIBS_USER",
            "META_FILE=meta_file_donor_$i",
            "NODEFILE=`generate_pbs_nodefile`"
        ]
    }
}