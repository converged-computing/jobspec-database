{
    "application": "Slurm",
    "details": {
        "software": [
            "docker",
            "srun",
            "tee",
            "sed",
            "alpine:latest",
            "bash"
        ],
        "resources": {
            "nodes": 1,
            "tasks": 1,
            "memory": "${SLURM_CPUS_PER_TASK}*${SLURM_MEM_PER_CPU}M",
            "cpus": "${SLURM_CPUS_PER_TASK}",
            "environment_variables": [
                "IMAGE_PATH",
                "CWD",
                "DOCKER_CWD",
                "JOB_SHELL",
                "SCRIPT_PATH",
                "DOCKER_SCRIPT_PATH",
                "SLURM_JOB_ID",
                "SLURM_NODELIST",
                "SLURM_CPUS_PER_TASK",
                "SLURM_MEM_PER_CPU",
                "SLURM_RESTART_COUNT",
                "OMP_NUM_THREADS"
            ]
        }
    }
}