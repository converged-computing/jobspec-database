{
    "application": "Snakemake",
    "details": {
        "executor": "slurm",
        "job_scheduler": "SLURM",
        "singularity": "required",
        "resource_requirements": {
            "cpus": "24",
            "memory": "96 GB",
            "gres": "lscratch:500"
        },
        "other_requirements": {
            "output_directory": "-o, --outdir",
            "master_job_name": "-j, --job-name",
            "singularity_bind_paths": "-b, --bind-paths",
            "singularity_cache": "-c, --cache",
            "temporary_directory": "-t, --tmp-dir",
            "wait": "-w, --wait"
        }
    }
}