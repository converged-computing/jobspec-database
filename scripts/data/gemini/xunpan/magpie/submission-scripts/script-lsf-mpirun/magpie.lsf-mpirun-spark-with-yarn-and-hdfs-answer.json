{
    "application": "Magpie",
    "details": {
        "software": {
            "hadoop": "3.2.2",
            "spark": "3.0.3-bin-hadoop3.2"
        },
        "resource_requirements": {
            "java": "/usr/lib/jvm/jre-1.8.0/",
            "python": "/usr/bin/python",
            "hdfs_path": "/ssd/${USER}/hdfs",
            "lustre_path": "/lustre/${USER}/hdfsoverlustre/",
            "networkfs_path": "/networkfs/${USER}/hdfsovernetworkfs/",
            "rawnetworkfs_path": "/lustre/${USER}/rawnetworkfs/",
            "localstore_path": "/ssd/${USER}/localstore/",
            "spark_scratch_dir": "/lustre/${USER}/sparkscratch/",
            "spark_staging_dir": "file:///lustre/${USER}/sparkStaging/"
        },
        "other_requirements": {
            "remote_shell": "ssh",
            "mpirun_options": "-genvall -genv MV2_USE_APM 0"
        }
    }
}