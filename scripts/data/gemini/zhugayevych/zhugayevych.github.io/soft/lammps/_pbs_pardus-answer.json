{
    "application": "LAMMPS",
    "details": {
        "software": [
            "Intel Compiler",
            "Intel MPI",
            "LAMMPS"
        ],
        "resources": {
            "nodes": 1,
            "processors_per_node": 1,
            "walltime": "96 hours",
            "environment_variables": {
                "OMP_NUM_THREADS": 1,
                "LAMMPS_POTENTIALS": "~/lammps/_res",
                "RUN_DIR": "~/lammps/$PBS_JOBNAME or ~/lammps"
            },
            "input_file": "$PBS_JOBNAME.lam",
            "output_files": [
                "$PBS_JOBNAME.out",
                "$PBS_JOBNAME.stdout"
            ]
        }
    }
}