{
    "application": "PBS",
    "details": {
        "software": [
            "perl",
            "blast",
            "Prodigal",
            "remove_simple_contigs.pl",
            "get_hits.pl"
        ],
        "resources": {
            "nodes": 5,
            "cores_per_node": 10,
            "memory": "50GB",
            "virtual_memory": "235GB",
            "walltime": "12:00:00",
            "cputime": "600:00:00"
        },
        "data": {
            "input_files": [
                "FILES_LIST",
                "SPLIT/$CFILE",
                "BACTERIAL_DB",
                "VIRAL_DB"
            ],
            "output_files": [
                "$PRODIGAL_DIR/$CFILE.gbk",
                "$PRODIGAL_DIR/$CFILE.faa",
                "$SELECTED/selected_$CFILE.faa",
                "$BLAST_DIR/bact_$CFILE.txt",
                "$BLAST_DIR/vir_$CFILE.txt",
                "$SAMPLE_DIR/blast/bact_$CFILE.txt",
                "$SAMPLE_DIR/blast/vir_$CFILE.txt",
                "$SAMPLE_DIR/blast/results_$CFILE.tab"
            ],
            "directories": [
                "$STDOUT_DIR2",
                "$STDERR_DIR2",
                "$PRODIGAL_DIR",
                "$SELECTED",
                "$WORKER_DIR",
                "$BLAST_DIR",
                "$SAMPLE_DIR",
                "$FIG_LOG",
                "$TAX_LOG"
            ]
        }
    }
}