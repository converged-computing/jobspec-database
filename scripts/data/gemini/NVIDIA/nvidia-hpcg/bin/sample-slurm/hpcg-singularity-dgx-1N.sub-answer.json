{
    "application": "HPCG",
    "container": "nvcr.io#nvidia/hpc-benchmarks:24.03.sif",
    "resource_requirements": {
        "nodes": 1,
        "tasks_per_node": 8,
        "time": "40:00",
        "mpi": "pmix",
        "cpu_bind": "none"
    },
    "data_mount": "/path/to/your/custom/dat-files:/workspace/dat-files",
    "script_location": {
        "x86_64": "./hpcg.sh",
        "aarch64": "./hpcg-aarch64.sh"
    },
    "data_file": "/workspace/hpcg-linux-${arch}/sample-dat/hpcg.dat"
}