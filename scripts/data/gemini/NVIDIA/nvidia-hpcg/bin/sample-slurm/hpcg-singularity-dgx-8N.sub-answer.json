{
    "application": "HPCG",
    "details": {
        "container": "nvcr.io#nvidia/hpc-benchmarks:24.03.sif",
        "mount": "/path/to/your/custom/dat-files:/workspace/dat-files",
        "slurm_parameters": {
            "nodes": 8,
            "tasks_per_node": 8,
            "job_name": "test-hpcg.8N",
            "cpu_bind": "none",
            "mpi": "pmix",
            "time": "40:00",
            "output": "slurm-%x.%J.%N.out"
        },
        "runtime_script": {
            "aarch64": "./hpcg-aarch64.sh",
            "x86_64": "./hpcg.sh"
        },
        "dat_file": "/workspace/hpcg-linux-${arch}/sample-dat/hpcg.dat"
    }
}