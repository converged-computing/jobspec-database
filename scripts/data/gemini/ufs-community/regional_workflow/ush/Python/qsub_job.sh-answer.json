{
    "application": "PBS",
    "details": {
        "resource_requirements": {
            "nodes": 1,
            "mpi_processes": 24,
            "cpus": 24,
            "walltime": "00:20:00"
        },
        "environment_variables": {
            "HOMErrfs": "/path-to/ufs-srweather-app/regional_workflow",
            "EXPTDIR": "/path-to/expt_dirs/your_experiment",
            "GLOBAL_VAR_DEFNS_FP": "${EXPTDIR}/var_defns.sh",
            "CDATE": "${DATE_FIRST_CYCL}${CYCL_HRS}",
            "FCST_START": 3,
            "FCST_END": "${FCST_LEN_HRS}",
            "FCST_INC": 3,
            "SHAPE_FILES": "/glade/p/ral/jntp/UFS_SRW_app/tools/NaturalEarth"
        },
        "modules": [
            "ncarenv",
            "conda/latest",
            "/glade/p/ral/jntp/UFS_SRW_app/conda/python_graphics"
        ],
        "python_script": "plot_allvars.py",
        "script_arguments": [
            "${CDATE}",
            "${FCST_START}",
            "${FCST_END}",
            "${FCST_INC}",
            "${EXPTDIR}",
            "${SHAPE_FILES}",
            "${POST_OUTPUT_DOMAIN_NAME}"
        ],
        "output_files": [
            "plot_allvars.out"
        ]
    }
}