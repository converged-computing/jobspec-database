{
    "application": "CP2K",
    "details": {
        "environment": "Piz Daint",
        "nodes": 1,
        "mpi_tasks_per_node": 12,
        "openmp_threads_per_task": 12,
        "modules": [
            "daint-gpu",
            "CP2K"
        ],
        "environment_variables": [
            "OMP_NUM_THREADS=${SLURM_CPUS_PER_TASK:-1}",
            "CRAY_CUDA_MPS=1"
        ],
        "ulimit": "-s unlimited",
        "command": "srun -n 12 cp2k.popt -i md.inp -o md.out"
    }
}