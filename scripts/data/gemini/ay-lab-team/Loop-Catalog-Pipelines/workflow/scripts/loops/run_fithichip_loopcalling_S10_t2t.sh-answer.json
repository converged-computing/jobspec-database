{
    "application": "FitHiChIP",
    "other_software": [
        "HiC-Pro",
        "HiChIP-Peaks",
        "bedtools"
    ],
    "resource_requirements": {
        "nodes": 1,
        "processors": 1,
        "memory": "100gb",
        "walltime": "80:00:00"
    },
    "input_files": [
        "validpairs file",
        "peaks file",
        "chromosome size file"
    ],
    "output_files": [
        "FitHiChIP-S10.loops.bedpe",
        "FitHiChIP-S10.loops.bed",
        "FitHiChIP-S10.filtered.loops.bedpe",
        "FitHiChIP-S10.filtered.loops.bed"
    ],
    "environment_variables": [
        "PBS_O_WORKDIR",
        "PBS_ARRAYID"
    ],
    "script_purpose": "To call loops from HiChIP data using FitHiChIP",
    "script_parameters": {
        "peak_mode": "3",
        "IntType": "3",
        "BINSIZE": "10000",
        "LowDistThr": "20000",
        "UppDistThr": "2000000",
        "UseP2PBackgrnd": "1",
        "BiasType": "1",
        "MergeInt": "1",
        "QVALUE": "0.01",
        "OverWrite": "1"
    }
}