{
    "application": "SLURM",
    "details": {
        "job_scheduler": "SLURM",
        "language": "Bash",
        "resource_requirements": {
            "nodes": 2,
            "tasks": 4,
            "cores_per_task": 2,
            "runtime": "10 minutes",
            "memory_per_node": "100 MB",
            "partition": "test"
        },
        "script_execution": {
            "method": "srun",
            "arguments": "-n $SLURM_NTASKS -c $SLURM_CPUS_PER_TASK -N $SLURM_JOB_NUM_NODES bash $SCRIPT"
        }
    }
}