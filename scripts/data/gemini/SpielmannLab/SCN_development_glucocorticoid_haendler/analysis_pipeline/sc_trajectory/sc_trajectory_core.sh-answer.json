{
    "application": "Nextflow",
    "details": {
        "environment": {
            "conda": {
                "environment": "scTrajectory"
            },
            "modules": [
                "nextflow/v22.04.1"
            ]
        },
        "slurm": {
            "partition": "shortterm",
            "nodes": 1,
            "cores": 1,
            "memory": "200GB",
            "job_name": "sc_trajectory",
            "output": "slurm-%x-%j.out"
        },
        "script": {
            "name": "sc_trajectory.nf",
            "parameters": [
                "sc_trajectory_params_neurons.yaml",
                "sc_trajectory_params_astrocytes_by_annotation.yaml",
                "sc_trajectory_params_picked_astrocytes.yaml"
            ]
        },
        "resource": {
            "scratch": {
                "usage": "stores scripts, bin directory"
            },
            "work": {
                "usage": "contains anaconda installation"
            }
        }
    }
}