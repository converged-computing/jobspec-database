{
    "application": "nextflow",
    "details": {
        "modules": [
            "singularity",
            "nextflow",
            "ucsc",
            "bedtools",
            "R"
        ],
        "resources": {
            "tasks": 2,
            "cpus_per_task": 2,
            "memory": "150g",
            "time": "1:00:00",
            "job_name": "RiboPrint"
        },
        "environment_variables": [
            "NXF_SINGULARITY_CACHEDIR=$PWD/.singularity",
            "SINGULARITY_CACHEDIR=$PWD/.singularity"
        ],
        "directories": [
            "Results"
        ],
        "workflow": "RiboFootPrint.nf",
        "parameters_file": "RiboFootPrint.parameters.yaml",
        "configuration_file": "nextflow.config"
    }
}