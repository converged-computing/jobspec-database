{
    "application": "Snakemake",
    "software_requirements": [
        "miniconda",
        "snakemake/7.32.4-3.12.1",
        "conda"
    ],
    "resource_requirements": [
        "cpus-per-task=1",
        "mem=1G",
        "time=30-00:00:00",
        "sbatch --mem {resources.mem_mb}",
        "sbatch --cpus-per-task {threads}",
        "sbatch --time={resources.time}",
        "sbatch --output=log/slurm_{rule}-%A.out",
        "sbatch --error=log/slurm_{rule}-%A.err",
        "jobs=20"
    ]
}