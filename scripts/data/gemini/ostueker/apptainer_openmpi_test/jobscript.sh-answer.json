{
    "application": "Slurm",
    "details": {
        "resource_requirements": {
            "time": "15 minutes",
            "nodes": 2,
            "tasks_per_node": 4,
            "memory_per_cpu": "1000 MB"
        },
        "modules": [
            "StdEnv/2020",
            "gcc/9.3.0",
            "openmpi/4.0.3",
            "apptainer"
        ],
        "environment_variables": {
            "CACHE_DIR": "${SLURM_TMPDIR}/.cache",
            "APPTAINER_OPTS": "--bind=\"${SLURM_TMPDIR}:/tmp,${CACHE_DIR}:/fd/.cache\" --home $PWD",
            "PMIX_MCA_gds": "^ds12",
            "OMPI_MCA_btl_vader_single_copy_mechanism": "none"
        },
        "containers": [
            "openmpi-hybrid.sif",
            "openmpi-hybrid-slurm.sif"
        ],
        "mpi_executors": [
            "mpirun",
            "mpiexec",
            "srun --mpi=pmi2"
        ],
        "tests": [
            "/opt/mpitest",
            "/opt/mpitest_sendrecv",
            "/opt/reduce_stddev 100000000"
        ]
    }
}