{
    "application": "nbody_bench",
    "details": {
        "slurm": {
            "account": "csmpi",
            "partition": "csmpi_fpga_long",
            "cpus_per_task": 32,
            "gres": "gpu:nvidia_a30:1",
            "mem": "64G",
            "time": "4:00:00",
            "output": "seq.out"
        },
        "xilinx": {
            "xrt": "/opt/xilinx/xrt"
        },
        "build": {
            "makefile": "Makefile"
        },
        "input": {
            "n": "Number of bodies",
            "iterations": "Number of advancements in the benchmark",
            "runs": "How often to run the benchmark",
            "out_dir": "Directory to store benchmark results."
        },
        "output": {
            "file": "nbody_${n}_${iter}_seq_C"
        },
        "other": {
            "variance": "A tool that calculates standard deviation"
        }
    }
}