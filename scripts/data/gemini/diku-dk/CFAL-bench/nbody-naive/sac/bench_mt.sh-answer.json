{
    "application": "nbody_mt",
    "details": {
        "resource_requirements": {
            "account": "csmpi",
            "partition": "csmpi_fpga_long",
            "cpus": 32,
            "gpu": "nvidia_a30",
            "memory": "64G",
            "time": "4:00:00"
        },
        "software_dependencies": {
            "slurm": "for job scheduling",
            "xilinx_xrt": "for FPGA programming",
            "make": "for building the nbody_mt executable",
            "variance": "for calculating standard deviation"
        },
        "input_arguments": {
            "N": "Number of bodies",
            "ITERATIONS": "Number of advancements in the benchmark",
            "RUNS": "How often to run the benchmark",
            "OUT_DIR": "Directory to store benchmark results",
            "P": "Number of processors to use"
        },
        "output_format": {
            "file": "nbody_${n}_${iter}_mt_sac",
            "contents": "p,mean,stddev"
        }
    }
}