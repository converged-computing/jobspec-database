{
    "application": "Meso-NH",
    "software_requirements": {
        "MPI": "mpirun",
        "shell": "ksh",
        "queueing_system": "nqsII",
        "file_transfer_protocol": {
            "default": "ftget",
            "ssh": "scp",
            "workdir": "ln -s"
        }
    },
    "resource_requirements": {
        "processors": {
            "tasks_per_node": "${TPN}",
            "nodes": "${NBP}"
        },
        "memory": "${MEM}",
        "walltime": "${TIME}"
    },
    "environment_variables": {
        "execution_directory": "${EXECDIR}",
        "transfer_directory": "${FTDIR}",
        "work_directory": "${WORKDIR}",
        "input_directory": "${INDIR}",
        "output_directory": "${OUTDIR}"
    },
    "file_handling": {
        "link_files": "ln -sf",
        "get_files": "${GETFILES}",
        "put_files": "${PUTFILES}",
        "remove_directory": "${RMMKDIR}"
    },
    "script_structure": {
        "sections": [
            "Run Parameter",
            "exection directory",
            "transfert protocole",
            "Job Header",
            "Default Name of input/output files parameters"
        ],
        "modules": [
            "PrepPgd",
            "PrepNest",
            "PrepReal",
            "Spawning",
            "Mesonh",
            "Diag",
            "Conv2dia",
            "Diaprog"
        ]
    }
}