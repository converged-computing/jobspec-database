{
    "application": "Snakemake",
    "details": {
        "modules": [
            "python/3.5",
            "snakemake/5.1.3",
            "perl/5.24.3"
        ],
        "resources": {
            "cluster": {
                "config": "cluster.json",
                "options": [
                    "--gres {cluster.gres}",
                    "--cpus-per-task {cluster.threads}",
                    "-p {cluster.partition}",
                    "-t {cluster.time}",
                    "--mem {cluster.mem}"
                ]
            },
            "files": {
                "Snakefile": "Snakefile",
                "Scripts": [
                    "Scripts/summarize_usage.pl",
                    "Scripts/filter_usage_summary.py",
                    "Reports/summarize_fastqc_reports.py",
                    "Reports/ngser.pl",
                    "Reports/stats2html.py"
                ]
            }
        },
        "parameters": {
            "workdir": "/scratch/dwheeler/test2",
            "datadir": "/data/CCBR/dev/Pipeline/Pipeliner",
            "jobs": 500,
            "rerun_incomplete": true,
            "keep_going": true,
            "restart_times": 1,
            "stats_file": "Reports/initialqc.stats",
            "log_file": "Reports/snakemake.log",
            "usage_table_file": "HPC_usage_table.txt",
            "filtered_usage_table_file": "HPCusagetable.txt"
        }
    }
}