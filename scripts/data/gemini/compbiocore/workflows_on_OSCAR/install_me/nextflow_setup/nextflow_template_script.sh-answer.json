{
    "application": "Nextflow",
    "details": {
        "software": [
            "Nextflow",
            "Singularity"
        ],
        "resources": {
            "base_job": {
                "time": "0-05:00:00",
                "nodes": "1",
                "memory": "8g",
                "mail_type": "ALL"
            },
            "environment_variables": {
                "SINGULARITY_CACHEDIR": "$HOME/scratch",
                "NXF_SINGULARITY_CACHEDIR": "$HOME/scratch"
            }
        },
        "pipeline_examples": {
            "nf-core": "nextflow run nf-core/<name_of_nf-core_pipeline_you_want> -profile singularity",
            "GitHub": "nextflow run nextflow-io/<name_of_pipeline_you_want>",
            "custom": "nextflow run <path_to_your_nextflow.nf_file_and_project_directory>"
        },
        "config_file": "config.yaml"
    }
}