{
    "application": "Kokkos",
    "details": {
        "environment": {
            "modules": [
                "DefApps",
                "PrgEnv-cray",
                "rocm/5.1.0"
            ],
            "environment_variables": [
                {
                    "name": "OMP_PROC_BIND",
                    "value": "spread"
                },
                {
                    "name": "OMP_PLACES",
                    "value": "threads"
                },
                {
                    "name": "OMP_NUM_THREADS",
                    "value": "4"
                }
            ]
        },
        "resources": {
            "nodes": 1,
            "tasks": 4,
            "cores_per_task": 4,
            "gpus_per_task": 1,
            "gpu_binding": "closest"
        },
        "build_directories": [
            "./make_build_dir",
            "./cmake_build_dir"
        ]
    }
}