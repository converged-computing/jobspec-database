{
    "application": "SLURM",
    "details": {
        "software": [
            "dusty_tails.exe",
            "python3",
            "input.py"
        ],
        "resources": {
            "partition": "astro2_long",
            "nodes": 1,
            "tasks_per_node": 1,
            "cpus_per_task": 4,
            "scratch_directory": "scratch/${SLURM_JOBID}"
        },
        "file_dependencies": {
            "executables": "${SLURM_SUBMIT_DIR}/executables",
            "source_code": "${SLURM_SUBMIT_DIR}/src/*.o",
            "input_files": "${SLURM_SUBMIT_DIR}/input/*.in",
            "input_script": "${SLURM_SUBMIT_DIR}/input.py",
            "input_grid_file": "${SLURM_SUBMIT_DIR}/input_grid.csv"
        },
        "output_files": [
            "run.out",
            "python.out",
            "gmon.out",
            "id.txt",
            "data/output.bin",
            "data/output_final.bin",
            "data/light_curve.bin"
        ],
        "output_directory": "/lustre/astro/bmce/Dusty_Tails/simulations/${directory}/${orbit}"
    }
}