{
    "application": "SLURM",
    "details": {
        "resource_requirements": {
            "nodes": 2,
            "gpus": "a100:2",
            "tasks_per_node": 2,
            "memory": "8G",
            "cpus": 32,
            "time": "0-00:59:00"
        },
        "software_dependencies": {
            "conda_environment": "$LUSTRE/mytorch",
            "python": "$LUSTRE/mytorch/bin/python",
            "script": "sampleLI.py"
        },
        "debugging_flags": {
            "NCCL_DEBUG": "INFO",
            "PYTHONFAULTHANDLER": 1
        },
        "cluster_specific_settings": {
            "network_interface": "NCCL_SOCKET_IFNAME=^docker0,lo",
            "CUDA_version": "NCCL/2.4.7-1-cuda.10.0"
        }
    }
}