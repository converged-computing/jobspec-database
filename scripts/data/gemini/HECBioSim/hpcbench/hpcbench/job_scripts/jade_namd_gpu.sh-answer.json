{
    "application": "namd",
    "details": {
        "scheduler": "slurm",
        "resources": {
            "nodes": 1,
            "time": "00:50:00",
            "gpus": "$num_gpus",
            "cpus_per_task": 4,
            "partition": "$partition"
        },
        "software": {
            "namd": "3.0-alpha7",
            "anaconda": "3"
        },
        "monitoring_tools": [
            "hpcbench"
        ],
        "output_files": [
            "sysinfo.json",
            "gpulog.json",
            "cpulog.json",
            "namdlog.txt",
            "accounting.json",
            "run.json",
            "slurm.json",
            "meta.json",
            "thermo.json",
            "benchmark.log",
            "$benchout"
        ],
        "input_files": [
            "$benchmarkinfile"
        ]
    }
}