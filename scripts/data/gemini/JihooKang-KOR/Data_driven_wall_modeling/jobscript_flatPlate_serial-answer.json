{
    "application": "Singularity",
    "details": {
        "environment": "SLURM",
        "cluster_partition": "standard",
        "nodes": 1,
        "time_limit": "120:00:00",
        "job_name": "2Dplate",
        "ranks_per_node": 4,
        "software": [
            "Singularity/3.6.0rc2",
            "MPI/OpenMPI/4.0.1/cuda_aware_gcc_6.3.0"
        ],
        "executable": "Allrun.singularity",
        "input": {
            "case_name": "$1",
            "turbulence_model_num": "$2"
        },
        "directory": "run/$1"
    }
}