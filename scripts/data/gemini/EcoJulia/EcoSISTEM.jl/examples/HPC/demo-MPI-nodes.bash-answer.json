{
    "application": "SLURM",
    "details": {
        "resource_requirements": {
            "account": "project0000",
            "output_file": "%x-%j.out",
            "error_file": "%x-%j.err",
            "partition": "nodes",
            "time_limit": "0-12:00:00",
            "memory": "256G",
            "nodes": 4,
            "tasks": 32,
            "cpus_per_task": 8,
            "tasks_per_node": 8,
            "threads_per_core": 1
        },
        "modules": [
            "apps/julia",
            "mpi/openmpi"
        ],
        "environment_variables": {
            "OMP_NUM_THREADS": 1,
            "JULIA_NUM_THREADS": 8
        },
        "command": "bin/mpiexecjl --project=examples -n 32 julia -t 8 --project=examples examples/HPC/MPIRun.jl"
    }
}