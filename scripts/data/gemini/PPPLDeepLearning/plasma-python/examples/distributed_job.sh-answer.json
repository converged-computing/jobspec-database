{
    "application": "mpi_learn.py",
    "details": {
        "environment": {
            "modules": [
                "anaconda",
                "cudatoolkit/7.5",
                "cudann",
                "openmpi"
            ]
        },
        "resources": {
            "nodes": 10,
            "gpus_per_node": 4,
            "tasks_per_node": 16,
            "tasks_per_socket": 8,
            "runtime": "2 hours"
        },
        "mpi": {
            "mpirun_arguments": "-npernode 4"
        }
    }
}