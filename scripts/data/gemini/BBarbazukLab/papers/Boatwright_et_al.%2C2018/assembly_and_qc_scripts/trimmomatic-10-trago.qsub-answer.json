{
    "application": "Trimmomatic",
    "software": [
        "Trimmomatic",
        "sed",
        "date",
        "mkdir"
    ],
    "resources": [
        "PBS",
        "module load trimmomatic",
        "java",
        "HPC_TRIMMOMATIC_LIB/trimmomatic.jar",
        "nodes=1:ppn=4",
        "walltime=15:00:00",
        "pmem=5gb",
        "q=bio",
        "threads=4"
    ],
    "input_files": [
        "trago_biorep_list.csv",
        "${REP}_${BARCODE}_${LANE}_${READTYPE1}_001_adapter_trimmed.fq",
        "${REP}_${BARCODE}_${LANE}_${READTYPE2}_001_adapter_trimmed.fq"
    ],
    "output_files": [
        "${REP}_${BARCODE}_${LANE}_${READTYPE1}_001_trimmomatic_10_paired.fq",
        "${REP}_${BARCODE}_${LANE}_${READTYPE1}_001_trimmomatic_10_unpaired.fq",
        "${REP}_${BARCODE}_${LANE}_${READTYPE2}_001_trimmomatic_10_paired.fq",
        "${REP}_${BARCODE}_${LANE}_${READTYPE2}_001_trimmomatic_10_unpaired.fq",
        "${REP}_${BARCODE}_${LANE}_${READTYPE1}_${READTYPE2}_001_trimmomatic_10.log"
    ]
}