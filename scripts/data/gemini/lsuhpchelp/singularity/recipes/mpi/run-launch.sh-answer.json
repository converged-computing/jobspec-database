{
    "application": "MPI",
    "details": {
        "runtime": "Singularity",
        "image": "/work/sbrandt/sing-mpi.simg",
        "libraries": [
            "libmpich"
        ],
        "scripts": [
            "launch.sh",
            "unslurm.py",
            "pingpong.py"
        ],
        "environment": {
            "NODES": "qbc001,qbc002",
            "SECS": 2,
            "MAX_SIZE": 15,
            "SING_OPTS": "--bind $HOME/libmpich:/usr/lib64/mpich/lib --bind /etc/ssh/ssh_known_hosts --bind /etc/hosts --bind /etc/hostname"
        },
        "resource_requirements": {
            "nodes": 2,
            "cores": 2,
            "partition": "checkpt"
        }
    }
}