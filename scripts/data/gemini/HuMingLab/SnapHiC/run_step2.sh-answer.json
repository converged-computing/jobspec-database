{
    "application": "snapHiC",
    "details": {
        "software": {
            "snapHiC": "https://github.com/kundajelab/snapHiC",
            "python": "3.6+",
            "mpirun": "Required if parallelism is set to 'parallel'"
        },
        "modules": "Requires modules to be installed using 'pip install -r requirements.txt'",
        "resources": {
            "PBS": {
                "queue": "hotel",
                "jobname": "snHiC_s2",
                "nodes": 5,
                "ppn": 3,
                "walltime": "50:00:00",
                "mem": "100GB",
                "output": "log.${PBS_JOBNAME}.${PBS_JOBID}.log",
                "error": "log.${PBS_JOBNAME}.${PBS_JOBID}.log"
            },
            "parallelism": {
                "options": [
                    "parallel",
                    "threaded",
                    "singleproc"
                ]
            },
            "dependencies": {
                "cooler": "Requires LC_ALL=en_US.utf-8 and LANG=en_US.utf-8"
            }
        }
    }
}