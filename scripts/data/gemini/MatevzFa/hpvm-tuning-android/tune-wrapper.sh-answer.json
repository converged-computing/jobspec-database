{
    "application": "Singularity",
    "details": {
        "container_image": "$HOME/hpvm.sb",
        "python_script": "$HOME/hpvm-tuning-android/tune_x.py",
        "slurm_resources": {
            "tasks": 1,
            "cpus_per_task": 16,
            "memory": "32G",
            "gpus": 1
        },
        "scratch_directory": "/data1/slurm/$SLURM_JOB_ID",
        "arguments": [
            "-D",
            "$(mktemp -ud)",
            "$@"
        ]
    }
}