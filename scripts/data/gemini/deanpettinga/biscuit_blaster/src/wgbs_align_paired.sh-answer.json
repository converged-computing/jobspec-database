            "walltime=120:00:00",
            "mem=200gb",
            "nodes=1:ppn=40",
            "module load bbc/biscuit/biscuit_0_3_12_linux_amd64"
        ],
        "input": [
            "${SAMPLE[i]}_1.fastq.gz",
            "${SAMPLE[i]}_2.fastq.gz"
        ],
        "output": [
            "${SAMPLE[i]}.disc.hg38.sam",
            "${SAMPLE[i]}.split.hg38.sam",
            "${SAMPLE[i]}.interleave.fastq",
            "${SAMPLE[i]}.sorted.markdup.hg38.bam",
            "${SAMPLE[i]}.disc.hg38.bam",
            "${SAMPLE[i]}.split.hg38.bam",
            "${SAMPLE[i]}.interleave.fastq.gz"
        ]
    }
