{
    "application": "fv3gfs_driver_grid.sh",
    "details": {
        "software": [
            "PrgEnv-intel",
            "cfp-intel-sandybridge/1.1.0"
        ],
        "resources": {
            "queue": "debug",
            "memory": "2400",
            "walltime": "00:30",
            "nodes": "1",
            "processors": "24",
            "threads": "6",
            "environment_variables": {
                "home_dir": "$LS_SUBCWD/..",
                "TMPDIR": "/gpfs/hps3/stmp/$LOGNAME/fv3_grid.$gtype",
                "out_dir": "/gpfs/hps3/stmp/$LOGNAME/C${res}",
                "APRUN": "aprun -n 1 -N 1 -j 1 -d 1 -cc depth",
                "APRUN_SFC": "aprun -j 1 -n 24 -N 24",
                "OMP_NUM_THREADS": "6",
                "OMP_STACKSIZE": "2048m",
                "KMP_AFFINITY": "disabled",
                "machine": "WCOSS_C"
            },
            "ulimits": {
                "soft_file_size": "unlimited",
                "hard_file_size": "unlimited"
            }
        }
    }
}