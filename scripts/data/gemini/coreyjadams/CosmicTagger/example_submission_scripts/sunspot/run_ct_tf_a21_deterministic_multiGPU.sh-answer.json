{
    "application": "CosmicTagger",
    "software": [
        "MPI",
        "OpenMP",
        "Horovod",
        "CCL",
        "Python",
        "NumExpr"
    ],
    "resources": [
        "Sunspot system",
        "PBS queue",
        "GPU",
        "Lustre filesystem",
        "MPI library"
    ],
    "environment_variables": [
        "WORK_DIR",
        "DATA_DIR",
        "NNODES",
        "NRANKS_PER_NODE",
        "NRANKS",
        "LOCAL_BATCH_SIZE",
        "GLOBAL_BATCH_SIZE",
        "ITEX_LAYOUT_OPT",
        "HOROVOD_LOG_LEVEL",
        "HOROVOD_CCL_FIN_THREADS",
        "HOROVOD_CCL_ADD_EXTRA_WAIT",
        "HOROVOD_FUSION_THRESHOLD",
        "HOROVOD_CYCLE_TIME",
        "HOROVOD_THREAD_AFFINITY",
        "CCL_LOG_LEVEL",
        "CCL_ZE_QUEUE_INDEX_OFFSET",
        "CCL_SYCL_OUTPUT_EVENT",
        "CCL_OP_SYNC",
        "CCL_USE_EXTERNAL_QUEUE",
        "CCL_ATL_TRANSPORT",
        "FI_CXI_DEFAULT_CQ_SIZE",
        "FI_CXI_OVFLOW_BUF_SIZE",
        "FI_CXI_CQ_FILL_PERCENT",
        "LEARNING_RATE",
        "NVIDIA_TF32_OVERRIDE",
        "run_id",
        "COMPUTE_MODE",
        "NUMEXPR_MAX_THREADS"
    ],
    "libraries": [
        "frameworks/2023-03-03-experimental",
        "frameworks-2023-01-31-extension"
    ],
    "configuration": [
        "config-name a21-deterministic",
        "run.distributed=True",
        "run.minibatch_size=${GLOBAL_BATCH_SIZE}",
        "run.compute_mode=${COMPUTE_MODE}",
        "data.data_directory=${DATA_DIR}",
        "mode.optimizer.loss_balance_scheme=focal",
        "mode.optimizer.learning_rate=${LEARNING_RATE}"
    ]
}