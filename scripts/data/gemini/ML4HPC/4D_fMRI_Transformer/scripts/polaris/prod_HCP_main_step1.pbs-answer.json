{
    "application": "MPI",
    "details": {
        "software": [
            "conda",
            "mpiexec",
            "nvidia-smi",
            "python"
        ],
        "resources": {
            "queue": "prod",
            "nodes": 10,
            "walltime": "2:00:00",
            "filesystems": [
                "home",
                "grand"
            ],
            "environment": {
                "MPICH_GPU_SUPPORT_ENABLED": 1,
                "NCCL_COLLNET_ENABLE": 1,
                "NCCL_NET_GDR_LEVEL": "PHB",
                "OMP_NUM_THREADS": 8,
                "OMP_PLACES": "threads"
            }
        },
        "libraries": [
            "3DCNN"
        ],
        "scripts": [
            "set_affinity_gpu_polaris.sh",
            "main.py"
        ],
        "directories": [
            "/lus/grand/projects/STlearn/4D_fMRI_Transformer/",
            "/lus/grand/projects/STlearn/HCP_MNI_to_TRs"
        ]
    }
}