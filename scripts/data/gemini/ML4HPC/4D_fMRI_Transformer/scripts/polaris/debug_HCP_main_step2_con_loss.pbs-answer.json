                "NTOTRANKS",
                "NDEPTH",
                "OMP_NUM_THREADS",
                "OMP_PLACES"
            ]
        },
        "commands": [
            "module load conda",
            "conda activate 3DCNN",
            "cd /lus/grand/projects/STlearn/4D_fMRI_Transformer/",
            "mpiexec -n ${NTOTRANKS} --ppn ${NRANKS_PER_NODE} --depth=${NDEPTH} --cpu-bind depth  $set_affinity_cmd $Command"
