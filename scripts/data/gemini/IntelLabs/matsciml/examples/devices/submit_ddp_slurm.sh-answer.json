{
    "application": "Slurm",
    "details": {
        "partition": "pvc",
        "nodes": 1,
        "tasks_per_node": 8,
        "gpus_per_node": 4,
        "exclusive": true,
        "time": "02:30:00",
        "memory_bind": "local",
        "overcommit": true,
        "modules": [
            "default-dawn",
            "intel-oneapi-compilers",
            "intelpython-conda",
            "intel-oneapi-mkl",
            "intel-oneapi-mpi",
            "intel-oneapi-ccl"
        ],
        "conda_environment": "matsciml",
        "environment_variables": [
            "CCL_ZE_IPC_EXCHANGE=sockets",
            "ZE_FLAT_DEVICE_HIERARCHY=FLAT"
        ],
        "ulimit": "-n 60000",
        "python_script": "xpu_ddp_slurm.py"
    }
}