{
    "application": "GNU Parallel",
    "details": {
        "resource_requirements": {
            "nodes": 1,
            "cores": 28,
            "time": "1 hour"
        },
        "software_requirements": {
            "modules": [
                "toolchain/ictce"
            ],
            "task": "$HOME/mytask.sh"
        },
        "execution": {
            "parallelism": {
                "type": "serial",
                "cores": "NB_CORES_HEADNODE"
            },
            "arguments": {
                "source": "ARG_TASK_FILE",
                "format": "one line per task"
            },
            "work_directory": "$WORK"
        }
    }
}