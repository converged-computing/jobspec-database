{
    "application": "LBPM",
    "details": {
        "environment": {
            "modules": [
                "PrgEnv-amd",
                "rocm/4.5.0",
                "cray-mpich",
                "cray-hdf5-parallel"
            ],
            "variables": [
                "PE_MPICH_GTL_DIR_amd_gfx90a",
                "PE_MPICH_GTL_LIBS_amd_gfx90a",
                "MPICH_GPU_SUPPORT_ENABLED",
                "MPL_MBX_SIZE",
                "LD_LIBRARY_PATH",
                "LBPM_BIN"
            ]
        },
        "resources": {
            "slurm": {
                "account": "CSC380",
                "job_name": "MPI-singlenode",
                "output": "%x-%j.out",
                "time": "0:10:00",
                "partition": "batch",
                "nodes": 1,
                "exclusive": true
            },
            "execution": {
                "command": "srun --verbose -N1 -n8 --cpus-per-gpu=8 --gpus-per-task=1 --gpu-bind=closest ${MYCPUBIND} $LBPM_BIN/TestCommD3Q19 multinode.db"
            }
        }
    }
}