{
    "application": "IceTray",
    "details": {
        "software": [
            "py3-v4.1.0",
            "tensorflow_gpu_py3-v4.1.0"
        ],
        "resources": {
            "nodes": 1,
            "ppn": "{cpus}",
            "memory": "{memory}",
            "walltime": "{walltime}",
            "queue": "long",
            "scratch": {
                "enabled": true,
                "location": {
                    "PBS": "/scratch/${USER}",
                    "Condor": "${_CONDOR_SCRATCH_DIR}"
                }
            },
            "environment_variables": {
                "PYTHONUSERBASE": "/data/user/mhuennefeld/DNN_reco/virtualenvs/tensorflow_gpu_py3-v4.1.0",
                "ENV_SITE_PACKGES": "$(find ${PYTHONUSERBASE}/lib* -maxdepth 2 -type d -name \"site-packages\")",
                "PYTHONPATH": "$ENV_SITE_PACKGES:$PYTHONPATH",
                "PATH": "$PYTHONUSERBASE/bin:$PATH",
                "CUDA_HOME": "/usr/local/cuda-10.0",
                "LD_LIBRARY_PATH": "$LD_LIBRARY_PATH:$CUDA_HOME/lib64"
            }
        }
    }
}