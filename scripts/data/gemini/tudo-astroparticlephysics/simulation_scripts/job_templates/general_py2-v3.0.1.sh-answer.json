{
    "application": "IceTray",
    "software": [
        "Python 2.7",
        "IceTray",
        "Tensorflow (CPU)",
        "PBS (Portable Batch System)"
    ],
    "resource_requirements": {
        "nodes": 1,
        "cpus": "{cpus}",
        "memory": "{memory}",
        "walltime": "{walltime}",
        "queue": "long"
    },
    "environment_variables": [
        "PYTHONUSERBASE",
        "PATH",
        "PYTHONPATH",
        "FINAL_OUT",
        "KEEP_CRASHED_FILES",
        "PBS_JOBID",
        "_CONDOR_SCRATCH_DIR"
    ],
    "files": [
        "{script_folder}/steps/{step_name}.py",
        "{yaml_copy}"
    ],
    "folders": [
        "{processing_folder}/logs",
        "{output_folder}"
    ],
    "other_requirements": [
        "CVMFS (for IceCube software)",
        "Scratch space (optional)"
    ]
}