{
    "application": "TensorFlow",
    "details": {
        "software": {
            "modules": [
                "daint-gpu",
                "TensorFlow/1.3.0-CrayGNU-17.08-cuda-8.0-python3"
            ],
            "virtualenv": "tf-daint"
        },
        "resource_requirements": {
            "slurm": {
                "job_name": "imagenet",
                "time": "24:00:00",
                "nodes": 9,
                "constraint": "gpu"
            },
            "tensorflow": {
                "parameters": {
                    "train_data_path": "${SCRATCH}/data/imagenet",
                    "log_root": "./tmp/resnet_model",
                    "train_dir": "./tmp/resnet_model/train",
                    "dataset": "imagenet",
                    "mode": "train",
                    "num_gpus": 1,
                    "batch_size": 16,
                    "sync_replicas": "True",
                    "train_steps": 112600,
                    "num_epochs": 90
                },
                "distributed": {
                    "num_ps": "$1",
                    "num_workers": "$2"
                }
            }
        }
    }
}