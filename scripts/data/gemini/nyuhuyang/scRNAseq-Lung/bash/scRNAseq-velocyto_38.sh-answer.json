{
    "application": "velocyto",
    "details": {
        "software": [
            "samtools",
            "velocyto",
            "conda",
            "spack"
        ],
        "resource_requirements": {
            "nodes": 1,
            "tasks_per_node": 5,
            "memory": "64G",
            "conda_environment": "r4.0.3",
            "samtools_version": "1.8",
            "output_file": "velocyto_%A_%a.txt",
            "job_name": "velocyto"
        },
        "input_files": [
            "counts/",
            "outs/possorted_genome_bam.bam",
            "hg38_rmsk.gtf",
            "refdata-gex-GRCh38-2020-A/genes/genes.gtf"
        ],
        "output_files": [
            "velocyto/$file_folder.loom"
        ],
        "commands": [
            "samtools sort",
            "velocyto run10x"
        ]
    }
}