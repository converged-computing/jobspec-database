{
    "application": "Nextflow",
    "details": {
        "resource_requirements": {
            "cpus": 4,
            "memory": "8GB",
            "walltime": "120:00:00"
        },
        "software_dependencies": [
            "Singularity",
            "Java"
        ],
        "workflow_configuration": "nextflow_cluster.config",
        "workflow_reports": [
            {
                "type": "DAG",
                "filename": "workflow-reports/v4/dag-longjob-${timestamp}.html"
            },
            {
                "type": "Report",
                "filename": "workflow-reports/v4/report-longjob-${timestamp}.html"
            },
            {
                "type": "Timeline",
                "filename": "workflow-reports/v4/timeline-longjob-${timestamp}.html"
            }
        ],
        "workflow_execution": {
            "mode": "subset",
            "dataset_id_list": "cluster-input-dir/manifests/dataset-manifest-longjobs.txt"
        }
    }
}