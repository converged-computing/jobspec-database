{
    "application": "GATK",
    "details": {
        "environment": "conda",
        "container": "singularity",
        "container_image": "/home/users/ntu/suffiazi/apps/sifs/gatk.sif",
        "resources": {
            "nodes": 1,
            "cpus": 12,
            "memory": "120GB",
            "walltime": "3:00:00",
            "queue": "normal",
            "project": "12003580"
        },
        "command": "gatk MarkIlluminaAdapters",
        "java_options": "-Xmx80G",
        "input": "$BAMFILE",
        "output": {
            "bam": "${file_prefix}_markadapt.bam",
            "metrics": "${file_prefix}_markadapt-metrcs.txt"
        },
        "tmp_dir": "/mnt/outputs/tmp"
    }
}