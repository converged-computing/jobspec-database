{
    "application": "LAMMPS",
    "details": {
        "software": [
            "LAMMPS",
            "mpirun"
        ],
        "resources": {
            "nodes": 1,
            "cores_per_node": 16,
            "walltime": "1:00:00",
            "queue": "standard",
            "environment_variables": {
                "OMP_NUM_THREADS": 16
            }
        },
        "input_files": [
            "$infile"
        ],
        "output_files": [
            "~/job-id-dirs.txt"
        ]
    }
}