{
    "application": "Slurm",
    "details": {
        "script_type": "Bash",
        "resource_manager": "Slurm",
        "resource_requirements": {
            "job_name": "{{ id }}",
            "partition": "{{ partition }}",
            "nodelist": "{{ nodelist }}",
            "walltime": "{{ 48|format_timedelta }}",
            "gpus": "{{ gpus }}",
            "output_file": "workspace/{{operations[0]._jobs[0]}}/job_%j.o",
            "error_file": "workspace/{{operations[0]._jobs[0]}}/job_%j.e",
            "ntasks": "{{ np_global }}"
        }
    }
}