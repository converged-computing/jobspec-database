{
    "application": "NAMD",
    "software": [
        {
            "name": "SPACK",
            "version": "0.17.3",
            "instance": "cpu",
            "instanceVersion": "b",
            "instanceDirectory": "/cm/shared/apps/spack/0.17.3/cpu/b"
        },
        {
            "name": "Charm++",
            "version": "6.10.2",
            "compiler": "gcc@10.2.0",
            "dependencies": [
                {
                    "name": "OpenMPI",
                    "version": "4.1.3"
                }
            ]
        },
        {
            "name": "FFTW",
            "version": "3.3.10",
            "compiler": "gcc@10.2.0",
            "variants": [
                "~mpi",
                "~openmp"
            ]
        },
        {
            "name": "Tcl",
            "version": "8.5.9",
            "compiler": "gcc@10.2.0"
        },
        {
            "name": "gcc",
            "version": "10.2.0"
        }
    ],
    "resourceRequirements": [
        {
            "name": "SLURM",
            "partition": "ind-shared",
            "nodes": 1,
            "tasksPerNode": 1,
            "cpusPerTask": 16,
            "memory": "32G",
            "time": "00:30:00",
            "output": "%x.o%j.%N"
        },
        {
            "name": "localScratch",
            "directory": "/scratch/${USER}/job_${SLURM_JOB_ID}"
        },
        {
            "name": "temporaryDirectory",
            "directory": "${LOCAL_SCRATCH_DIR}"
        }
    ]
}