{
    "application": "fastp",
    "details": {
        "resource_requirements": {
            "nodes": 1,
            "memory_per_node": "120G",
            "walltime": "10-00:00:00",
            "partition": "srlab",
            "account": "srlab"
        },
        "software_requirements": {
            "fastp": "/gscratch/srlab/programs/fastp-0.20.0/fastp",
            "multiqc": "/gscratch/srlab/programs/anaconda3/bin/multiqc",
            "python": "intel-python3_2017"
        },
        "input_files": [
            "*.fastq.gz"
        ],
        "output_files": [
            "*.fastp-trim.*.fq.gz",
            "*.fastp-trim.*.report.json",
            "*.fastp-trim.*.report.html",
            "trimmed_fastq_checksums.md5",
            "raw_fastq_checksums.md5",
            "multiqc_report.html",
            "program_options.log",
            "system_path.log",
            "multiqc_config.yaml"
        ],
        "other_requirements": {
            "threads": 40
        },
        "description": "This script runs fastp on paired-end fastq files to trim reads and generate quality control reports. It uses slurm to manage resources and runs MultiQC to generate a summary of the fastp reports."
    }
}