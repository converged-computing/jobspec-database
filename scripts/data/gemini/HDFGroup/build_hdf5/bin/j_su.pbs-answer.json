{
    "application": "ctts",
    "software_requirements": [
        "daos/base",
        "spack",
        "cmake",
        "mpich/52.2"
    ],
    "resource_requirements": {
        "nodes": 6,
        "system": "sunspot",
        "placement": "scatter",
        "walltime": "00:60:00",
        "job_name": "HDF5",
        "queue": "workq",
        "environment_variables": [
            "FI_CXI_DEFAULT_CQ_SIZE=131072",
            "FI_CXI_CQ_FILL_PERCENT=20",
            "TZ='/usr/share/zoneinfo/US/Central'",
            "OMP_PROC_BIND=spread",
            "OMP_NUM_THREADS=8",
            "OMP_PLACES"
        ],
        "mpi_ranks_per_node": 12,
        "hardware_threads_per_rank": 16,
        "omp_threads_per_rank": 8
    }
}