{
    "application": "spack",
    "details": {
        "resource_manager": "COBALT",
        "time_limit": "30 minutes",
        "nodes": 1,
        "queue": "arcticus_debug",
        "modules": [
            "cmake",
            "openmpi/4.1.1-gcc",
            "gcc/11.1.0",
            "hdf5",
            "hdf5-vol-external-passthrough",
            "hdf5-vol-async",
            "hdf5-vol-log",
            "adios2"
        ],
        "environment_variables": [
            "CC=mpicc",
            "FC=mpif90"
        ],
        "setup_script": "share/spack/setup-env.sh"
    }
}