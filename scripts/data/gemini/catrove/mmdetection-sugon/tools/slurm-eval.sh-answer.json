{
    "application": "PyTorch",
    "details": {
        "environment": {
            "compiler": "devtoolset-7.3.1",
            "rocm": "2.9",
            "mpi": "hpcx-2.4.1-gcc-7.3.1",
            "pytorch": "1.3.0a0/hpcx-2.4.1-gcc-7.3.1"
        },
        "resource_requirements": {
            "partition": "caspra",
            "nodes": 4,
            "tasks_per_node": 4,
            "cpus_per_task": 8,
            "gres": "dcu:4",
            "job_name": "cnt"
        },
        "libraries": {
            "mpi": "mpirun"
        },
        "execution_modes": {
            "multi-node-multi-gpu": {
                "script": "single_process_eval.sh",
                "parameters": [
                    "dist_url"
                ],
                "notes": "This mode utilizes all available GPUs on the cluster."
            },
            "single-node-multi-gpu": {
                "script": "single_process.sh",
                "parameters": [
                    "dist_url"
                ],
                "notes": "This mode utilizes all GPUs on the current node."
            },
            "single-node-single-gpu": {
                "script": "main.py",
                "parameters": [
                    "--batch-size=32",
                    "--arch=resnet50",
                    "--workers=6",
                    "--epochs=1",
                    "--gpu=0",
                    "/public/software/apps/DeepLearning/Data/ImageNet-pytorch/"
                ],
                "notes": "This mode utilizes a single GPU on the current node."
            }
        }
    }
}