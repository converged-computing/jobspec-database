{
    "application": "SLURM",
    "details": {
        "resource_requirements": {
            "nodes": 1,
            "cpus_per_task": 2,
            "time": "00:30:00",
            "job_name": "cifti_parcellate",
            "output": "logs/cifti_parcellate_%j.txt"
        },
        "modules": "tools/Singularity/3.8.5",
        "environment_variables": {
            "OPENNEURO_DSID": "basename of SLURM_SUBMIT_DIR",
            "BASEDIR": "dirname of SLURM_SUBMIT_DIR",
            "CODEDIR": "${BASEDIR}/code/openneuro_preproc/code/",
            "clean_config": "cleaning_settings.json",
            "parcellation_dir": "${BASEDIR}/parcellations",
            "dlabel_file": "Schaefer2018_100Parcels_7Networks_order.dlabel.nii",
            "atlas": "atlas-SchaeferP100N7",
            "BIDS_DIR": "${BASEDIR}/${OPENNEURO_DSID}/bids",
            "SING_CONTAINER": "${BASEDIR}/containers/fmriprep_ciftify_v1.3.2-2.3.3.img",
            "DERIVED_DIR": "${BASEDIR}/${OPENNEURO_DSID}/derived/",
            "WORK_DIR": "${BASEDIR}/${OPENNEURO_DSID}/work/",
            "LOGS_DIR": "${BASEDIR}/${OPENNEURO_DSID}/logs",
            "SUB_SIZE": 1,
            "CORES": 2
        },
        "software": {
            "Singularity": "3.8.5",
            "ciftify_clean_img": "contained within Singularity container",
            "wb_command": "contained within Singularity container"
        }
    }
}