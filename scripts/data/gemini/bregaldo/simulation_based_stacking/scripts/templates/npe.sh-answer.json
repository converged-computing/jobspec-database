{
    "application": "Slurm",
    "details": {
        "job_name": "{{script_name}}_{{run_id}}",
        "nodes": 1,
        "gpus_per_node": 1,
        "cpus_per_task": 8,
        "ntasks_per_node": 1,
        "time": "04:00:00",
        "memory": "128G",
        "partition": "gpu",
        "constraint": "a100",
        "output_file": "jobs/{{script_name}}_{{run_id}}.log",
        "modules": [
            "modules/2.2",
            "python/3.10.10",
            "cuda/11.8 cudnn nccl",
            "slurm"
        ],
        "python_script": "src/npe.py",
        "environment_variables": [
            "task",
            "num_simulations",
            "wb_project",
            "wb_group",
            "wb_name",
            "wb_sweep_cnt",
            "BASE_DIR",
            "SCRIPTS_DIR",
            "OUTPUT_DIR"
        ]
    }
}