{
    "application": "PBS",
    "details": {
        "job_name": "<JOBID>_<EXPID>",
        "walltime": "<TOTTIME>",
        "account": "<ACCOUNT>",
        "nodes": "1",
        "cpus_per_node": "<THREADS>",
        "memory": "<MEM>",
        "email_notification": "a",
        "job_output_file": "/marconi_scratch/userexternal/<USERme>/log/<JOBID>_<EXPID>.out",
        "shell": "/bin/bash",
        "working_directory": "$PBS_O_WORKDIR",
        "user_configuration_file": "$HOME/ecearth3/post/conf/conf_users.sh",
        "modules": [
            "hdf5/1.8.17--intel--pe-xe-2017--binary",
            "netcdf/4.4.1--intel--pe-xe-2017--binary",
            "cdo",
            "python/2.7.12",
            "numpy/1.11.2--python--2.7.12",
            "nco/4.6.7"
        ],
        "hiresclim_variables": {
            "NEMO_NPROCS": "<NEMO_PROCS>",
            "IFS_NPROCS": "<IFS_PROCS>"
        },
        "script_directory": "$SCRIPTDIR"
    }
}