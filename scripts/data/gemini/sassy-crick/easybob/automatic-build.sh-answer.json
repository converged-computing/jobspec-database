{
    "application": "SLURM",
    "software": [
        "EasyBuild",
        "EESSI",
        "PBSPro"
    ],
    "resource_requirements": {
        "cores": "${CORES}",
        "memory": "100gb",
        "partition": "${PARTITION}",
        "walltime": "${WALLTIME}",
        "queue": "${QUEUE}",
        "cuda_compute_capabilities": "${CUDA_COMPUTE_CAPABILITIES}"
    },
    "files": [
        "site-config",
        "cx3-intel-config",
        "hx1-config",
        "cx3-config",
        "softwarelist.txt",
        "softwarelist.yaml",
        "easybuild/install.sh",
        "easybuild/testing.sh",
        "eessi/software-layer/EESSI-pilot-install-software-easystack.sh",
        "eessi/software-layer/build_container.sh",
        "eessi/software-layer/run_in_compat_layer_env.sh",
        "eessi/software-layer/create_tarball.sh"
    ],
    "directories": [
        "{logs,scripts}"
    ],
    "environment_variables": [
        "BASEDIR",
        "SITECONFIG",
        "ARCH",
        "PLATFORMS",
        "INSTALLING",
        "EASYBUILD_OPTARCH",
        "OPTARCH",
        "EESSI_PILOT_VERSION",
        "EESSI_TMPDIR",
        "EESSI_SOFTWARE_SUBDIR",
        "TARBALL",
        "SW_NAME"
    ],
    "commands": [
        "hostname",
        "cut",
        "source",
        "echo",
        "mkdir",
        "grep",
        "cat",
        "awk",
        "qsub"
    ]
}