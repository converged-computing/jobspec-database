{
    "application": "warpx",
    "software": [
        "srun",
        "MPICH",
        "Libfabric",
        "rocFFT",
        "OpenMP"
    ],
    "resources": {
        "hardware": [
            "AMD EPYC 7A53 CPU",
            "AMD MI250X GPU",
            "DDR4 Memory"
        ],
        "system": "Frontier",
        "slurm": {
            "account": "<project id>",
            "job_name": "warpx",
            "output_file": "%x-%j.out",
            "time": "00:10:00",
            "partition": "batch",
            "nodes": 20,
            "tasks_per_node": 8,
            "cpus_per_task": 7,
            "gpus_per_task": 1,
            "gpu_bind": "closest"
        },
        "environment_variables": [
            "LD_LIBRARY_PATH",
            "FI_MR_CACHE_MAX_COUNT",
            "FI_MR_CACHE_MONITOR",
            "MPICH_SMP_SINGLE_COPY_MODE",
            "FI_CXI_RX_MATCH_MODE",
            "ROCFFT_RTC_CACHE_PATH",
            "OMP_NUM_THREADS",
            "WARPX_NMPI_PER_NODE",
            "TOTAL_NMPI"
        ]
    }
}