{
    "application": "IOR",
    "details": {
        "software": [
            "PrgEnv-cray",
            "PrgEnv-intel",
            "intel/15.0.2.164",
            "IOR",
            "lfs"
        ],
        "resource_requirements": {
            "nodes": 128,
            "walltime": "2:0:0",
            "filesystem": "fs3",
            "system": "ARCHER"
        },
        "test_parameters": {
            "striping": 4,
            "blocksizes": [
                1,
                8,
                2,
                8
            ],
            "tests": [
                "NS.SHF",
                "NW.SHF",
                "NS.FPS",
                "NW.FPS"
            ]
        },
        "commands": [
            "module swap PrgEnv-cray PrgEnv-intel",
            "module swap intel intel/15.0.2.164",
            "cd $PBS_O_WORKDIR",
            "mkdir ${RESULT_DIR}",
            "lfs setstripe -c ${striping} ${TARGET}",
            "aprun -n ${nodes} -N 1 $IOR -vvv  -b ${block}g -f $IOR_SCRIPT >> ${outfile}"
        ]
    }
}