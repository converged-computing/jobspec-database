{
    "application": "Slurm",
    "details": {
        "resource_requirements": {
            "job_name": "mpi_omp_job_2_nodes",
            "output_file": "node_%A_%a.out",
            "walltime": "00:10:00",
            "memory": "16G",
            "cpus_per_task": 10,
            "total_tasks": 14,
            "tasks_per_node": 14,
            "partition": "defq",
            "array_range": "3-14"
        },
        "software_requirements": {
            "openmpi": "4.1.5-gcc-11.2.0-ux65npg"
        },
        "command": {
            "executable": "./sim",
            "arguments": "output_directory_2_nodes${SLURM_ARRAY_TASK_ID}",
            "mpi_launch": "srun",
            "num_processes": "$SLURM_ARRAY_TASK_ID"
        },
        "output_directory": "output_directory_2_nodes${SLURM_ARRAY_TASK_ID}"
    }
}