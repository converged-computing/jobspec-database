{
    "application": "Nextflow",
    "details": {
        "software": [
            "Nextflow (version 23.10.1)",
            "Slurm (for job scheduling and resource allocation)"
        ],
        "resources": {
            "memory": "1G",
            "time": "72 hours",
            "cores": "1",
            "queue": "batch",
            "partition": "compute",
            "directory": "/flashscratch/${USER}/outputDir"
        },
        "dependencies": [
            "module use --append /projects/omics_share/meta/modules",
            "module load nextflow/23.10.1",
            "main.nf (Nextflow pipeline script)",
            "genome data (GRCm38)"
        ],
        "input": {
            "sequences": "<PATH_TO_YOUR_SEQUENCES>"
        }
    }
}