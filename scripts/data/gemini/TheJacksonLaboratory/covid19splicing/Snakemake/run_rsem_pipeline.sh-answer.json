{
    "application": "Snakemake",
    "details": {
        "scheduler": "SLURM",
        "resources": {
            "time": "72 hours",
            "nodes": 1,
            "cores": 32,
            "memory": "8GB per core",
            "singularity": "singularity exec ../sing.sif"
        },
        "input": {
            "config": "../case_control_c${SLURM_ARRAY_TASK_ID}.tsv",
            "fastq_directory": "/Snakemake/fastq_$SLURM_ARRAY_TASK_ID"
        },
        "output": {
            "standard_output": "ppr-%j.out",
            "standard_error": "ppr-%j.err",
            "email": "youremail@email.org"
        }
    }
}