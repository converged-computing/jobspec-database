{
    "application": "StrainID",
    "software": [
        "bedtools",
        "bwa",
        "samtools",
        "anaconda3",
        "genopipe",
        "StrainID"
    ],
    "resources": {
        "nodes": 1,
        "ppn": 4,
        "pmem": "16gb",
        "walltime": "00:10:00",
        "account": "open"
    },
    "modules": [
        "gcc/8.3.1",
        "bedtools/2.27.1",
        "bwa/0.7.15",
        "samtools/1.5",
        "anaconda3"
    ],
    "environment": {
        "GENOPIPE": "/path/to/GenoPipe/paper/SyntheticStrain/../..",
        "WRK": "/path/to/GenoPipe/paper/SyntheticStrain",
        "REF": "reference_genome",
        "LOCUS": "locus_name",
        "DEPTH": "depth_value",
        "BASE": "base_value",
        "SEED": "random_seed",
        "OUTPUT": "/path/to/GenoPipe/paper/SyntheticStrain/results/locus_name_depth_value",
        "BAM": "/path/to/GenoPipe/paper/SyntheticStrain/results/locus_name_depth_value/BAM/Simulation_pbs_array_id.bam",
        "TEMP": "/path/to/GenoPipe/paper/SyntheticStrain/temp20-pbs_array_id",
        "GENOME": "/path/to/GenoPipe/paper/SyntheticStrain/../input/reference_genome.fa",
        "DATABASE": "/path/to/GenoPipe/paper/SyntheticStrain/../db/reference_genome_VCF"
    }
}