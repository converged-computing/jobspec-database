{
    "application": "Singularity",
    "details": {
        "resource_requirements": {
            "cores": 1,
            "nodes": 1,
            "memory": "32G",
            "partition": "gpu",
            "gpus": 1,
            "cpus_per_task": 16
        },
        "software_dependencies": {
            "singularity": "module loaded",
            "python": "required for feedback_model.py",
            "nvidia-modprobe": "used to ensure GPUs work",
            "ray": "installed in $TMPDIR/$USER/ray",
            "deoxys.sif": "Singularity image used to run the experiment"
        },
        "script_logic": {
            "arguments": {
                "1": "first argument",
                "2": "second argument",
                "3": "third argument",
                "4+": "optional arguments"
            },
            "data_handling": {
                "source": "$PROJECTS/ngoc/CubiAI/datasets/*",
                "destination": "$TMPDIR/$USER/CubiAI",
                "copy_method": "cp -r"
            },
            "environment_variables": {
                "NUM_CPUS": 4,
                "RAY_ROOT": "$TMPDIR/$USER/ray"
            },
            "script_execution": "singularity exec --nv deoxys.sif python feedback_model.py $1 $PROJECTS/ngoc/CubiAI/perf/pretrain/$2 --temp_folder $SCRATCH_PROJECTS/ceheads/CubiAI/pretrain/$2 --epochs $3 ${@:4}"
        }
    }
}