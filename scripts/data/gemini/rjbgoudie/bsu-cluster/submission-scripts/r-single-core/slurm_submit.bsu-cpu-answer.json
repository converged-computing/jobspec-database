{
    "application": "R",
    "details": {
        "resource_manager": "SLURM",
        "environment": {
            "modules": [
                "rhel7/default-peta4",
                "r-3.4.0-gcc-5.4.0-j3fc64x"
            ],
            "openmp_threads": 1,
            "mpi_implementation": "Intel MPI",
            "mpi_pinning": {
                "domain": "omp:compact",
                "order": "scatter"
            }
        },
        "command": "rscript",
        "options": "CMD BATCH --no-save --no-restore",
        "workdir": "$SLURM_SUBMIT_DIR"
    }
}