{
    "application": "Snakemake",
    "details": {
        "resource_manager": "Slurm",
        "slurm_options": {
            "account": "naiss2023-5-37",
            "partition": "core",
            "nodes": 4,
            "time": "10:00:00",
            "job_name": "ont_barcoding_2023",
            "mail_type": "ALL",
            "output_file": "logs/snakemake-%j.log",
            "error_file": "logs/snakemake-%j.log",
            "constraint": "usage_mail",
            "node_list": "rackham"
        },
        "modules": [
            "conda",
            "bioinfo-tools",
            "snakemake"
        ],
        "snakemake_options": {
            "profile": true,
            "jobs": "$SLURM_JOB_CPUS_PER_NODE",
            "use_envmodules": true,
            "use_conda": true,
            "conda_frontend": "conda",
            "shadow_prefix": "/scratch"
        }
    }
}