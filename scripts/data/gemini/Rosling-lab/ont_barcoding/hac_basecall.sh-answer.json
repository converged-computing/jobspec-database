{
    "application": "Snakemake",
    "details": {
        "scheduler": "SLURM",
        "resources": {
            "partition": "node",
            "nodes": 1,
            "time": "2:00:00",
            "job_name": "ont_barcoding",
            "mail_type": "ALL",
            "output": "logs/snakemake-%j.log",
            "error": "logs/snakemake-%j.log",
            "gpus": 1,
            "gpus_per_node": 1,
            "modules": [
                "conda",
                "bioinfo-tools",
                "snakemake"
            ],
            "conda_environment": "conda",
            "shadow_prefix": "/scratch",
            "job_cpus": "$SLURM_JOB_CPUS_PER_NODE"
        },
        "workflow_target": "all_hac"
    }
}