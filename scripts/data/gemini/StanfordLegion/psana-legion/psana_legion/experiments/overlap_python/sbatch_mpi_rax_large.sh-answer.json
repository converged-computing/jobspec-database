{
    "application": "Slurm",
    "details": {
        "job_name": "psana_legion",
        "dependency": "singleton",
        "nodes": 17,
        "time": "03:00:00",
        "qos": "regular",
        "constraint": "knl,quad,cache",
        "core_spec": 4,
        "image": "docker:stanfordlegion/psana-mpi:latest",
        "exclusive": true,
        "mail_type": "ALL",
        "account": "m2859",
        "host_psana_dir": "$HOME/psana_legion/psana-legion",
        "host_data_dir": "$SCRATCH/noepics_c24_s1_data/reg",
        "sit_psdm_data": "$HOST_DATA_DIR/d/psdm",
        "eager": 1,
        "kernel_kind": "memory_bound",
        "rounds": [
            20,
            40,
            80,
            160
        ],
        "n": [
            16,
            8,
            4
        ],
        "limit": {
            "calculation": "n * 2048"
        },
        "c": [
            256,
            128,
            64,
            32,
            16
        ],
        "nodelist": "nodelist.txt",
        "slurm_hostfile": "$PWD/nodelist.txt",
        "srun_args": {
            "n": "(n * c + 1)",
            "N": "(n + 1)",
            "cpus_per_task": "(256 / c)",
            "cpu_bind": "threads",
            "distribution": "arbitrary",
            "output": "rax_rounds\"$rounds\"_n\"$n\"_c\"$c\".log"
        },
        "shifter_command": "python $HOST_PSANA_DIR/psana_legion/mpi_rax.py"
    }
}