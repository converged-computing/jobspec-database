{
    "application": "Slurm",
    "details": {
        "resource_requirements": {
            "partition": "priority",
            "time": "10:00:00",
            "cores": 1,
            "memory": "20G",
            "output": "project_%j.out",
            "error": "project_%j.err",
            "mail_type": "NONE"
        },
        "software": {
            "Rscript": "Rscript",
            "PURECN": "$PURECN",
            "bcbio": "$bcbio"
        },
        "files": {
            "panel.bed": "input",
            "panel.txt": "output",
            "panel.optimized.bed": "output",
            "hg38.fa": "fasta",
            "GCA_000001405.15_GRCh38_no_alt_analysis_set_100.bw": "mappability"
        },
        "commands": [
            "date",
            ". .profile",
            "which Rscript",
            "bname=`basename $1 .bed`",
            "Rscript $PURECN/IntervalFile.R --infile $1 --fasta $bcbio/genomes/Hsapiens/hg38/seq/hg38.fa --outfile $bname.txt --offtarget --genome hg38 --export panel.optimized.bed --mappability $PURECN/GCA_000001405.15_GRCh38_no_alt_analysis_set_100.bw",
            "date"
        ]
    }
}