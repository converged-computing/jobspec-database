{
    "application": "VisIt",
    "software": [
        "VisIt",
        "PIDX",
        "embree",
        "MPI",
        "OpenMP",
        "Python"
    ],
    "resource_requirements": {
        "nodes": "$NN",
        "cores_per_task": "$NC",
        "total_tasks": "$NT",
        "modules": [
            "PrgEnv-gnu",
            "xalt",
            "PrgEnv-intel"
        ],
        "environment_variables": [
            "LIBRARY_PATH",
            "LD_LIBRARY_PATH",
            "PATH",
            "CRAYPE_LINK_TYPE",
            "MPICH_MAX_THREAD_SAFETY",
            "OSPRAY_THREADS",
            "I_MPI_PIN_DOMAIN",
            "OMP_NUM_THREADS",
            "KMP_AFFINITY",
            "CRAY_OMP_CHECK_AFFINITY"
        ]
    }
}