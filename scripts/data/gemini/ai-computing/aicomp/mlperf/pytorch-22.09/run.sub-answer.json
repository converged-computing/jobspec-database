{
    "application": "MLPerf",
    "software": [
        "Python",
        "Docker",
        "Enroot",
        "SLURM",
        "MLPerf logger",
        "MLPerf compliance checker",
        "NVIDIA Nsight Systems",
        "NCCL",
        "ibv_devinfo",
        "nvidia-smi"
    ],
    "resource_requirements": {
        "memory": "0",
        "nodes": "${SLURM_JOB_NUM_NODES}",
        "tasks_per_node": "${DGXNGPU}",
        "container": "${CONT_FILE}",
        "container_mounts": [
            "mounts.txt",
            "/results",
            "/logs",
            "/nsight"
        ],
        "work_dir": "/workspace/bert",
        "preloaded_squashfs": "${CONTAINER_PRELOAD_LUSTRE}"
    }
}