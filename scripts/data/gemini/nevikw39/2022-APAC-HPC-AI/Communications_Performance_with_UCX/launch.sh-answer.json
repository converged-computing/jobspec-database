{
    "application": "PBS",
    "details": {
        "queue": "gpuvolta",
        "walltime": "00:10:00",
        "ngpus": 16,
        "ncpus": 192,
        "memory": "1536GB",
        "storage": "scratch/il82",
        "software": [
            "cuda/11.4.1",
            "miniconda",
            "ucx",
            "python",
            "ucp"
        ],
        "environment": {
            "CFG_FILE": "${PBS_O_WORKDIR}/cluster.cfg",
            "DIRECTORY_NAME": "${DIRECTORY_NAME}",
            "JOB_DIR": "${JOB_DIR}",
            "TEST_DIR": "${TEST_DIR}",
            "SCHEDULER_HOST": "${SCHEDULER_HOST}",
            "ALL_HOSTS": "$(cat $PBS_NODEFILE | sort | uniq)",
            "TMPDIR": "${TMPDIR}",
            "PBS_JOBID": "${PBS_JOBID}",
            "PBS_NGPUS": "${PBS_NGPUS}",
            "PBS_O_WORKDIR": "${PBS_O_WORKDIR}"
        }
    }
}