{
    "application": "Snakemake",
    "details": {
        "resource_requirements": {
            "partition": "norm",
            "time": "12:00:00",
            "gres": "lscratch:5"
        },
        "configuration": {
            "config_file": "config/config.yaml",
            "profile_variable": "SNAKEMAKE_PROFILE",
            "lcdbwf_profile_variable": "LCDBWF_SNAKE_PROFILE"
        },
        "execution_options": {
            "directory": "$PWD",
            "parallelism": true,
            "max_jobs": 999,
            "conda_environment": true,
            "restart_times": 3,
            "rerun_incomplete": true,
            "jobname_format": "s.{rulename}.{jobid}.sh",
            "logging": "Snakefile.log"
        }
    }
}