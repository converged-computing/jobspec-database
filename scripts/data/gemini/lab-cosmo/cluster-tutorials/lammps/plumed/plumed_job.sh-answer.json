{
    "application": "LAMMPS",
    "details": {
        "software": [
            "intel",
            "intel-mkl",
            "intel-mpi",
            "lammps"
        ],
        "resource_requirements": {
            "job_name": "plumed",
            "partition": "jobs",
            "nodes": 1,
            "tasks_per_node": 2,
            "cpus_per_task": 1,
            "time": "24:00:00"
        },
        "execution_commands": [
            "srun --time=24:00:00 --hint=nomultithread --exclusive -n ${SLURM_NTASKS} ${LAMMPS} -i in.lmp > log.lammps"
        ],
        "input_file": "in.lmp",
        "output_file": "log.lammps"
    }
}