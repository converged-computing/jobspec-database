{
    "application": "MPI",
    "details": {
        "resource_manager": "COBALT",
        "compiler": "nvhpc",
        "libraries": [
            "MPI",
            "OpenMP"
        ],
        "parallel_environment": "aprun",
        "runtime_environment": {
            "n_nodes": "$COBALT_JOBSIZE",
            "n_mpi_ranks_per_node": 64,
            "n_mpi_ranks": "$n_nodes * $n_mpi_ranks_per_node",
            "n_openmp_threads_per_rank": "@NUM_THREADS@"
        }
    }
}