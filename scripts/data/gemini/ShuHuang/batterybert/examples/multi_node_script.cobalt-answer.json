{
    "application": "PyTorch",
    "details": {
        "environment": {
            "conda_env": "bert-pytorch",
            "python_executable": "/lus/theta-fs0/projects/SolarWindowsADSP/conda/envs/bert-pytorch/bin/python",
            "preloaded_env_vars": [
                "OMP_NUM_THREADS=8"
            ]
