{
    "application": "deeptools",
    "details": {
        "version": "2.4.2",
        "modules": [
            "deeptools/intel/2.4.2"
        ],
        "resources": {
            "nodes": 1,
            "tasks_per_node": 20,
            "time": "1:00:00",
            "memory": "62GB",
            "output": "bamcover%a.out",
            "error": "bamcover%a.err"
        },
        "command": "bamCoverage",
        "options": [
            "-of bigwig",
            "-o ${sample}.bw",
            "-b ${sample}_q30_rmdup_KhM0_sorted.bam",
            "--ignoreDuplicates",
            "-p 20",
            "--minMappingQuality 30",
            "--centerReads",
            "-ignore mitochondrion_genome",
            "--normalizeUsingRPKM",
            "-bs 10"
        ]
    }
}