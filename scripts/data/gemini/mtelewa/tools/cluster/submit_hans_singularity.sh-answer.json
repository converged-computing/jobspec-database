{
    "application": "hans",
    "software": [
        "singularity",
        "python3",
        "openmpi",
        "intel compiler"
    ],
    "resources": {
        "nodes": 1,
        "tasks_per_node": 5,
        "time": "4:00:00",
        "partition": "single",
        "output": "cluster.out",
        "error": "cluster.err",
        "job_name": "hans",
        "mail_type": "FAIL",
        "mail_user": "mohamed.hassan@kit.edu",
        "environment_variables": {
            "KMP_AFFINITY": "compact,1,0"
        },
        "modules": [
            "compiler/intel/19.1",
            "mpi/openmpi/4.0"
        ],
        "mpirun_options": [
            "--bind-to core",
            "--map-by core"
        ],
        "singularity_options": [
            "--bind /scratch",
            "--bind /tmp",
            "--bind /pfs/work7/workspace/scratch/lr1762-flow",
            "--pwd=$PWD"
        ],
        "python_options": [
            "-m hans",
            "-i $(pwd)/channel1D_DH.yaml"
        ]
    }
}