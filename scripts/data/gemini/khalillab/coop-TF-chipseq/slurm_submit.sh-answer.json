{
    "application": "Snakemake",
    "details": {
        "resource_manager": "Slurm",
        "cluster_config": "cluster.yaml",
        "conda_environment": "../conda",
        "parallel_execution": true,
        "max_jobs": 9999,
        "restart_attempts": 1,
        "slurm_options": {
            "partition": "priority",
            "time": "8:00:00",
            "memory_per_cpu": "400M",
            "cores": 8,
            "error_file": "snakemake.err",
            "output_file": "snakemake.log",
            "job_name": "khalil-chipseq"
        },
        "slurm_status_script": "slurm_status.sh"
    }
}