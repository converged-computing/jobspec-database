{
    "application": "Dask",
    "details": {
        "scheduler": "dask-scheduler",
        "workers": "dask-worker",
        "python_environment": {
            "module_purge": "module purge",
            "pythonpath": "export PYTHONPATH=$PYTHONPATH:$ARL",
            "virtual_environment": ". $HOME/alaska-venv/bin/activate"
        },
        "resource_requirements": {
            "nodes": 8,
            "tasks": 129,
            "memory": "16GB per worker",
            "wallclock_time": "12:00:00",
            "queue": "compute",
            "hostfile": "ibhostfile"
        },
        "script": "pointing_simulation_distributed.py",
        "arguments": {
            "context": "s3sky",
            "rmax": "1e5",
            "flux_limit": "0.3",
            "show": "True",
            "seed": "18051955",
            "pbtype": "MID_GRASP",
            "memory": "32",
            "integration_time": "10",
            "use_agg": "True",
            "time_series": "wind",
            "time_chunk": "1800",
            "reference_pointing": "True",
            "shared_directory": "../../../../shared",
            "declination": "+15"
        }
    }
}