{
    "application": "curp",
    "details": {
        "environment": {
            "PBS": true,
            "modules": {
                "curp": true,
                "ims": true
            },
            "prefix": "$TEMPLATE_PROJECT_PREFIX",
            "tmp": "/ramd/users/$USER/$PBS_JOBID"
        },
        "resources": {
            "nodes": 1,
            "cpus": 40,
            "mpiprocs": 8,
            "ompthreads": 5,
            "walltime": "167:00:00"
        },
        "output": "$prefix/5curp/output/$group_type/${run}_${smp}",
        "input": {
            "flux.nc": "$output/flux.nc",
            "acf.nc": "$output/acf.nc"
        },
        "commands": {
            "curp": "curp cal-tc --frame-range 1 50000 1 --average-shift 2 --dt 0.001 -a acf.nc -o $output/conductivity.dat flux.nc"
        }
    }
}