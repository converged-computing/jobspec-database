{
    "application": "NekRS",
    "details": {
        "software_requirements": [
            "PrgEnv-gnu",
            "cudatoolkit",
            "cpe-cuda",
            "cmake",
            "NekRS"
        ],
        "resource_requirements": {
            "queue": "$QUEUE",
            "nodes": "$nodes",
            "gpus_per_node": 4,
            "cores_per_socket": 16,
            "time": "$time",
            "project_id": "$PROJ_ID"
        },
        "environment_variables": {
            "NEKRS_HOME": "$HOME/.local/nekrs",
            "NEKRS_CACHE_BCAST": 1,
            "NEKRS_SKIP_BUILD_ONLY": 0,
            "MPICH_MPIIO_HINTS": "*:striping_unit=16777216:striping_factor=128:romio_cb_write=enable:romio_ds_write=disable:romio_no_indep_rw=true",
            "NEKRS_GPU_MPI": 1,
            "MPICH_GPU_SUPPORT_ENABLED": 1,
            "MPICH_OFI_NIC_POLICY": "NUMA",
            "CRAY_ACCEL_TARGET": "nvidia80",
            "SLURM_CPU_BIND": "cores",
            "FI_CXI_RX_MATCH_MODE": "hybrid"
        },
        "backend": "CUDA"
    }
}