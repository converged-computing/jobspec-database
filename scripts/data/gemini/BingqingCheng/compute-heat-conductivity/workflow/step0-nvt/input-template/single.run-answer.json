{
    "application": "LAMMPS",
    "details": {
        "environment": "Piz Daint",
        "scheduler": "Slurm",
        "resources": {
            "nodes": 1,
            "tasks_per_node": 12,
            "cpus_per_task": 1,
            "partition": "normal",
            "constraint": "gpu",
            "time": "24:00:00",
            "modules": "daint-gpu",
            "environment_variables": {
                "CRAY_CUDA_MPS": "1",
                "OMP_NUM_THREADS": "$SLURM_CPUS_PER_TASK"
            }
        },
        "input_files": "in.df",
        "output_files": [
            "lmplog",
            "df.lammpstrj",
            "df.lammpstrj-part-1",
            "df.lammpstrj-part-2",
            "df.lammpstrj-part-3",
            "df.lammpstrj-part-4",
            "df.lammpstrj-part-5",
            "df.lammpstrj-part-6",
            "df.lammpstrj-part-7",
            "df.lammpstrj-part-8",
            "df.lammpstrj-part-9",
            "df.lammpstrj-part-10",
            "df.lammpstrj-part-11",
            "df.lammpstrj-part-12"
        ],
        "post_processing": "analyze.run"
    }
}