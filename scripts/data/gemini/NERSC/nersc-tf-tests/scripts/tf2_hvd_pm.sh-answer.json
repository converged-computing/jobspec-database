{
    "application": "Horovod",
    "details": {
        "framework": "TensorFlow 2",
        "benchmark": "synthetic benchmark",
        "resource_requirements": {
            "nodes": 1,
            "tasks_per_node": 4,
            "cpus_per_task": 32,
            "gpus_per_node": 4,
            "time_limit": "0:05:00",
            "gpu_type": "any (specified by -C gpu)",
            "job_name": "tf2-benchmark-pm",
            "run_mode": "singleton"
        },
        "libraries": [
            "Horovod",
            "MPI"
        ],
        "environment_variables": {
            "NCCL_DEBUG": "INFO",
            "TF_CPP_MIN_LOG_LEVEL": 3,
            "TF_CPP_MIN_VLOG_LEVEL": 1,
            "HOROVOD_LOG_LEVEL": "trace",
            "MPICH_RDMA_ENABLED_CUDA": 0,
            "MPICH_MAX_THREAD_SAFETY": "multiple",
            "MPICH_GPU_SUPPORT_ENABLED": 1,
            "MPIR_CVAR_GPU_EAGER_DEVICE_MEM": 0
        }
    }
}