{
    "application": "relion",
    "details": {
        "software": [
            "ctffind",
            "resmap",
            "cuda",
            "motioncor2",
            "openmpi",
            "cmake",
            "python"
        ],
        "version": {
            "ctffind": "4.1.14",
            "resmap": "1.1.4",
            "cuda": "12.2.1_535.86.10",
            "motioncor2": "1.6.4",
            "openmpi": "4.1.6",
            "cmake": "3.28.2",
            "python": "3.9"
        },
        "resource_requirements": {
            "cpu": {
                "cores": 8,
                "memory": "1G per core"
            },
            "gpu": {
                "gpus": 1,
                "cuda_architectures": [
                    80,
                    86
                ]
            },
            "time": "01:30:00",
            "partition": "preempted,gpu"
        },
        "build_options": {
            "gui": "OFF",
            "cuda": "ON",
            "altcpu": "FALSE",
            "cuda_texture": "ON",
            "double_prec_cpu": "ON",
            "double_prec_gpu": "OFF",
            "cmake_install_prefix": {
                "gpu": "/hpc/apps/relion/ver5.0-git-CU{C_ARCH}",
                "cpu": "${MY_BUILD_BASE}/tester-cpu"
            },
            "cmake_c_flags": "-O2 -g -lm",
            "cmake_cxx_flags": "-O2 -g -lm -lstdc++"
        }
    }
}