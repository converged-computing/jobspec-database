{
    "application": "SLURM",
    "details": {
        "software": [
            "OpenMPI",
            "CUDA",
            "Intel MPI"
        ],
        "resource_requirements": {
            "nodes": 2,
            "tasks": 4,
            "wallclock_time": "02:00:00",
            "partition": "tesla",
            "project": "SHEFFIELD-GPU",
            "gpu_binding": "Required for Turbostream (binds even MPI ranks to GPU0 and IB card0, and odd ranks to GPU1 and IB card1)",
            "openmp_threads": 1,
            "mpi_tasks_per_node": 2
        },
        "environment": {
            "modules": [
                "default-wilkes",
                "cuda/5.5",
                "openmpi/gcc/1.6.5"
            ],
            "workdir": "$SLURM_SUBMIT_DIR"
        },
        "application_executable": "bin/smaug",
        "application_options": "a"
    }
}