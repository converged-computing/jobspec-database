{
    "application": "Ray",
    "details": {
        "framework": "Ray",
        "resource_manager": "Cobalt",
        "dependencies": [
            "Python",
            "OpenSSH",
            "Dig"
        ],
        "resource_requirements": {
            "cpu": "{{ cpu_per_task }}",
            "gpu": "{{ gpu_per_task }}"
        },
        "environment_variables": {
            "COBALT_NODEFILE": "File containing list of nodes",
            "ACTIVATE_PYTHON_ENV": "Path to python environment activation script"
        },
        "configuration_options": {
            "port": 6379,
            "head_node": "First node in COBALT_NODEFILE",
            "worker_nodes": "Remaining nodes in COBALT_NODEFILE",
            "executable": "{{ exe }}"
        }
    }
}