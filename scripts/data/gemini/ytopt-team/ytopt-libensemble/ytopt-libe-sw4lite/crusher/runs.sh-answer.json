{
    "application": "libEnsemble",
    "details": {
        "framework": "libEnsemble",
        "communication": "local",
        "learner": "RF",
        "max_evals": 16,
        "resource_requirements": {
            "nodes": 4,
            "mpi_ranks_per_node": 4,
            "workers": 2,
            "application_timeout": 500,
            "modules": [
                "PrgEnv-amd/8.3.3",
                "cray-hdf5/1.12.0.7",
                "cmake",
                "craype-accel-amd-gfx90a",
                "rocm/4.5.2",
                "cray-mpich/8.1.14"
            ],
            "conda_environment": "ytl",
            "environment_variables": {
                "PMI_NO_FORK": 1,
                "HSA_IGNORE_SRAMECC_MISREPORT": 1,
                "PE_MPICH_GTL_DIR_amd_gfx90a": "-L${CRAY_MPICH_ROOTDIR}/gtl/lib",
                "PE_MPICH_GTL_LIBS_amd_gfx90a": "-lmpi_gtl_hsa",
                "PYTHONNOUSERSITE": 1
            }
        },
        "job_submission_system": "SLURM",
        "submission_script": "batch.job",
        "submission_script_options": {
            "account": "CSC383_crusher",
            "job_name": "ytopt",
            "output_file": "%x-%j.out",
            "time_limit": "00:50:00",
            "partition": "batch",
            "threads_per_core": 2,
            "nodes": "${nnds}"
        }
    }
}