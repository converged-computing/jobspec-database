{
    "application": "Maya",
    "details": {
        "software": [
            "Singularity",
            "Ruby",
            "Maya 2020"
        ],
        "modules": [
            "singularity/current",
            "ruby",
            "project/kent",
            "maya/2020-kent",
            "project/accad",
            "maya/2020-accad"
        ],
        "resource_requests": {
            "nodes": 1,
            "cores": "<%= cores %>"
        },
        "environment_variables": {
            "TMPDIR": "/tmp",
            "JOB_TMPDIR": "$TMPDIR",
            "BIND_DIRS": "$JOB_TMPDIR:/tmp,$JOB_TMPDIR/Autodesk:/var/opt/Autodesk",
            "TASK_START_FRAME": "${START_FRAMES[$PBS_ARRAYID]}",
            "TASK_END_FRAME": "${END_FRAMES[$PBS_ARRAYID]}"
        }
    }
}