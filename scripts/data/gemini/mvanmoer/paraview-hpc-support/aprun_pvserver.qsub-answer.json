{
    "application": "ParaView",
    "details": {
        "software": [
            "ParaView",
            "ncat",
            "aprun"
        ],
        "resource_requirements": {
            "PBS": {
                "job_control": "eo",
                "environment_variables": "V",
                "email": "$EMAIL",
                "email_options": "abe"
            },
            "modules": {
                "module_path": "/opt/modules/default/init/bash",
                "loaded_module": "paraview/$PV_VERSION"
            },
            "execution": {
                "nodes": "$NP",
                "ports": {
                    "MOM_PORT": "$LOGIN_PORT+1",
                    "server_port": "$MOM_PORT"
                },
                "hosts": {
                    "MOM_HOST": "/bin/hostname",
                    "LOGIN_HOST": "$LOGIN_HOST"
                }
            }
        }
    }
}