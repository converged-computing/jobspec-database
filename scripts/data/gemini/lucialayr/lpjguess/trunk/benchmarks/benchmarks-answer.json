{
    "application": "Benchmarking",
    "details": {
        "software": [
            "LPJ-GUESS",
            "CMake",
            "Make",
            "PBS",
            "SLURM",
            "Bbox",
            "Svn"
        ],
        "resource_requirements": {
            "cmake_command": "cmake -D CMAKE_BUILD_TYPE=Release",
            "make_command": "make -j2",
            "bbox_command": "bbox",
            "pp_walltime": "5:00:00",
            "dependency": [
                "afterok"
            ]
        },
        "usage": [
            "benchmarks [ -s ] [ -c ] [ -i TESTS | -x TESTS ] <workdir>",
            "Examples:",
            "1. Run all benchmarks:",
            "benchmarks /scratch/sally/benchmarks",
            "2. Run some benchmarks:",
            "benchmarks -i \"europe euroflux\" /scratch/sally/benchmarks",
            "3. Run all except some benchmarks:",
            "benchmarks -x \"global europe\" /scratch/sally/benchmarks"
        ],
        "options": [
            "-s Single machine mode, don't use PBS",
            "-c Compile only, don't run the tests",
            "-p Post processing only",
            "-r Generate printer friendly report",
            "-i Include only the specified tests",
            "-x Exclude the specified tests"
        ]
    }
}