{
    "application": "Nextflow",
    "details": {
        "scheduler": "Slurm",
        "environment": "miniconda",
        "environment_activation": "nf_env",
        "java_options": "-Xms1g -Xmx2g",
        "singularity_cache": "/path/to/singularity_cache/.singularity",
        "pipeline": "nf-core/pipeline",
        "version": "version",
        "profile": "profile",
        "work_directory": "${NF_PROJECT}/results/nf_work",
        "parameters_file": "${PARAM_DIR}/nf-params.json",
        "configuration_file": "${CONF_DIR}/custom.config"
    },
    "resource_requirements": {
        "cpu": 1,
        "memory": "3G"
    }
}