{
    "application": "funannotate",
    "software_requirements": [
        "funannotate",
        "augustus",
        "pasa"
    ],
    "resource_requirements": {
        "nodes": 1,
        "tasks": 16,
        "memory": "64gb",
        "partition": "intel",
        "time": "3-00:15:00",
        "output": "logs/train.%a.log",
        "job_name": "TrainFun"
    },
    "data_requirements": {
        "genomes": {
            "path": "genomes",
            "file": "masked.fasta"
        },
        "rnaseq": {
            "path": "lib/RNASeq",
            "files": [
                "Forward.fq.gz",
                "Reverse.fq.gz"
            ]
        },
        "samples": {
            "path": "samples.csv"
        }
    }
}