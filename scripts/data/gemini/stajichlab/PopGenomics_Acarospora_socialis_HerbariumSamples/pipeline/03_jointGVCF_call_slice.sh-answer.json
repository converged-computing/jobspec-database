            "MEM": "24g",
            "N": "SLURM_ARRAY_TASK_ID",
            "CPU": "SLURM_CPUS_ON_NODE"
        },
        "commands": [
            "samtools faidx",
            "perl",
            "wc",
            "awk",
            "bgzip",
            "tabix",
            "yq",
            "mkdir",
            "gatk GenomicsDBImport",
            "gatk GenotypeGVCFs",
            "gatk SelectVariants",
            "gatk VariantFiltration"
        ]
    }
}