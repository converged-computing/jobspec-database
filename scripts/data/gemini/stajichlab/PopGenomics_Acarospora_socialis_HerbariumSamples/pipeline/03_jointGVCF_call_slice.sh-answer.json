{
    "application": "GATK",
    "details": {
        "dependencies": [
            "samtools",
            "picard",
            "gatk/4",
            "bcftools",
            "parallel",
            "yq",
            "workspace/scratch"
        ],
        "modules": [
            "R",
            "java",
            "samtools",
            "picard",
            "gatk/4",
            "bcftools",
            "parallel",
            "yq",
            "workspace/scratch"
        ],
        "resources": {
            "memory": "24G",
            "nodes": "1",
            "tasks": "2",
            "partition": "intel",
            "scratch_directory": "$SCRATCH"
