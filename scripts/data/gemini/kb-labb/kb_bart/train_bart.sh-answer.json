{
    "application": "SLURM",
    "details": {
        "partition": "gpu",
        "job_name": "kb_bart",
        "memory": "40G",
        "gpus": "4",
        "nodes": "16",
        "exclude": "gn40",
        "cpus_per_gpu": "2",
        "time": "0-05:00:00",
        "output": "logs/faton.log",
        "environment_variables": [
            "MASTER_ADDR",
            "MASTER_PORT",
            "NPROC_PER_NODE",
            "NCCL_DEBUG",
            "PYTHONFAULTHANDLER",
            "DATA_DIRS"
        ],
        "singularity_image": "pytorch_21.03_bart.sif",
        "command": "bash train_bart_args.sh"
    }
}