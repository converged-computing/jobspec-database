{
    "application": "SLURM",
    "details": {
        "resource_requirements": {
            "nodes": 1,
            "cpus_per_task": 32,
            "output": "%x-%j.out",
            "error": "%x-%j.error",
            "array": "51-200%50"
        },
        "software_requirements": {
            "aws": "s3 cp",
            "samtools": "index",
            "conda": "activate",
            "manta": "runWorkflow.py",
            "smoove": "smoove.sh",
            "excord": "wget -c -q -O excord https://github.com/brentp/excord/releases/download/v0.2.2/excord_linux64",
            "bgzip": "bgzip -c"
        },
        "file_systems": {
            "shared": "/shared/",
            "scratch": "/scratch/"
        }
    }
}