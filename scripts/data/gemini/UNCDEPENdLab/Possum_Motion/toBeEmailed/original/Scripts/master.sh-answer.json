{
    "application": "PBS",
    "details": {
        "environment": "environment.sh",
        "scripts": [
            "PBS_scripts/master.sh",
            "PBS_scripts/simIDVars.sh",
            "PBS_scripts/queue.sh",
            "PBS_scripts/waiter.sh"
        ],
        "output_locations": {
            "logs": "scratch/sim/simID/logs",
            "possum_output": "scratch/sim/simID/possum_",
            "combined_outs": "scratch/sim/simID/combined",
            "final_nii": "scratch/sim/simID/Brain_${simID}.nii.gz"
        },
        "requirements": {
            "hosts": [
                "blacklight*",
                "wallace*",
                "gromit*"
            ],
            "variables": [
                "REALLYRUN",
                "QSUBCOMMAND",
                "JOBSIZE",
                "MotionFile",
                "ActivePrefix",
                "simID",
                "ARGS",
                "TotalCPUs",
                "BlockedSize",
                "VARDIR",
                "BrainFile",
                "MRFile",
                "RFFile",
                "PulseFile",
                "SCRATCH",
                "qsubScript"
            ]
        }
    }
}