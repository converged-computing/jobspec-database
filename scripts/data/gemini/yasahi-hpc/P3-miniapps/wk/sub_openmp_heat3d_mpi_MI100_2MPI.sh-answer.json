{
    "application": "Slurm",
    "details": {
        "job_name": "poi_adam",
        "partition": "amdrome",
        "node": "amd1",
        "nodes": 1,
        "tasks": 2,
        "gpus_per_node": 2,
        "cpus_per_task": 64,
        "gpus_per_task": 1,
        "time": "00:10:00",
        "output": "./stdout_%J",
        "error": "./stderr_%J",
        "modules": [
            "openmpi/4.1.1"
        ],
        "executable": "./wrapper_amd.sh",
        "program": "../build/miniapps/heat3d_mpi/openmp/heat3d_mpi",
        "arguments": [
            "--px 1",
            "--py 1",
            "--pz 2",
            "--nx 512",
            "--ny 512",
            "--nz 256",
            "--nbiter 1000",
            "--freq_diag 0"
        ],
        "environment_variables": {
            "ROCR_VISIBLE_DEVICES": "1,2,3"
        }
    }
}