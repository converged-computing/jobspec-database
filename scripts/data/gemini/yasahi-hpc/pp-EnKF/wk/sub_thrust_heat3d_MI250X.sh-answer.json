{
    "application": "heat3d-thrust",
    "software_requirements": [
        "PrgEnv-amd",
        "amd/5.4.3",
        "cray-mpich/8.1.26",
        "craype-accel-amd-gfx90a"
    ],
    "resource_requirements": {
        "account": "CFD173",
        "job_name": "heat3d-mpi",
        "output_file": "%x-%j.out",
        "time_limit": "00:10:00",
        "partition": "batch",
        "nodes": 1,
        "openmp_threads": 7,
        "mpich_gpu_support": "enabled"
    },
    "command": "../build/mini-apps/heat3d/thrust/heat3d-thrust --nx 512 --ny 512 --nz 512 --nbiter 1000 --freq_diag 0"
}