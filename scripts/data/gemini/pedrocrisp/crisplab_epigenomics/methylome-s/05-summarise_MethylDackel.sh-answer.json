{
    "application": "MethylDackel",
    "software_dependencies": [
        "conda",
        "methyldackel",
        "deeptools",
        "bedtools",
        "samtools",
        "awk",
        "sort",
        "sed",
        "mkdir"
    ],
    "resource_requirements": {
        "partition": "general",
        "requeue": "true",
        "walltime": "48hr",
        "memory": "80Gb",
        "cores": "variable"
    },
    "genome_reference": "required",
    "chrom_sizes_file": "required",
    "list_file": "required",
    "chr_or_genome": "required (either 'chromosome' or 'genome')"
}