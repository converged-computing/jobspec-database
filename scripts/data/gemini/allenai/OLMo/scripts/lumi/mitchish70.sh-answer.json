            "ROCM_PATH",
            "SINGULARITYENV_LD_LIBRARY_PATH",
            "PYTORCH_HIP_ALLOC_CONF",
            "HF_DATASETS_OFFLINE",
            "DATA_PATH",
            "CHECKPOINTS_PATH",
            "EVAL_DATA_PATH"
