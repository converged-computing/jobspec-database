        "script_to_run": "scripts/run_with_environment.sh",
        "python_script": "scripts/train.py",
        "configuration_file": "configs/mitchish70.yaml",
        "run_name": "${SLURM_JOB_ID}",
        "time_limit_seconds": 172800,
        "canceled_check_interval": 10,
