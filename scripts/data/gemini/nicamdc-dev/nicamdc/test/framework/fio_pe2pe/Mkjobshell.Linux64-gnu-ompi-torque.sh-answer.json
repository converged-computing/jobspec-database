{
    "application": "Torque",
    "details": {
        "resource_requirements": {
            "nodes": "${NNODE}",
            "ppn": "${NPROC}",
            "walltime": "05:00:00",
            "queue": "${rscgrp}"
        },
        "environment_variables": {
            "FORT_FMT_RECL": "400",
            "GFORTRAN_UNBUFFERED_ALL": "Y",
            "OMP_NUM_THREADS": "1"
        },
        "software_requirements": {
            "mpi_implementation": "mpirun --mca btl openib,self",
            "compiler": "intel C&fortran"
        },
        "data_dependencies": {
            "input": [
                "${TOPDIR}/data/grid/boundary/${dir2d_I}",
                "${TOPDIR}/data/reference/benchmark_spec/${dir2d_I}",
                "${TOPDIR}/data/mnginfo/${MNGINFO_I}"
            ],
            "output": [
                "${TOPDIR}/data/grid/boundary/${dir2d_O}",
                "${TOPDIR}/data/reference/benchmark_spec/${dir2d_O}",
                "${TOPDIR}/data/mnginfo/${MNGINFO_O}"
            ]
        }
    }
}