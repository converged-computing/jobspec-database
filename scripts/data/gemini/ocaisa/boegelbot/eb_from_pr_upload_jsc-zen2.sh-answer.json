{
    "application": "EasyBuild",
    "details": {
        "resource_requirements": {
            "nodes": 1,
            "tasks": 4,
            "time": "100:0:0",
            "output_file": "/project/def-maintainers/boegelbot/slurmjobs/slurm-%j.out"
        },
        "environment_variables": {
            "TOPDIR": "/project/def-maintainers",
            "EB_PREFIX": "$HOME/easybuild",
            "PYTHONPATH": "$EB_PREFIX/easybuild-framework:$EB_PREFIX/easybuild-easyblocks:$EB_PREFIX/easybuild-easyconfigs",
            "PATH": "$EB_PREFIX/easybuild-framework:$HOME/.local/bin:$PATH",
            "EASYBUILD_PREFIX": "$TOPDIR/$USER/Rocky8/zen2",
            "EASYBUILD_BUILDPATH": "/tmp/$USER",
            "EASYBUILD_SOURCEPATH": "$TOPDIR/$USER/sources",
            "EASYBUILD_GITHUB_USER": "boegelbot",
            "EB_PYTHON": "python3",
            "EASYBUILD_ACCEPT_EULA_FOR": ".*",
            "EASYBUILD_HOOKS": "$HOME/boegelbot/eb_hooks.py",
            "EASYBUILD_OPTARCH": "Intel:march=core-avx2",
            "EASYBUILD_CUDA_COMPUTE_CAPABILITIES": "7.0",
            "EASYBUILD_SET_GID_BIT": 1,
            "EASYBUILD_UMASK": "022"
        },
        "modules": {
            "use_modules": [
                "$TOPDIR/$USER/Rocky8/zen2/modules/all",
                "$EASYBUILD_PREFIX/modules/all"
            ]
        },
        "easybuild_options": {
            "from_pr": "$EB_PR",
            "debug": true,
            "rebuild": true,
            "robot": true,
            "upload_test_report": true,
            "download_timeout": 1000,
            "arguments": "$EB_ARGS"
        }
    }
}