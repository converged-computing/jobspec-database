{
    "application": "LSF",
    "details": {
        "resource_manager": "LSF (Load Sharing Facility)",
        "queue": "gpuv100 (GPU queue) or hpc (CPU queue)",
        "gpu_request": "num=1:mode=exclusive_process (1 GPU with exclusive access)",
        "cpu_request": "n=5 (5 CPU cores) and span[hosts=1] (cores on the same machine)",
        "memory_request": "rusage[mem=6GB] (6GB RAM per core)",
        "time_limit": "10:00 (10 hours)",
        "email_notification": "B (start) and N (end)",
        "modules": [
            "tensorflow/1.5-gpu-python-3.6.2"
        ],
        "script": "NN/drop_N_act_nhidden.py",
        "parameters": [
            "drop (0.30, 0.50)",
            "N (25, 250, 1000)",
            "act (relu, sigmoid)",
            "nhidden (1, 2, 3, 4, 5)"
        ]
    }
}