{
    "application": "tb-profiler",
    "details": {
        "software": [
            "tb-profiler",
            "awk",
            "readlink",
            "qsub"
        ],
        "resources": {
            "cluster": {
                "nodes": 1,
                "ppn": 12,
                "walltime": "2:00:00"
            },
            "environment": "source activate tbprofiler"
        },
        "input": {
            "reads_path": "single file or full path of reads",
            "out_path": "full path of output folder"
        },
        "output": {
            "out_dir": "results/"
        }
    }
}