{
    "application": "COBALT",
    "software_requirements": [
        "datascience/tensorflow-1.13",
        "datascience/mpi4py",
        "cray-hdf5-parallel/1.10.2.0",
        "python"
    ],
    "resource_requirements": {
        "nodes": "$COBALT_JOBSIZE",
        "mpi_ranks_per_node": 32,
        "threads_per_core": 4,
        "mpi_ranks": "NRANK_PER_NODE*NNODE",
        "threads_per_mpi_rank": "NTHREAD_PER_CORE*64/NRANK_PER_NODE"
    }
}