{
    "application": "Nextflow",
    "details": {
        "software": [
            "Singularity (version 3.1.1)",
            "nf-core/chipseq (version 1.1.0)",
            "MACS2 (for peak calling)",
            "bedtools (for genomic operations)"
        ],
        "resource_requirements": {
            "compute": {
                "nodes": 1,
                "tasks": 1,
                "cores": "$SLURM_CPUS_ON_NODE"
            },
            "memory": "6 GB",
            "time": "12:00:00",
            "storage": {
                "input": {
                    "design.csv": "Chip-seq experiment design file",
                    "../util/GRCm38.p6.genome.fa": "Mouse genome sequence",
                    "../../genomes/Mus_musculus/Gencode/M24/gencode.vM24.annotation.gtf": "Gene annotation file",
                    "mm10-blacklist.v2.bed": "Blacklist regions for filtering"
                },
                "output": {
                    "nextflow.out": "Nextflow pipeline log",
                    "nextflow.err": "Nextflow pipeline error log",
                    "analysis results": "Alignment files, peak calls, etc."
                }
            }
        },
        "other": {
            "scheduler": "SLURM",
            "email_notification": "Enabled for job completion and failure",
            "resume": "Enabled for restarting pipeline from a previous state"
        }
    }
}