{
    "application": "SLURM",
    "software": [
        "openmpi",
        "nccl",
        "python",
        "jq",
        "bash",
        "docker"
    ],
    "resource_requirements": [
        "nodes=2",
        "gpus-per-node=8",
        "ntasks-per-node=8",
        "exclusive",
        "mpi=pmi2",
        "distribution=arbitrary",
        "container-image=/nfs/scratch/nvcr.io+nvidia+pytorch+22.12-py3.sqsh",
        "container-mounts=/home/$USER/nccl-tests:/nccl,$LOCAL_MPI:$LOCAL_MPI",
        "MPIVARS_PATH=/usr/mpi/gcc/openmpi-*/bin/mpivars.sh or /opt/openmpi-*/bin/mpivars.sh",
        "NCCL_ALGO=Ring",
        "NCCL_IB_HCA=mlx5_5,mlx5_6,mlx5_7,mlx5_8,mlx5_1,mlx5_2,mlx5_3,mlx5_4,mlx5_14,mlx5_15,mlx5_16,mlx5_17,mlx5_9,mlx5_10,mlx5_11,mlx5_12",
        "UCX_NET_DEVICES=mlx5_0:1"
    ]
}