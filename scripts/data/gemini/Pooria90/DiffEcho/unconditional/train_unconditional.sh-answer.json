{
    "application": "SLURM",
    "details": {
        "scheduler": "SLURM",
        "job_name": "<class_name>",
        "account": "<your account>",
        "nodes": 1,
        "tasks": 2,
        "cpus_per_task": 4,
        "memory": "32G",
        "time": "20:00:00",
        "gpus_per_node": 1,
        "output_file": "<class_name>_out.txt",
        "error_file": "<class_name>_err.txt",
        "email": "<email address>",
        "modules": [
            "gcc/9.4.0",
            "python/3.8.10",
            "py-virtualenv/16.7.6"
        ],
        "virtualenv": "<path to the virtualenv>",
        "python_script": "train_unconditional.py",
        "script_arguments": [
            "--class_ultra",
            "<class_name>",
            "--num_epochs",
            "400"
        ]
    }
}