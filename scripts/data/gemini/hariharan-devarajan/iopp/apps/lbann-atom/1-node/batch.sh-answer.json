{
    "application": "lbann",
    "software": [
        "spack",
        "spectrum-mpi",
        "jsrun",
        "lbann"
    ],
    "resource_requirements": {
        "nodes": 1,
        "walltime": "1:00",
        "queue": "pdebug",
        "group": "asccasc",
        "environment_variables": [
            "LBANN_USE_CUBLAS_TENSOR_OPS=1",
            "LBANN_USE_CUDNN_TENSOR_OPS=1",
            "MV2_USE_RDMA_CM=0",
            "AL_PROGRESS_RANKS_PER_NUMA_NODE=2",
            "OMP_NUM_THREADS=8",
            "IBV_FORK_SAFE=1",
            "HCOLL_ENABLE_SHARP=0",
            "OMPI_MCA_coll_hcoll_enable=0",
            "PAMI_MAX_NUM_CACHED_PAGES=0",
            "NVSHMEM_MPI_LIB_NAME=libmpi_ibm.so",
            "RECORDER_EXCLUSION_FILE=$HOME/exclusion_prefix.txt"
        ],
        "libraries": [
            "librecorder.so"
        ]
    }
}