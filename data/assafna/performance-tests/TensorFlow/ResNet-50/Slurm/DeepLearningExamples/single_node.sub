#!/bin/bash
#SBATCH --job-name resnet50
#SBATCH --nodes 1

srun --container-image $1 \
 --container-mounts $2:/imagenet \
 --no-container-entrypoint \
 /bin/bash -c \
 "mpiexec --allow-run-as-root \
 --oversubscribe \
 --bind-to socket \
 -np $3 \
 python ./main.py \
 --mode $4 \
 --batch_size 256 \
 --data_dir /imagenet/result \
 --results_dir /results"
